JSON.generate(@scenarios.map do |scenario|
  response_hash = {
    id: scenario.id,
    name: scenario.name,
    description: scenario.description,
    actions: scenario.action_data.map do |action|
      action_response = { name: action[:name] }
      action_response.merge!(value: action[:value]) if action[:value]
      action_response
    end
  }
  response_hash
end)