if @note
  note_hash = ConversationDecorator.new(@note, ticket: @item).to_hash
  note_hash[:user] = @user.to_hash if note_hash[:user_id].present?
  note_hash.to_json
else
  {
    id: @item.display_id,
    description: @item.ticket_body.description_html,
    description_text: @item.ticket_body.description
  }.to_json
end
