JSON.generate(@items.map do |company|
  response_hash = company.to_hash
  response_hash.merge!(contacts_count: company.users.count) if @sideload_options.try(:include?, "contacts_count")
  response_hash.merge!(sla_policies: company.sla_policies.map(&:to_hash)) if @sideload_options.try(:include?, "sla_policies")
  response_hash
end)
