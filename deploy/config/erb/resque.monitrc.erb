<% (@num_workers || 1).times do |num| %>
check process resque_<%= @app_name %>_<%= num %>
  with pidfile /data/<%= @app_name %>/shared/pids/resque_<%= num %>.pid
  start program = "/usr/bin/resque <%= @app_name %> start <%= @rails_env %> resque_<%= num %>.conf" with timeout 90 seconds
  stop program = "/bin/env GRACE_TIME=14400 /usr/bin/resque <%= @app_name %> quit <%= @rails_env %> resque_<%= num %>.conf" with timeout 90 seconds
  if totalmem is greater than 2048 MB for 2 cycles then restart # eating up memory?
  group <%= @app_name %>_resque
<% end %>
