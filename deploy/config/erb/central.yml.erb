<% config = node[:ymls][:central] %>

<% if config %>
<%= node[:opsworks][:environment]%>:
<% if @envoy_egress_allowed && config[:envoy_egress] %>
  api_endpoint: <%= config[:envoy_egress][:endpoint_address] %>:<%= config[:envoy_egress][:endpoint_port] %><%= config[:envoy_egress][:endpoint_path] %>
<% else %>
  api_endpoint: <%= config[:api_endpoint] %>
<% end %>
  service_token: <%= config[:service_token] %>
  central_secret:
    twitter: 
      label: <%= config[:central_secret][:twitter][:label] %>
      key: <%= config[:central_secret][:twitter][:key] %>
      iv: <%= config[:central_secret][:twitter][:iv] %>
    facebook: 
      label: <%= config[:central_secret][:facebook][:label] %>
      key: <%= config[:central_secret][:facebook][:key] %>
      iv: <%= config[:central_secret][:facebook][:iv] %>
    installed_application: 
      label: <%= config[:central_secret][:installed_application][:label] %>
      key: <%= config[:central_secret][:installed_application][:key] %>
      iv: <%= config[:central_secret][:installed_application][:iv] %>
    account_additional_settings:
      label: <%= config[:central_secret][:account_additional_settings][:label] %>
      key: <%= config[:central_secret][:account_additional_settings][:key] %>
      iv: <%= config[:central_secret][:account_additional_settings][:iv] %>
<% end %>
