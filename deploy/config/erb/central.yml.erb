<% if node[:ymls][:central] %>
<%= node[:opsworks][:environment]%>:
  api_endpoint: <%= node[:ymls][:central][:api_endpoint] %>
  service_token: <%= node[:ymls][:central][:service_token] %>
  central_secret:
    twitter: 
      label: <%= node[:ymls][:central][:central_secret][:twitter][:label] %>
      key: <%= node[:ymls][:central][:central_secret][:twitter][:key] %>
      iv: <%= node[:ymls][:central][:central_secret][:twitter][:iv] %>
    facebook: 
      label: <%= node[:ymls][:central][:central_secret][:facebook][:label] %>
      key: <%= node[:ymls][:central][:central_secret][:facebook][:key] %>
      iv: <%= node[:ymls][:central][:central_secret][:facebook][:iv] %>
    installed_application: 
      label: <%= node[:ymls][:central][:central_secret][:installed_application][:label] %>
      key: <%= node[:ymls][:central][:central_secret][:installed_application][:key] %>
      iv: <%= node[:ymls][:central][:central_secret][:installed_application][:iv] %>
    account_additional_settings:
      label: <%= node[:ymls][:central][:central_secret][:account_additional_settings][:label] %>
      key: <%= node[:ymls][:central][:central_secret][:account_additional_settings][:key] %>
      iv: <%= node[:ymls][:central][:central_secret][:account_additional_settings][:iv] %>
<% end %>
