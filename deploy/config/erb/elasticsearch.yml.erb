<%= node[:opsworks][:environment] %>:
  :count_host: 
  <% node[:ymls][:elastic_search][:count].each do |es_details| %>
  - "<%= es_details[:host] %>:<%= es_details[:port] %>"
  <% end %>
  :count_v2_host:
  <% @count_old_host = node[:ymls][:elastic_search][:count_old_cluster] %>
  <% if @envoy_egress_allowed && @count_old_host.present? && @count_old_host[:envoy_egress].present? %>
  - <%= @count_old_host[:envoy_egress][:endpoint_address] %>:<%= @count_old_host[:envoy_egress][:endpoint_port] %>
  <% else %>
  <% node[:ymls][:elastic_search][:count_v2].each do |es_details| %>
  - "<%= es_details[:host] %>:<%= es_details[:port] %>"
  <% end %>
  <% end %>
  :hosts: 
  <% node[:ymls][:elastic_search][:ey].each do |es_details| %>
  - "<%= es_details[:host] %>:<%= es_details[:port] %>"
  <% end %>
  :aws_hosts: 
  <% node[:ymls][:elastic_search][:aws].each do |es_details| %>
  - "<%= es_details[:host] %>:<%= es_details[:port] %>"
  <% end %>
