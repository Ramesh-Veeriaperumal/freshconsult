defaults: &defaults
  namespace: "helpkit"
  compress: true
  socket_timeout: 0.5
  socket_max_failures: 2
  failover: false
  down_retry_delay: 10
  servers:
    <% node[:ymls][:dalli][:hosts].each do |internal_dns| %>
    - <%= internal_dns %>:11211
    <% end %>

<%= node[:opsworks][:environment] %>:
  <<: *defaults

slave:
  <<: *defaults
