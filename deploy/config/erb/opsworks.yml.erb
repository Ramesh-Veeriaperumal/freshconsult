<%= node[:opsworks][:environment] %>:
  access_config:
    access_key_id: "<%= node[:aws_config][:access_key_id] %>"
    secret_access_key: "<%= node[:aws_config][:secret_access_key] %>"
    <% if @settings[:req_shadowing].present? && @settings[:req_shadowing][:ssl_ca_path].present? %>
    ssl_ca_bundle: <%= @settings[:req_shadowing][:ssl_ca_path] %>
    <% end %>
  stack_details:
    stack_id: "<%= node[:stack_config][:stack_id] %>"
    app_id: "<%= node[:stack_config][:app_id] %>"
  deploy_details:
    command:
      name: "deploy"
    comment: "Triggered from ey deployment"