<div class="conv-wrapper">
    <div class="conversations" style="padding-top:20px;">
        <div id="tw-profile" class="tw-profile">
            <div id="user-infobox" class="bb-box">
              <div class="profile-pic image-lazy-load">
                <% if @klout_score > 0 %>
                  <i class='klout-icon'><%= @klout_score%></i>
                <% end %>
                <img src="/images/misc/profile_blank_thumb.jpg" 
                data-src="<%= normal_twt_avatar(@user[:image])%>" 
                data-src-retina="<%= bigger_twt_avatar(@user[:image])%>"/>
              </div>
              <div>
                <h4 class="profile-name">
                  <% if @user[:db] %>
                    <span class="active-cust"><%= font_icon "crown", :size => 14 %></span>
                  <% end %>
                  <%=@user[:name] %> 
                  <a href="http://twitter.com/<%=@user[:screen_name] %>" 
                    target="_blank" class="tw-handle">
                    @<%=@user[:screen_name] %>
                  </a>
                </h4>
                <% if @user[:twitter] %>
                  <p class="info-data profile-info"><%=@user[:twitter].description %>, 
                    <span><%=@user[:twitter].location %></span>
                  </p>
                  <% count_class = "hide" if @user[:twitter].followers_count == 0 %>
                  <span class="btn btn-twt-followers <%=count_class%>"> <%= pluralize(@user[:twitter].followers_count, 'Follower')%></span>
                <% end %>
                <% if @user[:show_followers] and @visible_handles.any? and privilege?(:reply_ticket) %>
                  <div class="btn btn-twt-follow twt-follow">
                    <span><%= t("social.streams.twitter.follow_as") %></span>
                    <ul class="followers" id="followers"> </ul>
                  </div>
                <% end %>
              </div>
            </div>
        </div>
        <%
          interactions_length = @interactions[:others].length
          tickets_length = @user_tickets.length
        %>
      
        <section  class="twt-tabs">
          <!-- First tab input and label -->
          <% if interactions_length > 0 %>
            <input id="t-1" name="tabbed-tabs" type="radio" checked="checked">
            <label for="t-1" class="tabs"><%= t("social.streams.twitter.interactions") %></label>
          <% end %>
          <!-- Second tab input and label -->
          <% if tickets_length > 0 %>
            <input id="t-2" name="tabbed-tabs" type="radio" 
              <% if interactions_length == 0 %> checked="checked" <% end %> >
            <label for="t-2" class="tabs"><%= t("social.streams.twitter.tickets") %></label>
          <% end %>
          
          <div class="tc">
            <div class="tab-1">
                <%= render :partial => 'social/streams/other_interactions', :locals => { :user_info_page => true } %>
            </div>
            <div class="tab-2">
                <%= render :partial => 'social/streams/recent_tickets' %>
            </div>
          </div>
        </section>
  </div>
</div>
