unless flash.empty?
  page << "jQuery('body,html').animate({scrollTop: 0}, 800);"
  show_ajax_flash page
else
  page.insert_html :bottom, "current_interaction", :partial => "social/streams/current_interaction"
  page << "jQuery('#tweet_div_#{@in_reply_to} span.conv-icon').addClass('hide')"
  page << "jQuery('#tweet_div_#{@in_reply_to} span.replied-icon').removeClass('hide')"
end
page << "jQuery('#reply_box_#{@in_reply_to}').hide();"