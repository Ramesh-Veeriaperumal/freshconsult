<ul class="ui-form">
  <li class="inline-field">
    <label class="caption">
      <div class="preview_pic">
        <%= image_tag(twitter_avatar(twitter_handle.screen_name)) %>
        <span class="tweet_pic"></span>
      </div>
      <%= content_tag(:h4, "@#{twitter_handle.screen_name}", :class => "title") %>
    </label>
    <div class="fields">
      <label><%=t('.search_keywords')%></label>
      <% content_for :onload_script do -%> 
        function lookup(searchString, callback) { }; 
        search_keys = $("social_twitter_handle_search_keys").value;

        if(search_keys == "") search_keys = [];
      	else search_keys = search_keys.split(",");

        var cachedBackend = new Autocompleter.Cache(lookup, {choices: 10}),
            cachedLookup = cachedBackend.lookup.bind(cachedBackend);

        new Autocompleter.MultiValue("social_twitter_handle_search_keys", cachedLookup, search_keys, { frequency: 0.1, acceptNewValues: true, allowSpaces: true });
        jQuery("li.search_field_item input").autoGrowInput();
      <%- end %>
      <div>
        <%= text_field "social_twitter_handle", :search_keys, { :value => twitter_handle.search_keys_string }   %>
      </div>
      <div class="info-data"> <%=t('.info_data')%> </div>
      <span class="seperator"></span>
      <label class="checkbox">
        <%= check_box "social_twitter_handle", :capture_mention_as_ticket, { :checked => twitter_handle.capture_mention_as_ticket } %> 	
        <%= t('.capture_mentions_msg') %>
      </label>
      <div class="info-data tabbed">
        <%= t('.capture_mentions_info') %>
      </div>				
      <span class="seperator"></span>
      <label class="checkbox">
        <%= check_box "social_twitter_handle", :capture_dm_as_ticket, { :checked => twitter_handle.capture_dm_as_ticket } %> 
        <%= t('.capture_dm_msg') %>
      </label>
      <div class="info-data tabbed">
        <%= t('.capture_dm_info') %>
      </div>
	  <!-- another one... -->
	  <span class="seperator"></span>
	  <label class="caption"><%=t('.dm_time_msg')%></label>
      <div class="fields">
      	<%= select(:social_twitter_handle ,:dm_thread_time, Social::TwitterHandle::DM_THREADTIME_OPTIONS ,{:selected => twitter_handle.dm_thread_time}) %>
      </div>
      <div class="info-data tabbed">
        <%=t('.dm_time_info')%>
      </div>	 	
	  <!-- --> 
      <% if current_account.products %>
        <span class="seperator"></span>
        <label class="caption"><%= t('.product') %></label>
        <div class="fields">
    	    <%= collection_select(:social_twitter_handle, :product_id, current_account.products, :id, :name, { :include_blank => '...', :selected => twitter_handle.product_id })%>
    	  </div>   
      <% end %>   
    </div> 
  </li>
</ul>