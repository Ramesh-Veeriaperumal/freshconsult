<% content_for :sidebar do -%><%- end %>
<h3 class="lead"><%= t('.twitter_settings_for_msg') %> <%= (@item.product ? @item.product.name : current_account.portal_name) %></h3>
<% form_for :twitter_handle, :url => social_twitter_path(@item), :html => { :method => :put } do |f| %>
	<%= render :partial => 'form', :locals => { :twitter_handle => @item } %>
	<div class="button-container pull-right">
    <%= link_to(t('remove'), social_twitter_path(@item), :method => 'delete', :confirm => t('social.twitter_handles.index.remove_handle_msg'), :class => "btn" ) %>
    <%= submit_tag t('update'), :class => "btn btn-primary"  %>
  </div>
<% end %>