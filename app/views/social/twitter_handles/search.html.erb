<% content_for :sidebar do -%><%-end %>
<h3 class="title">
	Twitter
</h3>
<div id="twitter_search_keys"> 	
	<h4 class="title">Search keys</h4>
	<% @search_keys.each do |search_key| %>	
		<%= link_to_function(h(search_key), "search_twitter('#{search_key}')", :class => "item_info") %>	
	<% end %> 	
</div>
<div class="page-list">
	<table>
		<tr>
			<td>
				<% @products.each do |product| %>
					<%= link_to_function product.name, "show_search(#{product.id})" %>
					<% unless product.twitter_handle.nil? %>
						<% product.twitter_handle.search_keys do |search_key| %>
							<%= link_to_function(h(search_key), "search_twitter('#{search_key}')", :class => "item_info") %>	
						<% end %>
					<% end %>
				<% end %>				
			</td>
			<td>
				<div id="twitter_search_results" class="list-group"></div>
				<script id="tweetTemplate" type="text/x-jquery-tmpl">
				  <div class="list-item">
						<div class="preview-pic">
							<img src="${profile_image_url}" />
						</div>
						<div class="primary-text">${text}</div>
						<div class="info-text">${from_user}</div>			
					</div>
				</script>
				</div>
			</td>
		</tr>
	</table>
</div>