<% content_for :sidebar do -%><%-end %>
<% unless @fb_pages.empty? %>
  <div class="floatr">
    <%= link_to "Add Facebook Page",  @fb_client.authorize_url(session[:state]) , :class => "uiButton special medium" %> 
  </div>
	<h3 class="title"><%= t('.title') %></h3>
  <ul class="admin_list">
    <% @fb_pages.each do |page| %>
      <li>
  		  <div class="item_actions">
  		  	<%= link_to (t(".reauthorize"),  @fb_client.authorize_url(session[:state]), :class => "button") if page.reauth_required %>
  		    <%= link_to t("edit"),  edit_social_facebook_url(page), :class => "button" %>
  		    <%= link_to(t('remove'), social_facebook_path(page), :method => 'delete', :confirm => "Are you sure you want to remove this facebook page?", :class => "button" ) %>    
  		  </div>
  		  <div class="preview_pic">
  		    <%= image_tag (page.page_img_url) %>
  		    <span class="fb_pic"></span>
  		  </div>
  		  <h2 class="title">
          <%= link_to "#{page.page_name}", edit_social_facebook_url(page) %> 
          &nbsp;<%if page.reauth_required %><span class="label label-important align-fix"> <%=t(".reauth_required")%></span><%end%>
		  </h2>
				<div class="intro">
					<%= link_to page.page_link, page.page_link, { :target => "_blank" } %>				
				</div>
      			
	  </li>
    <% end %>
  </ul>
<% else %>
  <%= render :partial => "engage_info" %>
<% end %>