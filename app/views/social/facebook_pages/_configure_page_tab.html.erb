  <span class="seperator"></span>
  <h3 class="sub-lead"><%= t('facebook_tab.page_tab_head') %></h3>
  <div class="info-data"><%= t('facebook_tab.config_info') %></div>
  <div class="fb_tab_container">
  <% if @item.reauth_required? %>
    <div class="fb_info_text"><%= t('facebook_tab.reauth') %></div>
  <% else %>
    <% if @fb_tab %>
      <% if @fb_tab.blank? %>
        <div class="fb_info_text"><%= t('facebook_tab.no_contact') %></div>
      <% else %>
        <%= content_tag(:div, t('facebook_tab.no_ssl'), :class=>"fb_info_text") unless current_account.ssl_enabled? %>
        <div id="after_config" class="row-fluid">
          <label class="control-label span2"><%= t('facebook_tab.tab_name') %></label>
          <div class="fb_field span9">
            <%= text_field_tag "custom_name", @fb_tab["name"], :class => "required auto fb_changed", :disabled => !current_account.ssl_enabled?, :size => "40" %>
          </div>
          <%= link_to t('facebook_tab.remove_tab'), remove_social_facebook_tabs_path(@item), :class=>"remove_fb" %>
        </div>
      <% end %>
    <% else %>
      <div class="configure">
        <a href="#" id="tab_config"><span class="fb_add"></span><b><%= t('facebook_tab.configure_tab') %></b></a>
        <div class="fb_tab_pic"></div>
      </div>
      <div id="after_config" class="row-fluid hide">
        <% if current_account.ssl_enabled? %>
          <%= hidden_field_tag "add_tab", "1" %>
          <label class="control-label span2"><%= t('facebook_tab.tab_name') %></label>
          <div class="fb_field span9">
            <%= text_field_tag "custom_name", "Support", :class => "required auto fb_changed", :size => "40" %>
            <a class="cancel_fb no_tab" href="#"><%= t('cancel') %></a>
          </div>
        <% else %>
          <div class="fb_info_text"><%= t('facebook_tab.no_ssl') %></div>
          <a class="pull-right cancel_fb" href="#"><%= t('facebook_tab.got_it') %></a>
        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>