    <%= link_to(t('remove'), social_facebook_path(@item), :method => 'delete', :confirm => t('social.facebook_pages.index.remove_facebook_page'), :class => "uiButton floatl" ) %>
    <%= submit_tag t('update'), :class => "uiButton"  %>
  </div>
<% end %>