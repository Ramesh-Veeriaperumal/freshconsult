<div id="falcon-invite-modal"  class="clearfix in" role="dialog" tabindex="-1" >
  <div id="falcon-invite-image" class="horizontal-split clearfix">
  </div>
  <div id="falcon-invite-message" class="horizontal-split clearfix">
    <h3><%= t('.greetings') %></h3>
    <p>
      <%= t('.invite_msg', :user_name => current_user.first_name).html_safe %>
    </p>

    <p class="muted"><%= t('.post_script') %></p>

    <%= link_to t('.try_new_look'), enable_falcon_path,
            :id=>"falcon_toggle", :method => :post %>
    <span class="muted" id="try-later"><%= t('.maybe_later') %></span>
  </div>
</div>