<div class="ui-login">
	<div class="ui-form">
		<% form_for @user_session, :url => user_session_path do |f| %>
		  <%= f.error_messages %>
		  <ul>
		  	<li class="largefield">
		  		<%= f.label :email %>
		  		<%= f.text_field :email, :class => "required text" %>
			</li>
			<li class="largefield">
		  		<%= f.label :password %>
		  		<%= f.password_field :password, :class => "text" %>
		  	</li>
		  	<li class="checkbox">
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me, "Remember me on this computer" %>
		  	</li>
		  	<li>
		  		<%= f.submit "Login", { :class => "uiButton"} %> or <%= link_to "Signin using Google", "/auth/open_id?openid_url=https://www.google.com/accounts/o8/id" %>
			</li>
			<li>
				<span class="seperator"></span>
				<div class="help_text"><b>Help:</b> <%= link_to("I forgot my password?", new_password_reset_path ) %> </div>
			</li>
		</ul>
		<% end %>
	</div>
</div>