<% content_for :layoutType do -%>clean<%- end %>
<div class="ui-form ui-login">
	<% form_for @user_session, :url => user_session_path do |f| %>
	  <%= f.error_messages %>
	  <h3 class="title">Login</h3>
	  <span class="seperator"></span>
	  <ul>
	  	<li class="largefield">
	  		<%= f.label :email %>
	  		<%= f.text_field :email, :class => "required text" %>
		</li>
		<li class="largefield">
	  		<%= f.label :password %>
	  		<%= f.password_field :password, :class => "text" %>
			<div class="help_text">
				( <%= link_to("Forgot password", new_password_reset_path ) %> ) </div>
	  	</li>
	  	<li class="checkbox">
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me, "Remember me on this computer" %>
	  	</li>
	  	<li>
	  		<%= f.submit "Login", { :class => "fdbutton"} %>
		</li>
	</ul>
	<% end %>
</div>