<div class="pagearea" id="Pagearea">
<% @page_title = 'Google Authentication Completed' %>
<%= show_flash %>	
<div class="action_area">
<% content_tag :button,  :onclick => 'javascript:window.close();', :class => 'uiButton' do %>
