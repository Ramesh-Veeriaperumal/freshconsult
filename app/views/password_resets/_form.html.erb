<%= form_for @user, :url => password_reset_path, :method => :put, :html => { :rel => "validate", :class => "form-portal"} do |f| %>
	<%= f.error_messages %>
	<fieldset>
		<div class="control-group">
			<%= f.label :password, t('create_password'), :class => "control-label required" %>
			<div class="controls">
				<%= f.password_field :password, :class => "required special password span6", :autocomplete => "off", :autofocus => true %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :password_confirmation, t('retype_password'), :class => "control-label required" %>
			<div class="controls">
				<%= f.password_field :password_confirmation, :class => "required special password_confirmation span6", 
					:autocomplete => "off" %>
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary"> <%= t('update_and_log_in') %> </button>
		</div>	
	</fieldset>
<% end %>