
<style>
	<%= render :file => "mailer/css/mailer.css" %>
</style>
<div class="body">
	<div class="mail_content">
		<b>New Reply</b> - <%= @post.topic.posts_count-1 %> replies in topic 
		<%= link_to @post.topic.title, 
					discussions_topic_url(@post.topic.id, :host => @host)%>
	</div>

	<div class="forum_content">
		<div class="profile_img">
			<img src="<%= profile_image_user_url(@user.id, :host => @host)%>" width="30" height="30" />
		</div>
		<div class="user_identity">
			<b class="user_name"><%= @user.name %></b><br />
		</div>
		<br />
		<div class="actual_content">
			<%= @body_html.html_safe %>
		</div>
		<br>
	</div>
	<div class="footer">
		<%= link_to "Reply", reply_discussions_topic_url(@post.topic.id, :host => @host, :anchor => 'reply-to-post'), :class => "reply" %>
		<div class="footer-text">
			<%= link_to "Turn Off", toggle_monitorship_url("topic", @post.topic.id, "unfollow", :host => @host) %>
			Reply notifications for this topic
		</div>
	</div>
	<br>
	<br>
</div>
