<div class="pageContent">
	<div class="crumbs" xstyle="margin-top:1.1em;">
	  <%= link_to 'Forums'[:forums_title], forums_path %> 
	  <%= link_to h(@forum.name), forum_path(@forum) %> 
	</div>
	
	
	<h3 id="new_topic" class="content_title"><%= 'New Topic'[] %> - <span class="subtitle"><%= 'by {user}'[:by_user, current_user.display_name] %></span></h3>
	
	<%= error_messages_for :post %>
	<%= error_messages_for :topic %>
	<% form_for :topic, :url  => category_forum_topics_path(@forum_category,@forum) do |f| -%>
		<%= render :partial => "form", :object => f %>
		<br />
		<%= submit_tag 'Post Topic'[], :class => "button", :or => link_to('Cancel'[], forum_path(@forum)) %>
	<% end -%>
	
	<%= javascript_tag "$('topic_title').focus();" %>
</div>	
