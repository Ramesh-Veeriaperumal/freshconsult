<div class="pageContent">
	<div class="crumbs" xstyle="margin-top:1.1em;">
	  <%= link_to t('forum.title'), forums_path %> 
	  <%= link_to h(@forum.name), forum_path(@forum) %> 
	</div>
	
	
	<h3 id="new_topic" class="content_title"><%= t('topic.new') %> - <span class="subtitle"><%= 'by {user}'[:by_user, current_user.display_name] %></span></h3>
	
	<%= error_messages_for :post %>
	<%= error_messages_for :topic %>
	<% form_for :topic, :url  => category_forum_topics_path(@forum_category,@forum), :html => {:multipart => true, :id => "post-form"} do |f| -%>
		<%= render :partial => "form", :object => f %>
		<br />
		<%= submit_tag t('topic.post'), :class => "button", :or => link_to(t('cancel'), forum_path(@forum)) %>
	<% end -%>
	
	<%= javascript_tag "$('topic_title').focus();" %>
</div>	
