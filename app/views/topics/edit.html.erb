<h3 class="title"><%= 'Edit Topic'[] %></h3>
<%= error_messages_for :topic %>
<% form_for :topic,
     :url  => category_forum_topic_path(@forum_category, @forum, @topic),
     :html => { :method => :put } do |f| -%>

	<%= render :partial => "form", :object => f %>
	
	<div class="button-container">
		<div class="floatl">
			<%= link_to(t('delete'), category_forum_topic_path(@forum_category,@forum, @topic) , :class => "uiButton red" , :method => :delete, :confirm => "#{t(:delete_topic_msg)}?") %> 
		</div>
		<%= f.submit 'Save', :class => "uiButton" %>
		<%= link_to ('Cancel'[:cancel] , category_forum_topic_path(@forum_category,@forum, @topic), :class => "uiButton grey" ) %> 
	</div>
<% end -%>