<% content_for :layoutType do %><% end %>
<% @page_title = @topic.title %>
<% @monitoring = logged_in? && !Monitorship.count(:id, :conditions => ['user_id = ? and topic_id = ? and active = ?', current_user.id, @topic.id, true]).zero? %>

<% content_for :sidebar do -%>
	<% if logged_in? && current_user.has_manage_forums? && @forum.ideas? %>
	<div class="rtCnt">
		<div class="rtDetails_forum">

		<h4 class="title">Moderate</h4>
		<%= link_to(t('connect_ticket'), new_helpdesk_ticket_path(:topic_id => @topic.id), :class => "fdbutton") if logged_in? and @topic.ticket_topic.nil?  %>
		<%= link_to(h(@topic.ticket.subject), helpdesk_ticket_path(@topic.ticket)) unless @topic.ticket_topic.nil? %>
		
		<% if logged_in? %>
			<% form_tag category_forum_topic_monitorship_path(@forum_category,@forum, @topic) do -%>
			<div class="checkbox">
			  <input id="monitor_checkbox" type="checkbox" <%= "checked='checked'" if @monitoring %> 
				   onclick="if (this.checked) {<%= remote_function :url => category_forum_topic_monitorship_path(@forum_category,@forum, @topic) %>} else {<%= remote_function :url => category_forum_topic_monitorship_path(@forum_category,@forum, @topic), :method => :delete %>}" />
			  <label id="monitor_label" for="monitor_checkbox"><%= @monitoring ? 'You are currently following this topic'[] : 'Follow this topic'[] %></label>
			  <%= hidden_field_tag '_method', 'delete' if @monitoring %>
			  <%# submit_tag :Set, :id => 'monitor_submit' %>
			</div>
			<% end %>
		<% end %>
		<% if logged_in? && current_user.has_manage_forums? && @forum.ideas? %>
		<div> Mark this idea as </div>
		<div class="mark_action">
			 <% Topic::IDEAS_STAMPS_OPTIONS.each do |k,v| %>
			 	<% class_name = "stamp_type_#{v}" %>
			 	<%if @topic.stamp_type != v %>
					<%= link_to (k , update_stamp_category_forum_topic_path(@forum_category,@forum,@topic,:stamp_type => v),  :method=>:put, :class => class_name )   %>
				<%else%>
					<%= link_to (k , remove_stamp_category_forum_topic_path(@forum_category,@forum,@topic), :method=>:put , :class => class_name + " active")   %>
				<%end%>
			<% end %>
	    </div>
			<% if @topic.locked? %>
				<div>
				    <%= image_tag "savage_beast/clearbits/lock.gif", :class => "icon grey", :title => "Topic locked"[:topic_locked_title] %>
				    <%= 'This topic is locked'[:locked_topic] %>
				</div>
			<% else %>
			<% end -%>
		<% end %>
		</div>
	</div>
	<% end %>
<% end %> 
		<div class="breadcrumbs" style="display:none;">
		  <%= link_to "Forums"[:forums_title], category_path(@forum_category) %>
		  <%= link_to h(@topic.forum.name), category_forum_path(@forum_category,@forum) %> 
		  	<% page=session[:forum_page] ? session[:forum_page][@topic.forum.id] : nil %>
		  	<% if page and page!=1 %>
				  <small>
				  	(<%= link_to 'page {page}'[:page, page], forum_path(:id => @topic.forum, :page => page) %>)
				  </small>
		  	<% end %>
		</div>

		<div class="request_details">

	    	<div class="requestCnt">
	    		<% if @forum.ideas? %>
		    		<div class="mark_action">
							<% if @topic.stamp_type %>
								<% class_name = "stamp_type_#{@topic.stamp_type}" %>
								<div class="<%=class_name%> stamp"><%= h(@topic.stamp_name) %></div>
							<% end %>
					</div>
				<% end %>
			        <h3 class="title"><%= h @topic.title  %></h3>	  
			        <em>
			          <% if @topic.locked? %>
					  	<span>(<%= 'locked'[] %>)</span>
					  <% end %>
					</em>
					
					<% if logged_in? %>
					<div class="floatr" style="display:none;">
						<% form_tag category_forum_topic_monitorship_path(@forum_category,@forum, @topic), :style => 'margin-top:0em; float:right;' do -%>
							<div>
							  <input id="monitor_checkbox" type="checkbox" <%= "checked='checked'" if @monitoring %> 
							    onclick="if (this.checked) {<%= remote_function :url => category_forum_topic_monitorship_path(@forum_category,@forum, @topic) %>} else {<%= remote_function :url => category_forum_topic_monitorship_path(@forum_category,@forum, @topic), :method => :delete %>}" />
							  <label id="monitor_label" for="monitor_checkbox"><%= @monitoring ? 'Monitoring topic'[] : 'Monitor topic'[] %></label>
							  <%= hidden_field_tag '_method', 'delete' if @monitoring %>
							  <%= submit_tag :Set, :id => 'monitor_submit' %>
							  		
							</div>
						<% end %>
					</div>	
					<% end %>
					
				<% first_post = @posts.first %>
				<div class="description">
					<div class="user_details">
						<%= user_avatar( @topic.user.avatar ) %>
		          		<div> <%=t('posted_by')%> <b><%= @topic.user.display_name %></b> </div>
						<div> <%=t('created_on')%> <%= h(@topic.created_at.strftime("%B %e %Y at %I:%M %p")) %> ( <%=time_ago_in_words(@topic.created_at)%> ago ) </div>
		        	</div>
					<div class="ticket_actions action_icons">
						<% link_to(image_tag("/images/spacer.gif"), category_forum_topic_monitorship_path(@forum_category,@forum, @topic), :method => :post, :class => "monitor", :title => "Monitor this ticket" ) if @monitoring %>
						<% link_to(image_tag("/images/spacer.gif"), category_forum_topic_monitorship_path(@forum_category,@forum, @topic), :method => :delete, :class => "monitor_active",  :title => "Stop monitoring this ticket" ) if not @monitoring %>
	
						<% if logged_in? %>
						  <div class="action_buttons">
						     <% if @topic.editable_by?(current_user) -%>
						        <%= link_to(t('edit'), edit_category_forum_topic_path(@forum_category,@forum, @topic) , :class => "last" ) %> 
						        <% link_to(t('delete'), category_forum_topic_path(@forum_category,@forum, @topic) , :class => "last" , :method => :delete, :confirm => "#{t(:delete_topic_msg)}?") %>
	 					     <% end %>
						  </div>		
					    <% end %>
						
					</div>
		        	 
					<div class="details min_height">
						<%= first_post.body_html %>
					</div>
					
					<% unless @topic.forum.announcement? %>
					<div class="status" id="voting_container"> 
						  <%= render (:partial => "/forum_shared/topic_vote", :object => @topic) if logged_in? %> 
					</div>
					<% end %>
				</div>
	    	</div>
			<div class="alignright">
				<%= link_to_function (t('reply_topic'), "ReplyForm.init()", :class => "uiButton") if logged_in? %>
			</div>
			<% if (@posts.size > 1) %>
							
				<h3 class="subtitle">				
					<%=t('comments')%>
				</h3> 
				<div class="requestCnt">
					<% last_post = @posts.last %>
					<% @posts.each do |post| %>
						<% unless (post == first_post) %>
							<%= render :partial => "forum_shared/post", :object => post %>
						<% end %>
						<%= will_paginate @posts %>
					<% end %> 
				</div>  
			<% end %>
			<div> 
				<% if logged_in? %>
				<div id="edit"></div>
				<div id="reply" class="editbox" style="display:none;">
				<div class="request_panel">
				  <%= content_tag 'p', h(flash[:bad_reply]), :class => 'notice' if flash[:bad_reply] %>
				  <% form_for :post, :url => posts_path(:category_id => @forum_category,:forum_id => @forum, :topic_id => @topic, :page => @topic.last_page) do |f| -%>
				  <ul class="note_form ui-form">
				  	<li>
				  		<h3 class="title">Reply to this Topic</h3>
				  	</li>
				    <li>
				       <%= f.text_area :body, :rows => 8 %>
				    </li>
				    <li style="display:none;">			
				        <div class="info_data"><%= t('formatting_help') %></h5></div>
				        <div class="info_data">
				          <%= '*bold*'[:formatting_bold] %>, &nbsp;, 
						  <%= '_italics_'[:formatting_italics] %>, &nbsp; 
						  <%= '(quotes)'[:formatting_blockquote] %>, &nbsp;
						  "IBM":http://www.ibm.com
				          <%= '* or # <span>(lists)</span>'[:formatting_list] %>
				        </div>
					</li>
					<li class="alignright">
				      <%= submit_tag t('save_reply'), :class => "button" %> 
					  <%= link_to_function t('cancel'), "$('reply').hide()", :class => "button" %>
					</li>
				  </ul>
				  <% end -%>
				</div>
				</div>
				<% end %>
		 
			</div>	
		</div>