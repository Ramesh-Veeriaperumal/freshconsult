<%= image_tag fav_icon_url %>
<div style="display:none;">
	<% fields_for "#{field_name}[fav_icon_attributes]", item.fav_icon do |fav_icon_form| %>
    	<%= fav_icon_form.file_field :content, :class => "fileAdminUpload", :id => "portal-fav-icon" %>
	<% end %>
</div>
<div class="logo-actions">
	<%= link_to_function(t("account.change_favicon"), "jQuery('#portal-fav-icon').click();") %>
  	<% if item.fav_icon.present? %>
  		<br />
		<% default_favicon_url = item.main_portal? ? delete_favicon_account_path : delete_favicon_admin_product_path(item) %>
  		<%= link_to(t("account.use_default"), default_favicon_url,
                :confirm => t('fav_delete_msg'), :method => :delete) %>
    <% end %>
</div>
