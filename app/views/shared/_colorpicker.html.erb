<script src="/javascripts/mColorPicker.js" type="text/javascript"></script>
<% javascript_tag do %>		  
	jQuery.validator.addMethod("hexcolor", function(value, element) {
	  var regColorcode = /^(#)?([0-9a-fA-F]{3})([0-9a-fA-F]{3})?$/;
	  colorValid = regColorcode.test(value);
	  
	  if(value != '' && value[0] != '#')
		element.value = '#' + value;

	 if (value.length==4 && value[0]=='#')
	 	element.value= value + value[1] + value[2] + value[3];
		
	  return colorValid; 
	}, "Please enter a valid color value");
	
	jQuery.validator.addClassRules("color_field", {
	  hexcolor: true
	});	
<% end %>