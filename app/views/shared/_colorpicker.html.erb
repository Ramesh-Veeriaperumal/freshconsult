<%= javascript_include_tag "mColorPicker.min.js" %>
<% javascript_tag do %>
	jQuery.fn.mColorPicker.init.enhancedSwatches = false;
	jQuery.fn.mColorPicker.init.allowTransparency = false;
	jQuery.fn.mColorPicker.init.showLogo = false;
	jQuery.fn.mColorPicker.defaults = {
		 imageFolder: '../images/colorpicker/',
		    swatches: [
		      "#ffffff",
		      "#ffff00",
		      "#00ff00",
		      "#00ffff",
		      "#0000ff",
		      "#ff00ff",
		      "#ff0000",
		      "#4c2b11",
		      "#3b3b3b",
		      "#000000"
		    ]
		  };
		  
	jQuery.validator.addMethod("hexcolor", function(value, element) {
	  var regColorcode = /^(#)?([0-9a-fA-F]{3})([0-9a-fA-F]{3})?$/;
	  colorValid = regColorcode.test(value);
	  return colorValid; 
	}, "Please enter a valid color value");
	
	jQuery.validator.addClassRules("color_field", {
	  hexcolor: true
	});
<% end %>