	<% content_tag :h3, :class => "title front_page_title" do
				concat t('start_typing_a_question')                                                                
				if allowed_in_portal?(:anonymous_tickets)
					concat content_tag( :span, t('or'), :class => "or-icon")
					concat link_to(t('header.submit_a_ticket'), new_support_ticket_path, :class => "uiButton special") 
				end 
	 	 end %>
		<% if !allowed_in_portal?(:anonymous_tickets) %>
			<%= content_tag(:p, t(feature?(:signup_link) ? 'no_anonymous_tickets' : 'no_signup', {:signup => new_support_registration_path, :login => login_path}), :class => "title force_signup") %>
		<% end %>

	<div class="search-grey-box  set-width-99 ignore-margin-20">
		<%= render :partial => "/search/pagesearch", :locals => { :placeholder => t('portal.search.placeholder') } %>
	</div>
	<div class="two_col_cont">
		<% if allowed_in_portal? :open_solutions %>
			<div class="left_col"> 
				<%= content_tag( :h3, t('solution.title'), :class => "title" ) %> 
				<div class="ssp_category_list">	
				<% @categories.each do |category| %>
					<div class="<%= cycle('odd', 'even') %>"> 
						<%= link_to category.name, category %>
						<%= content_tag(:span, truncate(category.description, :length => 80)) %> 
					</div> 
				<% end %>
				</div>
			</div>
		<% end %>
		<% if feature?(:forums) && allowed_in_portal?(:open_forums) %>
			<div class="right_col">
				<% unless (@topics.blank?) %> 
					<%= content_tag( :h3, t('recent_forum_posts'), :class => "title" ) %>  
					<ul class="list_with_icon">
						<% @topics.each do |topic|  %>
							<li>
								<span class="forum-bullet"></span>
								<%= link_to h(topic.title), discussions_topic_path(topic.id), :class => "title" %> 
								<div class="info_data"> by <%= h(topic.posts.last.user.name) %> on <%= formated_date(topic.replied_at) %> </div>
							</li>	
						<% end %> 
					</ul> 
				<% end %>
			</div>
		<% end %>
		
	</div>  
 