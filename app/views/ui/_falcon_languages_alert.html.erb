<div class="alert-message hide" id="language-message">
  We are working on supporting non-english languages in the Mint experience.
  <br />
  <a href="javascript: switchToOld()">Click here</a> to try non-english languages in old Freshdesk
</div>

<script type='text/javascript'>
  toggleMessage = function() {
    jQuery('#language-message').slideToggle();
  }

  switchToOld = function() {
    var _url = '/disable_falcon';
    var parent = window.top;

    jQuery.post(_url)
          .then(function() {
             jQuery.cookie('falcon_enabled', false);
             parent.location = '/helpdesk'
          });
  }
</script>
