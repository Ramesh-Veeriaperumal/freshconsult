<h1>New customer</h1>

<% form_for(@customer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :cust_identifier, "Customer Number" %><br />
    <%= f.text_field :cust_identifier %>
  </p>
  <p>
    <%= f.label :owner_id %><br />
    <!--%= f.text_field :owner_id %-->
   <%= f.collection_select :owner_id, Helpdesk::Authorization.find_all_by_permission(:manage_tickets), :user_id, :name, {:include_blank => 'Nobody'}, :class => "select" %>
    
  </p>
  <p>
    <!--%= f.label :account_id %-->
    <%= f.hidden_field :account_id %>
  </p>
  <p>
    <%= f.label :cust_type, "Type" %><br />
    <%= f.select :cust_type, Customer::CUST_TYPE_OPTIONS, :class => "select" %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', customers_path %>