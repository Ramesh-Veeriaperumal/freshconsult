<% content_for :sidebar do %>
	<div class="rightSubContainers">
		<h3 class="title">Company info</h3>
		<div>
			<%= @customer.description %>
		</div>
	</div>
	
	<div class="rightSubContainers">
		<h3 class="title">People from "<%= @customer.name %>"</h3>
		<div>	  
		  <% @customer.users.each do |user| %>
			<%=link_to (h(user.name),user, :class => 'username')%> , <%=user.job_title%> 
		  <%end%>
		</div>
	</div>
	
	<div class="rightSubContainers">
		<h3 class="title">Products used</h3>
		<ul class="ui-list_with_icon">	  
		  <li>Basecame</li>
		  <li>Campfire</li>
		</ul>
	</div>
	
	<div class="rightSubContainers">
		<h3 class="title">SLA Policy</h3>
		<ul class="ui-list_with_icon">	  
		  <li>Default Sla policy</li>
		</ul>
		<a href="#" class="button"> Change </a>
	</div>
	
<% end %>
<div class="infoPage company">
	<img src="/images/icons/building.png" class="building_pic" width="32px" height="32px" />
	<h3 class="info_title">		
		<%=h @customer.name %>
	</h3>
	<div class="tag_list">
		<a href="#"><%= @customer.name %></a>
	</div>
	<div class="actionsRight">
		<%= link_to 'Edit this company', edit_customer_path(@customer), :class => "button" %> 
		<%= link_to 'Back', customers_path, :class => "button" %>		
