<% content_for :sidebar do -%><%- end %>
<h3 class="title"><%=t('company.edit')%> <span class="info_data">"<%=@customer.name%>"</span></h3>
<% form_for(@customer) do |f| %>
	<%= render :partial => "form", :locals => { :f => f } %>
	<div class="button-container">
	   <div class="floatl">
    <% if privilege?(:delete_contact) %>
			<%= link_to (t('delete'), @customer, :confirm => "#{t('company.info1')}?", :method => :delete, :class => "uiButton red" ) %>
    <% end %>
	   </div>
	   <%= f.submit t('save'), {:class => "uiButton"} %> 
	   <%= link_to t('cancel'), customer_path(@customer), :class => "uiButton grey" %>
	</div>
<% end %>