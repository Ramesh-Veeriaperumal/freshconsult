<h3 class="title">Edit Company <span class="info_data">"<%= @customer.name %>"</span></h3>
<% form_for(@customer) do |f| %>
	<%= render :partial => "form", :locals => { :f => f } %>
	<div class="button-container">
	   <div class="floatl">
			<%= link_to ('Delete', @customer, :confirm => 'Are you sure you want to delete this company?', :method => :delete, :class => "uiButton red" ) %>
	   </div>
	   <%= f.submit 'Save', {:class => "uiButton"} %> 
	   <%= link_to 'Cancel', customer_path(@customer), :class => "uiButton grey" %>
	</div>
<% end %>