<div class="pageContent">
	<h3 class="content_title">Editing customer</h3>
	<span class="seperator"></span>
	<% form_for(@customer) do |f| %>
	  <%= f.error_messages %>	
	  <ul class="ui-form">
		  <li>
	    <%= f.label :name, "Company name" %>
	    <%= f.text_field :name %>
	  </li>	  
	  <li>
	    <%= f.label :description %>
		<label class="overlabel" for="comp_desc">More info regarding this company like address, phone number, website etc.</label>
	    <%= f.text_area :description, :id => "comp_desc", :class => "smallpara"  %>
	  </li>	
	  <li>
	  	<%= f.label :note, "Notes" %>
		<label class="overlabel" for="comp_notes">
			Add specific notes regarding this company<br /> 
			example - we are negotiating a 100K deal with this company
		</label>
	   
		<%= f.text_area :note, :id => "comp_notes", :class => "smallpara"  %>
	  </li>
	  <li>
	  	<%= f.label :domains, "Domain Names for this company" %>		
		<%= f.text_field :domains, :id => "domain_names", :class => "text"  %>
		<span>
			<b>Note:</b> Freshdesk will automatically associate Contacts with this company if email ids contain these domains 
		</span>
	  </li>
	 
	</ul>  
	
	<div class="button-container">
	   <%= f.submit 'Update', {:class => "fdbutton"} %>
	   <%= link_to 'Back', customers_path, :class => "fdbutton grey" %>
	</div>
	<% end %>
	
	<!--%= link_to 'Show', @customer %--> 
	

</div>