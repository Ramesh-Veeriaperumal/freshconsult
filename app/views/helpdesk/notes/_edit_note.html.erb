<%= include_tiny_mce_if_needed %>
<% form_for [@parent, @item], :html => { :id => "Edit_Note_#{@item.id}" } do |f| %>
	<ul>
		<li>
			<%= f.hidden_field :source , :value => Helpdesk::Note::SOURCE_KEYS_BY_TOKEN["note"]%>
			<%= f.text_area :body_html, :value => @item.body_html, :class => "mceEditor" %>
		</li>
		<li class="button-container">
			<%= submit_tag(t("update"), :class => "uiButton small") %>
			<%= button_to_function(t('cancel'), "jQuery('#Edit_Note_#{@item.id}').slideUp();jQuery('#note_details_#{@item.id}').show()", :class => "uiButton" ) %>
		</li>
	</ul>
<% end %>
<% javascript_tag do %>
	jQuery(document).ready(function(){
		jQuery("#Edit_Note_<%= @item.id %>")
			.validate();
	});
<% end %>