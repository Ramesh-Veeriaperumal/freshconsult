<% content_for :pagefixed do %>
  <script src="/javascripts/helpdesk/expanding_textarea.js" type="text/javascript"></script>
  <script src="/javascripts/helpdesk/multifile.js" type="text/javascript"></script>
<% end %>

<% content_for :sidebar do %>
<% end %>

<% content_for :main_panel_title do %>
  Edit Note
<% end %>

<% content_for :main_panel_actions do %>
  <%= link_to "Delete this note", helpdesk_ticket_note_path(@parent.display_id, @item.id), :method => :delete %>
<% end %>

<% content_for :main_panel_toolbar do %>
<% end %>

<% content_for :main_panel_content  do %>
  <%= render(:partial => '/helpdesk/shared/note_form', :locals => {
    :id => 'add-note', 
	  :cntid => 'cnt-top',
    :extra_class => 'note-edit',
    :note => [@parent, @item], 
    :submit => "Save Changes",
    :label => true })%>



  <div class="attachment-list-container">
    <%= content_tag('h5', 'Attachments') unless @item.all_attachments.empty? %>
    <table class="attachment-list">
      <%= render(
        :partial => '/helpdesk/shared/attachment', 
        :collection => @item.all_attachments,
        :locals => {:show_delete => true, :url => [@item] }) %>
    </table>
  </div>

<% end %>

<%= render :partial => "/helpdesk/shared/main_panel" %>
