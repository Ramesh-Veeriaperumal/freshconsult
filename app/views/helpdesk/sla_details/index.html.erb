<h1>Service Level Agreements(SLA)</h1>

<table>
  <tr>
    <th>Name</th>
    <!--th>Account</th-->
    <!--th>Priority</th-->
 
	<th>Response time</th>
    <th>Resolution time</th>
    <th>Escalateto</th>
  </tr>

<% @helpdesk_sla_details.each do |sla_detail| %>
  <tr>
    <td><%=h sla_detail.name %></td>
    <!--td><%=h sla_detail.account_id %></td-->
    <!--td><%=h sla_detail.priority %></td-->
	
	<% form_for (@helpdesk_sla_details), :url => { :action => "update" }  do |f| %>
    <!--td><%=h sla_detail.response_time %></td-->
	<td><%= f.select :response_time , Helpdesk::SlaDetail::RESPONSETIME_OPTIONS, {:selected =>sla_detail.response_time}, {:onchange => "this.form.submit()"} %></td>
    <td><%= f.select :resolution_time, Helpdesk::SlaDetail::RESOLUTIONTIME_OPTIONS, {:selected =>sla_detail.resolution_time}, {:onchange => "this.form.submit()"} %>
    	
		<!--%=h sla_detail.resolution_time %--></td>
    <td>
    <%= f.collection_select :escalateto, User.find_all_by_permission(current_account, :manage_tickets), :id, :name, {:selected =>sla_detail.escalateto,:include_blank => 'Nobody'}, {:onchange => "this.form.submit()"} %>

    	
		<!--%=h sla_detail.escalateto %--></td>
	
	
	
	<%= f.hidden_field :id, { :value => sla_detail.id } %>

	
	<% end %>
    <!--td><%= link_to 'Show', sla_detail %></td>
    <td><%= link_to 'Edit', edit_sla_detail_path(sla_detail) %></td>
    <td><%= link_to 'Destroy', sla_detail, :confirm => 'Are you sure?', :method => :delete %></td-->
  </tr>
<% end %>
</table>

<br />

