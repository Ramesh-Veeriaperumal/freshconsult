<%
  show_info ||= false
	r = reminder
	text = "#{h(r.body)} #{(r.ticket && show_info ? link_to("Re: #{truncate(r.ticket.subject)}", r.ticket, :class => "request_link", :'data-pjax' => '#body-container') : '')}";
%>	
<li id="reminder_<%=r.id%>">  
    <%  form_action = (r.deleted) ? restore_helpdesk_reminder_path(r) : complete_helpdesk_reminder_path(r) %>
    <%= form_tag form_action, :method => 'put', :remote => true  do %>
      <%= hidden_field_tag "show_info", show_info if show_info %>
      <%= check_box_tag("", 1, r.deleted , :onchange => %{ jQuery(this.form).trigger("submit"); }) %>
    <%  end %>
    <%= link_to t('delete'), helpdesk_reminder_path(r), :remote => true, :method => 'delete', 
        #:confirm => t("delete_reminder"), 
        :class => 'delete' %>
		<%= content_tag("label", text.html_safe, :class=>"reminder #{ r.deleted ? "checked" : "unchecked" }") %>
</li>

