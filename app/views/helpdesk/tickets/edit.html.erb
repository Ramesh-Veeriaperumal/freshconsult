<% content_for :sidebar do -%><%- end %>
<%= content_tag (:h3, t("ticket.edit"), :class => "title") %>
<% form_for @item, :html => {:multipart => true, :id => "NewTicket" } do |f| %>
  <ul class="ui-form">  
    <%= render :partial => "ticket_form", :object => f, :locals => { :is_edit => true } %>
  </ul>
  <div class="button-container">
    <% if privilege?(:delete_ticket) %>
      <%= link_to t('delete'), @item, :method => :delete, :class => "uiButton floatl" %>
    <% end %>
    <%= f.submit t('update'), :class => "uiButton" %>    
    <%= link_to t('cancel'), (@item.new_record? ? {:action => 'index'} : @item ), :class => "uiButton" %>
  </div>
<% end %>  
