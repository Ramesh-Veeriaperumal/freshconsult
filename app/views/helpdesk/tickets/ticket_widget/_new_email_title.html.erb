<!--  Header section -->
<div rel="sticky" class="cb tickets-title">
	<div class="ticket-title-text pull-left">
		<h3 class="lead"> <%= t('ticket.compose.send_email') %></h3>
	</div>
	<% if Account.current.tkt_templates_enabled? %>
			<div id="template-wrapper" class="template-wrapper pull-left">
				<%= render :partial => "ticket_template", :locals => {:form => "compose_email"} %>
			</div>
	<% end %>
	<div class="ticket-header-btn btn-toolbar pull-right">
		<%= link_to t('cancel'), (@item.new_record? ? {:action => 'index'} : @item ), :class => "btn cancel-btn" , :"data-parallel-placeholder"=>"#ticket-leftFilter", :"data-parallel-url"=>"/helpdesk/tickets/filter_options", :"data-pjax"=>"#body-container" %>
		<% if @outbound_limit_crossed.blank? || @outbound_limit_crossed == false %>
			<span class="btn-group dropdown">
				<button class="btn btn-primary <%=(!current_account.verified?) ? 'disabled' : '' %> " id="compose-submit" data-loading-text="Sending..." >
					<%= t('ticket.compose.send') %>
					<button class="btn btn-primary dropdown-toggle <%=(!current_account.verified?) ? 'disabled' : '' %> " data-toggle="dropdown" >
						<span class="caret"></span>
					</button>
				</button>
				<ul class="dropdown-menu pull-right">
					<li>
						<%= link_to t('ticket.compose.send_and_new').html_safe, compose_email_helpdesk_tickets_path, :name => "action_save", :id => "compose_and_new" %>
					</li>
				</ul>
			</span>
		<% end %>
	</div>
	
</div>
