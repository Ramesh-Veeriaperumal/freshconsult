	jQuery('#custom_ticket_form').validate();
	<% unless @draft.nil? %>
	jQuery(window).load(function(){jQuery("#ReplyButton").trigger('click');});
	var isDirty= false;
	<% end %>
	jQuery.getScript("/helpdesk/tickets/prevnext/<%=@item.display_id%>");
<%- end %>