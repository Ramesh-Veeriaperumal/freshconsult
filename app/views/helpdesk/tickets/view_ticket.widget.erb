  <% if @no_auth %>
    <div class="alert-message block-message warning">
      <p><strong><%= t('flash.general.access_denied') %></strong></p>
    </div>
  <%else%>
  <% if @ticket.deleted %>
    <div class="alert-message block-message warning">
      <p><strong><%= t('this_ticket_has_been_deleted') %></strong></p>
    </div>
  <% end %>
 <div class="request_details">
    <div class="requestCnt request-cnt-first">
      <div class="request-title">
        <%= content_tag :span, h(@ticket.status_name), :class => "status theme-tab" %>
        <%= content_tag :span, h(@ticket.priority_name), :class => "priority #{@ticket.priority_key}" %>
        <%= content_tag :span, "##{@ticket.display_id}", :class => "ticket-id" %>
        <%= content_tag :span, @ticket.subject, :class => "subject" %>
      </div>
      <div class="description">         
        <div class="user_details">
          <%= user_avatar(@ticket.requester)  %>
          <%= h(@ticket.requester.display_name) %>  
          <%= "&lt;#{@ticket.requester.email}&gt;" if @ticket.requester.email %> 

          <div class="info"> 
            <%= formated_date(@ticket.created_at) %> via <%= @ticket.source_name %>
            <% metainfo = @ticket.notes.find_by_source(Helpdesk::Note::SOURCE_KEYS_BY_TOKEN["meta"]) %>
            <%#= content_tag :span, "", :class => "tooltip icon-image source-#{@ticket.source_name.downcase}", :title => t("ticket.reported_from_source", :source => @ticket.source_name.downcase) %>
          <%= content_tag :span, t(".meta"), :title => metainfo.body, :class => "meta_icon tooltip" unless(metainfo.blank?) %>
          </div> 
        </div>
        <div class="request-wrapper">
        <div id="description-full" class="request_mail details min_height">
          <span class="seperator"></span>
          <%= @ticket.description_html %>          
        </div>      
        <% unless @ticket.attachments.empty? %>
          <span class="seperator"></span>
          <h4><%= pluralize(@ticket.attachments.size, t("attachment"), t("attachments")) %></h4>
          <ul class="attachment_list">
            <%= render :partial => '/helpdesk/shared/attachment.html', :collection => @ticket.attachments, :locals => {:show_delete => true, :url => [@item] } %>
          </ul>
        <% end %>
        <% unless @ticket.ticket_topic.nil? %>
          <div class="info-highlight">
            <%= t(".linked_ticket")%>
            "<%= link_to("#{truncate(@ticket.topic.title)}", category_forum_topic_path(@ticket.topic.forum.forum_category.id, @ticket.topic.forum.id, @ticket.topic.id), :class => "link_to") %>"
          </div>
        <% end %>
      </div>
      </div>
  </div>
  <div class="tab-content">
  <div class="requestCnt request-conversation active tab-pane" id="Pages">
    <% unless @ticket_notes.blank? %>
      <%= render :partial => 'note.html', :collection => @ticket_notes %>
      <%= will_paginate @ticket_notes %>
    <% end %> 
  </div>
</div>
  <% end %>
