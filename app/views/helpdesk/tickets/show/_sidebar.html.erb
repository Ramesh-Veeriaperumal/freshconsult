
<div class="tkt-sidebar" id="ticket_details_sidebar" data-domhelper-name="ticket-details-sidebar">
	<%= render :partial => 'helpdesk/tickets/show/status', :locals => {:ticket => @ticket} unless @ticket.deleted or @ticket.spam %>
	<% if @ticket.can_be_associated? &&
		(current_account.link_tkts_enabled? || current_account.parent_child_tickets_enabled?) %>
		<div id="ticket-association" data-remote-url="<%= ticket_association_helpdesk_ticket_path(@ticket)%>" rel="remote"></div>
	<% end -%>
	<%= render :partial => "helpdesk/tickets/show/requester" %>
	<%= render :partial => "helpdesk/tickets/show/app_info" , :locals => {:ticket => @ticket} if @ticket.mobihelp? and @ticket.mobihelp_ticket_info %>
	<% unless @ticket.deleted or @ticket.spam %>
		<div class="widget" id='TicketProperties' data-domhelper-name='ticket-properties'>
			<h3 class="title"><%=t('ticket.properties')%></h3>
			<div class="content" data-remote-url="/helpdesk/tickets/<%= @ticket.id %>/component?component=ticket_fields"></div>
		</div>

		<% if current_account.timesheets_enabled? && privilege?(:view_time_entries) %>
		<div class="modal hide fade" role="dialog" id="timesheets_loading">
			<div class="modal-header"><button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button></div>
			<div class="modal-body"><div class="sloading loading-small loading-block"></div></div>
		</div>
		<div class="widget time-tracked inactive load_remote" id="TimesheetTab" data-domhelper-name="timesheet-tab">
			<h3>
				<%= t('helpdesk.time_sheets.sidebar_title') %>
				<div class="tracked_time">
					<span class="time" id="timeentry_timer_total" data-static-total="true"><%= get_time_in_hours(@ticket.time_tracked) %></span>
					<span class="time_unit"><%= t("sla.hrs") %></span>
				</div>
			</h3>
			<div class="content" rel="remote" data-remote-url="<%= helpdesk_ticket_time_sheets_path(@ticket) %>"></div>
		</div>
		<% end %>
		<div class="widget inactive load_remote" id="ToDoList" data-domhelper-name="todo-list">
			<h3><%= t('to_do') %></h3>
			<div class="content" rel="remote" data-remote-url="/helpdesk/tickets/<%= @ticket.id %>/component?component=todo"></div>
		</div>

		<%= render :partial => "helpdesk/tickets/show/integrations" %>

    <% if is_application_installed?(Integrations::Constants::APP_NAMES[:ilos]) %>
      <% ilos_app_config = get_app_config(Integrations::Constants::APP_NAMES[:ilos]) %>
      <% if ilos_app_config[:visible_agent_ticket].to_bool %>
        <%= stylesheet_link_tag :"cdn/ilos_video" %>
        <div class="widget inactive">
          <h3><%= t('integrations.ilos.messages.ilos_header') %></h3>
          <div class="content">
            <div class="ilos-widget" id="ilos-widget-tkt">
              <%= ilos_widget(@ticket.display_id, "agent_ticket") %>
              <p id="ilos-support">
                <a href= "https://support.freshdesk.com/solution/articles/214400-ilos-videos-integration-with-freshdesk" target="blank"><%= t('integrations.ilos.messages.about_recording') %></a>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
	<% end %>
</div>
