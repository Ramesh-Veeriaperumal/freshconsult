            <a  href="#" rel="toggle_email_container" id="add_cc_btn_<%=cntid%>"
                class="<%=@to_cc_emails.blank? ? '' : 'hide' %>" 
                data-container="cc-form-container-<%=cntid%>" 
                data-toggle-button="add_cc_btn_<%=cntid%>"
