                class="<%=bcc_drop_box_email.blank? ? '' : 'hide' %> "
                data-container="bcc-form-container-<%=cntid%>"
                data-toggle-button="add_bcc_btn-<%=cntid%>" 
                data-toggle-checkbox="include_bcc" >
              <%= t(".bcc") %>
            </a>
          </div>
