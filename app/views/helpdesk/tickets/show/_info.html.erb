<!--Fixed Starp-->
<div class="fixedStrap">
	<div id="firstchild">
		<div class="controls">
		<!--Pagination-->
			<div class="pagination-link hide" id="adjacents">
				<ul>
					<li><a href="#" class="pagi-btn">Next<span class="arrow-next"></span></a></li>
					<li><a href="#" class="pagi-btn"><span class="arrow-previous"></span>Previous</a></li>
				</ul>
			</div>
			<div id="activity_toggle" class="activity_toggle custom-tip-bottom clearfix" title="Toggle Activities">
				<%= t('ticket.activities') %>: <span class="visible"><%= t('ticket.activity_toggle.visible') %></span><span><%= t('ticket.activity_toggle.hidden') %></span>
			</div>
			<!--Breadcrumb-->
			<div class="bread-crumb-wrap clearfix">
				<div class="bread-crumb">
					<ul>
						<li><%= link_to t('header.tabs.tickets'), helpdesk_tickets_path %></li>
						<li>&raquo;</li>
						<li><%= "#{t('ticket.singular')} ##{h(@ticket.display_id)}"%></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="controls clearfix">
			<div class="control-left-outer">
				<div class="control-left">
					<div class="source-badge-wrap">
						<a href="#" class='source <%= "priority_color_#{@ticket.priority} source-#{@ticket.source_name.to_s.downcase}" %>'></a>
					</div>
					<div class="commentbox-info" id="ticket_status_box">
						<%= render :partial => 'helpdesk/tickets/show/status.html.erb' %>

						<div class="ticket-subject">
							<h2 class="subject">
								<span id="monitor"><%= render :partial => "/helpdesk/subscriptions/monitor" %></span>
								<%= h(@ticket.subject) %>
							</h2>
							<div class="ticket-actions clearfix">
								<ul>	

									<% unless @ticket.deleted %>
									<li class="ticket-btns">
										<div class="btn-group">
										  <button class="btn tall" rel="note-button" data-note-type="reply" id="ReplyButton">
										  	<span class="reply-inner"></span>
										  	<%= t('ticket.reply_to')  %>
										  	<span class="caret"></span>
										  </button>
										  <button class="btn dropdown-toggle tall" data-toggle="dropdown">
										    <span class="caret"></span>
										  </button>
										  <ul class="dropdown-menu" id="reply_options" role="menu" aria-labelledby="dLabel">
										    <li>
										    	<a href="" id="FwdButton" rel="note-button" data-note-type="fwd" >
										    		<%= t('fwd_to') %>
										    	</a>
										    </li>
											<li>
												<a href="#"  rel="note-button" data-note-type="note" >
													<%= t('ticket.add_note') %>
												</a>
											</li>
										  </ul>
										</div>
									</li>
									<li class="ticket-btns">
										<%= link_to(t('ticket.close_btn'), "#", 
												:title  => t('ticket.close_btn_title'), 
												:class => "btn" , :id=>"close_ticket_btn" , 
												:"data-href" => close_helpdesk_ticket_path({:id => @ticket.display_id, :page => params[:page]})) unless @ticket.closed? %> 

									</li>
									<li class="ticket-btns">
										<%= link_to t('ticket.merge_btn'), "/helpdesk/tickets/show_tickets_from_same_user/#{@ticket.display_id}", 
												:id => "Merge", :title => "Merge ticket", :class => 'btn', "data-ajax-dialog" => true %>
									</li>
									<li class="ticket-btns">
										<div class="btn-group">

										  <button class="btn dropdown-toggle" data-toggle="dropdown">
										  	More
										    <span class="caret"></span>
										  </button>

										  <ul class="dropdown-menu" id="reply_options" role="menu" aria-labelledby="dLabel">
										  	
										  	<li>
										  		<%= link_to(t('ticket.edit_btn'), edit_helpdesk_ticket_path(@ticket)  ) %>
										  	</li>
										  	
										  	<li>
										  		<%= link_to( "Print", print_helpdesk_ticket_path(@ticket), :target => "_blank") %>
										  	</li>

										  	<li id="spamicon">
										  		<%= render :partial => "spam", :locals => { :ticket => @ticket, :page => params[:page] } %>
										  	</li>

										  	<li>
										  		<%= link_to(t('ticket.delete_btn'), 
										  					helpdesk_ticket_path({:id => @ticket.display_id, :page => params[:page]}), 
										  					:method => :delete, :title => t('ticket.delete_btn_title')) %>
							  				</li>
										  </ul>
										</div>
									</li>

									<% end %>
								</ul>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>