<%if privilege?(:manage_canned_responses)%>
<div class="alert notice cr-info-msg" id="notice">
	All canned responses with availability set to <b>"Myself"</b> will be under the <b>"Personal"</b> folder.
	<a href='https://support.freshdesk.com/support/solutions/articles/37577-creating-common-reply-templates-with-canned-responses' target='_blank'>Learn more</a>
</div>
<%end%>
<div id = "response_dialog" class="no_recently_used over">
  <div  class="recently_used" id="recently_used_container" style="border-left-width: 0px;">
	  <div class="pick-response-header"><h3><%= t('canned_folders.recently') %></h3></div>
	  <div id="recently_used_list"></div>
	</div>
	<div class="pick-response-outer back1">
		<div class="pick-response-header">
      		<h3><%= t('canned_folders.pick') %></h3>
			<div class="canned-icons">
				<input type="text" id="searchbox" value="" placeholder= <%= t('canned_folders.search') %> 
				class="canned-searchbox required" />
				<span id="clear-search" class="clear-search"></span>
			</div>
    	</div>
		<div id="search-list" class="pick-response autocomplete"></div>
		<div id="fold-list" class="pick-response">
		  <div id="canned_response_list">
	      <ul class="small-list-left">
  	    	<%= each_or_message("helpdesk/tickets/components/ca_res_folder", @ca_folders, t('canned_folders.no_folders')) %>
	      </ul>
	    </div>
		<div id="responses" class="list2"></div>
	  </div>
	</div>
</div>

<% javascript_tag do -%>
  var ca_responses_search_url = "<%= search_helpdesk_canned_responses_path %>?ticket=<%= @ticket.id unless @ticket.nil? %>";
  var ca_responses_recent_url = "<%= recent_helpdesk_canned_responses_path %>?ticket_id=<%= @ticket.id unless @ticket.blank? %>&ids=[";

jQuery('.ui-icon-closethick').bind('click', function(){
  if(!jQuery('#search-list').is(':hidden'))
    jQuery('#clear-search').click();
});
<% end %>

<script src="/javascripts/app/ca_ticket_view.js" type="text/javascript"></script>