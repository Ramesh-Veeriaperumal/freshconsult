<li>
	<% 
		path = "#{helpdesk_ca_folder_url(ca_res_folder.id)}" 
		ticket = @ticket.nil? ? ("bulk" if params[:tkt_cr].blank?) : @ticket.display_id
		param = "?ticket_id=#{ticket}"
		param += "&tkt_cr=true" if params[:tkt_cr].present?
		url = path + param
	%>
	<%= link_to_function((truncate(ca_res_folder.display_name, :length => 25, :omission => "...")+
	" (#{ca_res_folder.visible_responses_count})"),
	"fetchResponses('#{url}', '#folder-#{ca_res_folder.id}')",
	:class => "item_info", :id => "folder-#{ca_res_folder.id}", "data-folder" => "#{ca_res_folder.id}") %>
</li>