<% content_for :sidebar do -%><%- end %>
<%= content_tag(:h3, t("ticket.submit_ticket_title"), :class => "title") %>
<% form_for @item, :html => {:multipart => true, :id => "NewTicket", :ignore => "" } do |f| %>
  <ul class="ui-form">  
    <%= render :partial => "ticket_form", :object => f, :locals => { :is_edit => false, :f => f } %>
    <li>
      <%= render( :partial => "/helpdesk/shared/attachment_form" ) %>
    </li>
  </ul>
  <div class="button-container">
    <%= f.submit t('save'), :class => "uiButton" %>
    <%= submit_tag t('save_and_new'), :name => "save_and_create", :class => "uiButton" %>
	<%= submit_tag t('save_and_close'), :name => "save_and_close", :class => "uiButton", :id => "save_and_close" %>
    <%= link_to t('cancel'), (@item.new_record? ? {:action => 'index'} : @item ), :class => "uiButton" %>
  </div>
<% end %>
<% javascript_tag do %>
  jQuery('#save_and_close').bind('click', function(){
    jQuery('.required_closure').addClass('required')
  })
<% end %>