<div class="request_panel" id="<%=cntid%>" style="display:none;" rel="emitter" data-node-name="agent_replying">
<div class='reply_box'>
    <%= form_for note, :url => facebook_helpdesk_ticket_conversations_path(@ticket), :html => {:multipart => true,  :id => "HelpdeskFbComment" } do |f| %>
    <%= f.error_messages %>
    <%= hidden_field_tag(:page , params[:page], :id=>:page  ) unless params[:page].nil? %>
	  <%= hidden_field_tag :fb_post, "true", :id => "fb_comment" %>
    <ul class="ui-form dont-validate">
      <li class="inline-field field">     
	   <%= content_tag( :h4, t(".title", :user => h(@ticket.requester.name)), :class => "title" ) %>  
        <label class="caption"><%= t("ticket.from") %></label>
        <div class="fields">
        	<strong>&nbsp;<%= @ticket.fb_post.facebook_page.page_name if @ticket.fb_post && @ticket.fb_post.facebook_page %></strong>
        </div>
	  </li>				
	  <li class="inline-field field">
	    <label class="caption"><%=@ticket.is_fb_message? ? "Reply" : "Comment:"%></label>
	    <div class="fields">
      <%= f.fields_for(:note_body, Helpdesk::NoteBody.new) do |ff| %>
          <%= ff.text_area :body, { :class => 'required facebook auto-height', :id => "#{id}-#{cntid}-body", :rows => "6" } %>
      <% end %>
      <%= f.hidden_field :source , :value => Helpdesk::Note::SOURCE_KEYS_BY_TOKEN["facebook"]%>          
      <%= f.hidden_field :private , :value => "false" %>
	  <%= hidden_field_tag(:ticket_status , params[:ticket_status], :id=>:fb_ticket_status  )%>
	    </div>
	  </li>
	 <li class="button-container">
    	<%= submit_tag(t('ticket.facebook_form.send'), :class => "uiButton special" ) %>
      <% if privilege?(:edit_ticket_properties) %>
    	  <%= submit_tag(t('ticket.facebook_form.send_and_resolve'), :onclick => "jQuery('#fb_ticket_status').val('4');" , :class => "uiButton") %>
      <% end %>
		<%= button_to_function(t('cancel'), "jQuery('#cnt-fb-post').hide().trigger('visibility');", :class => "uiButton" ) %>
    </li>
    </ul> 
  <% end %>
</div> 
</div> 

<% content_for :onload_script do %>
	jQuery("#HelpdeskFbComment").validate();	
  //jQuery('#send-fb-post-cnt-fb-post-body').NobleCount('#SendFacebookCounter', { on_negative : "error", max_chars: 8000}); 
<% end %>