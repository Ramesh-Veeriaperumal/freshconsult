<div id="ticket_statuses" class="hide">
	<%
    statuses = Helpdesk::TicketStatus.status_names_from_cache(current_account)
  	statuses.each do |status|
	%>
		<a data-value="<%= status.first %>" class="action_assign" data-assign-action="status" tabindex = '99'><%=status.second%></a>
		<%
	end
	%>
</div>
<div id="ticket_priorities" class="hide">
	<% 
	priorities = TicketConstants.priority_list
	priorities.each do |priority_value, priority_name|
		%>
		<a data-value="<%= priority_value %>" class="action_assign" data-assign-action="priority" tabindex = '99'><%=priority_name %></a>
		<%
	end
	%>
</div>
<div id="ticket_agents" class="hide">
	<a class="action_assign"  href=""
	   data-assign-action="agent"
	   data-value="<%= current_user.id %>" data-text="<%= current_user.name %>"  tabindex = '99'><%= t('ticket.myself') %></a>

	<a class="action_assign"  href="" tabindex = '99'
	   data-assign-action="agent"
	   data-value="-" data-text="-" ><%= t('ticket.none') %></a>

	<span class="seperator"></span>
	<% current_account.agents_from_cache.each do |agent| %>
			<% unless agent.user_id == current_user.id %>
				<a href="#" class="action_assign" tabindex=99 data-value= "<%=agent.user.id%>" data-assign-action="agent" ><%=h(agent.user.name)%></a>
			<% end %>
  	<% end %>
</div>