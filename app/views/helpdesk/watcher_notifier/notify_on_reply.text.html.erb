<% if @note.user_id == @ticket.requester_id %>
	<% @responder = t('helpdesk.tickets.add_watcher.mail.customer') %>
<% elsif @note.source == Helpdesk::Note::SOURCE_KEYS_BY_TOKEN['automation_rule'] || @note.source == Helpdesk::Note::SOURCE_KEYS_BY_TOKEN["automation_rule_forward"] %>
  <% @responder = @account.helpdesk_name %>
<% else %>
	<% @responder = @note.user.name %>
<% end %>

<%=t('helpdesk.tickets.add_watcher.mail.hi').html_safe %> <%=@subscription.user.name%>,<br /><br />
<%=t('helpdesk.tickets.add_watcher.mail.response', :responder => @responder).html_safe %><br /><br />
<table>
	<tr>
    	<td> <b> <%=t('helpdesk.tickets.add_watcher.mail.ticket').html_safe %> </b> </td>
    	<td> : </td>
    	<td>
            <a href='<%=helpdesk_ticket_url(@ticket,:host => @ticket.account.host, :protocol => @ticket.url_protocol)%>'>
                #<%=@ticket.display_id%> <%=@ticket.subject%>
            </a>
      </td>
    </tr>
    <tr>
    	<td> <b> <%=t('helpdesk.tickets.add_watcher.mail.requester') %> </b> </td>
    	<td> : </td>
    	<td>
            <%=@ticket.requester.name%>
            &lt;<%=@ticket.requester.email unless @ticket.requester.email.blank? %>&gt;
      </td>
    </tr>
</table>

<% if @note.user_id == @ticket.requester_id %>
    ---------- <%=t('helpdesk.tickets.add_watcher.mail.customer_response').html_safe%> ---------- <br /><br />
<% else %>
    ---------- <%= t('helpdesk.tickets.add_watcher.mail.agent_response').html_safe %> ---------- <br /> <br />
<% end %>

<%= @note.body_html.html_safe%> <br /> <br />
---------- ---------- ----------<br /><br />


<a href="<%=unsubscribe_helpdesk_ticket_subscriptions_url(@ticket,
                                            :host => @ticket.account.host,:protocol => @ticket.url_protocol)%>">
    <%=t('helpdesk.tickets.add_watcher.mail.stop_emails').html_safe %>
</a> <br /> <br />
