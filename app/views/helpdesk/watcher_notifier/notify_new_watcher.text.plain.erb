<%=t('helpdesk.tickets.add_watcher.mail.hi') %> <%=@subscription.user.name%>, 


<% if @agent_name == Va::Constants::AUTOMATIONS_MAIL_NAME %>
    <%= I18n.t('helpdesk.tickets.add_watcher.mail.added_as_watcher_by_automation') %>
<% else %>
    <%= I18n.t('helpdesk.tickets.add_watcher.mail.added_as_watcher', :agent_name => @agent_name) %>
<% end %>

<%=t('helpdesk.tickets.add_watcher.mail.ticket') %> 

<%=helpdesk_ticket_url(@ticket,:host => @ticket.account.host, :protocol => @ticket.url_protocol)%>#<%=@ticket.display_id%> 

<%=@ticket.subject%> 


<%=t('helpdesk.tickets.add_watcher.mail.requester') %> : 
         
<%= @ticket.requester.name%> 

<%= @ticket.requester.email unless @ticket.requester.email.blank? %>

<%=t('helpdesk.tickets.add_watcher.mail.ticket_details') %> 


<%=@ticket.description %>  


<%=unsubscribe_helpdesk_ticket_subscriptions_url(@ticket, :host => @ticket.account.host,:protocol => @ticket.url_protocol)%>


<%=t('helpdesk.tickets.add_watcher.mail.stop_emails') %>


