<div style="font-family:'Helvetica Neue', Helvetica, Arial, sans-serif">
<%=t('helpdesk.tickets.add_watcher.mail.hi').html_safe %> <%=@subscription.user.name%>,<br /><br />
<%= t('helpdesk.tickets.add_watcher.mail.status_change',
                 :agent_name => @agent_name, :status => @status).html_safe %>
<br /><br />
<table>
	<tr>
    	<td> <b> <%=t('helpdesk.tickets.add_watcher.mail.ticket') %> </b> </td>
    	<td> : </td>
    	<td> 
            <a href='<%=helpdesk_ticket_url(@ticket,:host => @ticket.account.host, :protocol => @ticket.url_protocol)%>'> 
                #<%=@ticket.display_id%> <%=@ticket.subject%> 
            </a>
        </td>
    </tr>
    <tr>
    	<td> <b> <%=t('helpdesk.tickets.add_watcher.mail.requester') %> </b> </td>
    	<td> : </td>
    	<td> 
            <%=@ticket.requester.name%>  
            &lt;<%=@ticket.requester.email unless @ticket.requester.email.blank? %>&gt; 
        </td> <br />
    </tr>
</table> <br /> <br />


<a href="<%=unsubscribe_helpdesk_ticket_helpdesk_subscriptions_url(@ticket,
                                        :host => @ticket.account.host,:protocol => @ticket.url_protocol)%>"> 
    <%=t('helpdesk.tickets.add_watcher.mail.stop_emails').html_safe %>
</a> <br /> <br />
</div>