<% if @note.user_id == @ticket.requester_id %>
	<% @responder = t('helpdesk.tickets.add_watcher.mail.customer') %>
<% else %>
	<% @responder = @note.user.name %>
<% end %>

<%=t('helpdesk.tickets.add_watcher.mail.hi') %> <%=@subscription.user.name%>,


<%=t('helpdesk.tickets.add_watcher.mail.response', :responder => @responder) %>


<%=t('helpdesk.tickets.add_watcher.mail.ticket') %> 


<%=helpdesk_ticket_url(@ticket,:host => @ticket.account.host)%>#<%=@ticket.display_id%> 

<%=@ticket.subject%> 


<%=t('helpdesk.tickets.add_watcher.mail.requester') %> 

<%=@ticket.requester.name%>  <%=@ticket.requester.email unless @ticket.requester.email.blank? %>

<% if @note.user_id == @ticket.requester_id %>
    <%=t('helpdesk.tickets.add_watcher.mail.customer_response')%> 
<% else %>
    <%= t('helpdesk.tickets.add_watcher.mail.agent_response') %> 
<% end %>

<%= @note.body %>

<%=unsubscribe_helpdesk_ticket_helpdesk_subscriptions_url(@ticket,:host => @ticket.account.host)%>


<%=t('helpdesk.tickets.add_watcher.mail.stop_emails') %>
