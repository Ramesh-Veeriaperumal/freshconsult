<div id="quest-container" class="panel-row <%= (quest.achieved_by? current_user) ? 'acheived' : '' %>">
	<div class="floatl">
		<div class="badges left <%=quest.badge[:classname]%>">
			<%= content_tag(:strong, quest.points, :class => "label points") unless quest.points.blank? || quest.points == 0 %>
		</div>
	</div>
	<div class="panel-content">
		<div class="row-fluid">
			<div class="span10">
				<h4><%=quest.name%></h4>
				<p class="help-text" title="<%= quest.description %>"><%= truncate quest.description, :length => 300 %></p>
			</div>
			<div class="span2 alignright">
				<% if quest.achieved_by? current_user %>
					<%= content_tag :span, "", :class => "symbol-done-tick" %>
					<%= content_tag :span, "Achieved", :class => "acheived-text" %>
				<% end %>
			</div>
		</div>
	</div>
</div>