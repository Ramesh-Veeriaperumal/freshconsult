<% acheived_by_user = @user_acheived_quests.present? ? @user_acheived_quests.include?(quest.id) : false %>

<div id="quest-container" class="panel-row <%= (acheived_by_user) ? 'acheived' : '' %>">
	<div class="floatl">
		<div class="badges left <%=quest.badge[:classname]%>">
			<%= content_tag(:strong, quest.points, :class => "label points") unless quest.points.blank? || quest.points == 0 %>
		</div>
	</div>
	<div class="panel-content">
		<div class="row-fluid">
			<div class="span10">
				<h4><%=h(quest.name)%></h4>
				<p class="help-text" title="<%=h(quest.description) %>"><%= h(truncate quest.description, :length => 300) %></p>
			</div>
			<div class="span2 alignright">
				<% if acheived_by_user %>
					<%= content_tag :span, "", :class => "symbol-done-tick" %>
					<%= content_tag :span, "Achieved", :class => "acheived-text" %>
				<% end %>
			</div>
		</div>
	</div>
</div>