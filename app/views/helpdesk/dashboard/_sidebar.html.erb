<% content_for :sidebar do %>
  <%= sidebar_content %>
  <% if params[:action] != 'agent_status' and (round_robin? or freshfone_active?) %>
    <div class="sidepanel pt10">
      <a class="dashboard_agent_status_link" href="/helpdesk/agent_status"><%= t('helpdesk.dashboard.round_robin.view_agent_status') %> </a>
    </div>
  <% end %>

  <% if gamification_feature?(current_account) %>
  	<%= content_tag :div, "", :rel => "remote", :class => "sidepanel", :id => "mini-leaderboard",
  						 "data-remote-url" => mini_list_helpdesk_leaderboard_index_path() %>

    <%= content_tag :div, "", :rel => "remote", :class => "sidepanel", :id => "quests-section-container",
               "data-remote-url" => active_helpdesk_quests_path() %>
  <% end %> 

  <%#= render :partial => '/helpdesk/shared/history' %>
<% end %>
<% content_for :onload_script do %>
	App.Dashboard.init();
<% end %>


