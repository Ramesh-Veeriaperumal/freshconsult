<%= include_tiny_mce_if_needed %>

<div id="article-form-container">
  <% form_for guide, :html => {:multipart => true, :id => "article-form"} do |f| %>
    <%= f.error_messages %>

    <%= f.label(:name, "Name") %>
    <%= f.text_field :name %>
	
	<%= f.label(:description, "More Info") %>
	 <%= f.text_area :description, :class => "text" %>
    <!--%= f.text_area :description, :class => "mceEditor" %-->
	
	<%logger.debug "current account isss  ::#{guide.account_id}"
		account_id = guide.account_id
	%>
   <%= f.label :folder_id, "Folder" %>
   <%= f.collection_select :folder_id, Solution::Folder.find_all_folders(account_id) , :id, :name , :class => "select" %>
   

    <div class="button-container">
      <%= submit_tag "Save", :class => "button submit" %>
      <%= submit_tag "Save and Create Another", :name => "save_and_create", :class => "button" %>
    </div>


  <% end %>
</div>

