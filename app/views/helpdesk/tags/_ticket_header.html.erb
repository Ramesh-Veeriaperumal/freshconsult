    <table class="tickets">
      	<thead>
      		<tr>
	      		<th class="check">
	      			<input type="checkbox" onclick="Helpdesk.sel.toggleCheckAll(this)"  />
	      		</th>
				<th>
					<!--a href="#" class="button">Edit</a-->
					<% if current_selector == [:deleted] %>
					  <%= link_to_function("Undelete", "Helpdesk.sel.submit('#{ restore_helpdesk_ticket_path('multiple') }', 'put')", :class => "button") %>
					  <%= link_to_function("Delete Forever", "Helpdesk.sel.submit('#{ delete_forever_helpdesk_ticket_path('multiple') }', 'delete')", :class => "button") %>
					  
					<% else %>
					  <%= link_to_function("Delete", "Helpdesk.sel.submit('#{ helpdesk_ticket_path('multiple') }', 'delete')", :class => "button") %>
					<% end %>
					
					<% if current_selector == [:spam] %>
					  <%= link_to_function("Unflag Spam", "Helpdesk.sel.submit('#{ unspam_helpdesk_ticket_path('multiple') }', 'put')", :class => "button") %> 
					<% else %>
					  <%= link_to_function("Flag Spam", "Helpdesk.sel.submit('#{ spam_helpdesk_ticket_path('multiple') }', 'put')", :class => "button") %> 
					<% end %> 
					
					<%= link_to_function("Close", "Helpdesk.sel.submit('#{ close_multiple_helpdesk_ticket_path('multiple') }', 'put')", :class => "button") %> 
					
					<%= link_to_function("Pick Up", "Helpdesk.sel.submit('#{ pick_tickets_helpdesk_ticket_path('multiple') }', 'put')", :class => "button") %> 

					<% if current_selector == [:monitored_by] %>
					  <%= link_to_function("Unwatch", 
					  "Helpdesk.sel.submit('#{ unwatch_multiple_helpdesk_ticket_helpdesk_subscriptions_path('multiple') }', 'delete')", :class => "button") %>
					<% end %>

					
					<a href="javascript:void(0)" id="assign-options-link" class="button">
					<%= t("ticket.assign_to_agent") %></a>
					<div id="assign-options" class="assign-agent" style="display:none;">
					    <%= t("ticket.assign_to_agent") %>
					    <%= select_tag 'responder_id', options_from_collection_for_select(current_account.technicians, :id, :name, current_user) %>
					    <button id="assign-multiple-button" action="<%= assign_helpdesk_ticket_path('multiple') %>"><%= t("assign") %></button>
					</div>
				</th>	
				<th>	
					<form class="sort">
						<a href="javascript:void(0)" class="sort_order">
							<img src="<%= spacer_image_url %>" alt="Order by newest first" title="Order by newest first" onclick="jQuery(this).toggleClass('desending')" />
						</a>
					    <%= t("ticket.sort_by") %>
						<%= select_tag :sort, options_for_select(TicketsFilter.sort_fields_options, (params[:sort] || :due_by).to_sym) %> 
					</form>
				</th>
			</tr>
      	</thead>
	  </table>
