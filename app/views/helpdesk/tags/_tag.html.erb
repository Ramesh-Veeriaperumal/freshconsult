<% ticket_tags =  tag.tickets.visible.size
   customer_tags = tag.contacts.visible.size
   article_tags =  tag.solution_articles.size
%>
<tr class="<%= cycle('stripe', '') %>" id="<%= dom_id(tag) %>" data-tag-id="<%=tag.id%>" >
  <td class="name">
    <%= check_box_tag('ids[]', tag.to_param,  false, :class => 'selector' ) %>
    <span class="tags-checkbox-label">
        <span class="tags-total-counter"><%= ticket_tags + article_tags + customer_tags  %></span>
        <span> <strong>
          <a href="#" class="tag_name tooltip" id="tag_name_<%= tag.id.to_s %>" data-tag-name="<%= tag.name %>" title="<%= if tag.name.length>17 then tag.name end %>" ><%= h(truncate(tag.name, 17)) %></a> </strong>
        <span id="tag_text_container_<%= tag.id.to_s %>" class="hide">
          <input type="text" tag_id="<%= tag.id.to_s %>" class="textbox tag_text" value="<%= tag.name %>" >
        </span>
    </span>
      <a class="edittag"><i class="symbols-tag-edit tooltip" title="Rename Tag"></i> </a>
   </span>
  </td>

  <%= render :partial => 'tag_count', :locals => {
          :tag => tag,
          :count => ticket_tags,
          :plurals => [t('.ticket'), t('.tickets')],
          :type => "Helpdesk::Ticket",
          :dom_type => 'Tickets',
          :link =>  "/helpdesk/tickets/filter/tags/#{tag.id}"
  } %>


  <%= render :partial => 'tag_count', :locals => {
          :tag => tag,
          :count => customer_tags,
          :plurals => [t('.customer'),t('.customers')],
          :type => "User",
          :dom_type => 'Customers',
          :link => "/contacts/filter/all?tag="+tag.id.to_s
  } %>

  <%= render :partial => 'tag_count', :locals => {
          :tag => tag,
          :count => article_tags,
          :plurals => [t('.article'),t('.articles')],
          :type => "Solution::Article",
          :dom_type => 'Articles',
          :link => ""
  } %>



</tr>