<tr class="<%= cycle('stripe', '') %>">
  <td class="check">
    <%= check_box_tag('ids[]', tag.to_param,  false, :class => 'selector') %>
  </td>
  <td class="name"><h3><%= link_to(h(tag.name), tag) %></h3></td>
  <td class="count"><%= pluralize(tag.tickets.visible.size, 'Ticket', 'Tickets') %></td>
</tr>

