<% unless @tags.empty? %>
    <table class="table table-striped">
      <tbody>
        <%= render :partial => "tag", :collection => @tags %>
      </tbody>
    </table>
<% else %>
    <div class="list-noinfo">
      <%= t('.no_tags') %>
      <br><br>
      <% unless params[:name].nil? and params[:tag_id].nil? %>
          <%= t('.view') %> <a href="/helpdesk/tags"> <%= t('.all_tags') %> </a>
      <% end %>
    </div>

<% end %>

<%= will_paginate @tags,
                  :renderer => BootstrapPaginationRenderer,
                  :previous_label => "<b class='arrow-left'></b>",
                  :next_label => "<b class='arrow-right'></b>",
                  :class => "pagination pagination-centered" %>

<div id="tag-dialog-confirm" title="<%= t('.merge_tags') %>" class="hide">
  <p>
    <span class="ui-icon ui-icon-alert"></span>
    <%= t('.tags_merge') %>
  </p>
</div>
<div id="tag-delete-confirm" class="hide">
  <p>
    <%= t('.delete_confirmation') %>
  </p>
</div>
<div id="tag-remove-confirm" title="<%= t('.remove_tags') %>" class="hide">
  <p>
    <span class="ui-icon ui-icon-alert"></span>
    <%= t('.remove_confirmation') %>
  </p>
</div>
