<%= link_to "See all", user_list_helpdesk_leaderboard_path(), :class => "action-right" %>
<h3 class="title">LeaderBoard</h3>  	
<p class="intro">This Month</p>  
<% mini_board = [
					[ @mvp, "Most valuable player", "mvp"],
					[ @customer_champ, "Customer champion", "love"],
					[ @fcr, "SharpShooter", "sharpshooter"],
					[ @speed_champ, "Speed champion", "speed"]
				] %>
<% mini_board.each do |score| %>
	<% unless score[0].blank? %>
	<div class="panel-row" style="overflow:hidden">
		<%= user_avatar(score[0].user) %>
		<div class="lb-trophy scoreboard-trophy-<%= score[2] %>"></div>
		<div class="panel-content">
			<h4><%= link_to score[0].user.name, score[0].user %></h4>
			<p class="help-text"><%= score[1] %></p>
		</div>
	</div>
	<% end %>
<% end %>