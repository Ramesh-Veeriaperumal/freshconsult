<div class="btn-group floatr">
  <%= link_to "Agent", agents_helpdesk_leaderboard_path, :class => "btn" %>
  <%= link_to "Group", groups_helpdesk_leaderboard_path, :class => "btn active" %>
</div>
<a href="/">< Back to dashboard </a>
<h3 class="title"><%= t('reports.scoreboard_group_title')%></h3>

<div class="report-nmleft thick-border-top lb-report report-<%= leaderboard.length %>-col">

<% leaderboard.each do |board| %>
	<div class="lb-report-col <%= (board[1] == :mvp) ? 'lb-mvp' : '' %>" id="leaderboard_list_<%= board[1] %>">
		<div class="lb-report-title">
			<div class="lbr-trophy trophy trophy-<%= board[1] %>"></div>
			<h3 class="title"><%= t("gamification.leaderboard.#{board[1]}_trophie_label_group") %></h3>
			<p class="intro">
				<%= t("gamification.leaderboard.#{board[1]}_trophie_info_group") %>
			</p>
		</div>
		<% board[0].each_with_index do |score_card, i| %>
			<div class="panel-row <%= cycle(' ', 'odd ') %>">
				<%= content_tag :span, i+1, :class => "lb-number" if (board[1] == :mvp) %>
				<div class="preview_pic" size_type="thumb">
					<img alt="" src="/images/fillers/group_blank_thumb.gif">
				</div>
				<div class="panel-content">
					<h4 class="name"><%= score_card.group.name %></h4>
					<p class="help-text score"><%= score_card.tot_score %></p>
				</div>
			</div>
		<% end %>
	</div>
	<% reset_cycle %>
<% end %>
</div>
<% if leaderboard.size > 10 %>
	<div class="report-show-more">
		<a href="#" class="">Show 25 more</a>
	</div>
<% end %>