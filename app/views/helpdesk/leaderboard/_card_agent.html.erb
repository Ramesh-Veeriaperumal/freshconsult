<% content_tag :div, :class => "panel-row " + cycle(' ', 'odd ') + ((card_agent.user == current_user) ? "lb-cu" : "") do %>
	<%= content_tag :span, card_agent_counter + 1, :class => "lb-number" if (card_type == :mvp) %> 
	<%= user_avatar(card_agent.user) %>
	<div class="panel-content">
		<h4 class="name"><%= link_to_agent(card_agent.user) %></h4>
		<p class="help-text score"><%= card_agent.tot_score %></p>
	</div>
<% end %>