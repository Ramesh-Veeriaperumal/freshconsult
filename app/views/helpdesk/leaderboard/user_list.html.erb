<div class="btn-group floatr">
  <button class="btn active">Agent</button>
  <button class="btn">Group</button>
</div>
<a href="/">< Back to dashboard </a>
<h3 class="title"><%= t('reports.scoreboard_title_nav')%></h3>
<% leaderboard = [
					[ @mvp, :mvp],
					[ @customer_champ, :love],
					[ @fcr, :sharpshooter],
					[ @speed_champ, :speed]
				] %>

<div class="report-nmleft thick-border-top lb-report">
<% leaderboard.each do |board| %>
	<div class="lb-report-col <%= (board[1] == :mvp) ? 'lb-mvp' : '' %>">
		<div class="lb-report-title">
			<div class="lb-report-trophy scoreboard-trophy-<%= board[1] %>"></div>
			<h3 class="title"><%= t("gamification.leaderboard.#{board[1]}_trophie_label") %></h3>
			<p class="intro">
				<%= t("gamification.leaderboard.#{board[1]}_trophie_info") %>
			</p>
		</div>
		<% board[0].each_with_index do |score_card, i| %>
			<% current_user_class = (score_card.user == current_user) ? "lb-cu" : "" %>
			<div class="panel-row <%= current_user_class %> ">
				<%= content_tag :span, i+1, :class => "lb-number" if (board[1] == :mvp) %> 
				<%= user_avatar(score_card.user) %>
				<div class="panel-content">
					<h4><%= link_to score_card.user.name, score_card.user %></h4>
					<p class="help-text"><%= score_card.tot_score %></p>
				</div>
			</div>
		<% end %>
	</div>
<% end %>
</div>
<div class="report-show-more">
	<a href="#" class="">Show 25 more</a>
</div>
