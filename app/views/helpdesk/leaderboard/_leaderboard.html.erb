<div class="report-nmleft lb-report report-<%= @leaderboard.length %>-col">
	<% unless @leaderboard.values.flatten.blank? %>
		<% @leaderboard.each do |board_name, details| %>
			<div class="lb-report-col <%= (board_name == :mvp) ? 'lb-mvp' : '' %>" id="leaderboard_list_<%= board_name %>">
				<div class="lb-report-title">
					<div class="lbr-trophy trophy trophy-<%= board_name %>"></div>
					<h3 class="title"><%= t("gamification.leaderboard.#{board_name}_trophie_label") %></h3>
				</div>
				
				<%= render :partial => leader_partial, :collection => details, :locals => { :card_type => board_name } %>
				<% reset_cycle %>			
			</div>
		<% end %>
	<% else %>
		<div class="list-noinfo"><%= t("gamification.leaderboard.leaderboard_is_empty") %></div>
	<% end %>
</div>
<%= javascript_tag do %>
	jQuery("#leaderboard_list_love, #leaderboard_list_sharpshooter, #leaderboard_list_speed")
		.css("minHeight", jQuery('#leaderboard_list_mvp').height());
<% end %>
