<%unless @cloud_files.blank? %>
  <div style='border-top: 1px solid; width: 50%; border-color: grey;'></div>
  <% @cloud_files.each do |cloud_file|
    name = cloud_file.filename || URI.parse(cloud_file.url).path[%r{[^/]+\z}] %>
    <table style='border: 0px solid; margin-top: 3px;' >
      <tbody>
        <tr>
        <td><span><img src='<%="https://s3.amazonaws.com/assets.freshdesk.com/images/#{cloud_file.provider}_big.png"%>' alt="<%=cloud_file.provider.camelize%>"/></span></td>
        <td><span><a href ='<%=cloud_file.url%>' target='_blank'><%=URI.unescape(name)%></a></span>
        </td>
        </tr>
      </tbody>
     </table>
  <%end%>
<%end%>