<%= @body %>

<% if @survey_handle %>
<div id="survey" style="display:table;width:100%;">
	<h3 style="display:table-caption;"><%= @survey_handle.survey.link_text %></div>
	  <div style="display:table-row;font-size:14px;">
		<div style="display:table-cell;text-align:center;padding:3px 3px 3px 6px;">
			<div style="display:inline;float:left;">	
				<a href="<%=@survey_handle.survey_url(@ticket, Survey::HAPPY)%>">
					<img src='http://<%=@ticket.portal_host%>/images/happy-smily-tab.png'>
				</a>
			</div>		
			<div style="float:right;margin:15px 0 0 5px;font-size:16px;">
				<%= link_to t(".happy"), @survey_handle.survey_url(@ticket, Survey::HAPPY) %>
			</div>
		</div>
		<div style="display:table-cell;padding:3px 3px 3px 6px;">
			 <div style="display:inline;float:left;">	
				<a href="<%=@survey_handle.survey_url(@ticket, Survey::NEUTRAL)%>">	
					<img src='http://<%=@ticket.portal_host%>/images/neutral-smily-tab.png'>
				</a>	
			 </div>
			<div style="float:right;margin:15px 0 0 5px;font-size:16px;">
				<%= link_to t(".neutral"), @survey_handle.survey_url(@ticket, Survey::NEUTRAL) %>
			</div>
		</div>
		<div style="display:table-cell;padding:3px 3px 3px 6px;">
			<div style="display:inline;float:left;">
				<a href="<%=@survey_handle.survey_url(@ticket, Survey::UNHAPPY)%>">
					<img src='http://<%=@ticket.portal_host%>/images/unhappy-smily-tab.png'>
				</a>
			</div>
			<div style="float:right;margin:15px 0 0 5px;font-size:16px;">
				<%= link_to t(".unhappy"), @survey_handle.survey_url(@ticket, Survey::UNHAPPY) %>
			</div>
	  </div>
   </div>
</div>
<% end %>