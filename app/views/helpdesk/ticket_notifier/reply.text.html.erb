<%= @body_html.html_safe %>

<%=render :partial => 'cloud_files_template', :locals => { :cloud_files => @cloud_files} %>
<%if Account.current.new_survey_enabled?%>
	<%=render :partial => "custom_survey", :locals => {:ticket => @ticket, :survey_handle => @survey_handle,
				:surveymonkey_survey => @surveymonkey_survey, :in_placeholder => false,
				:survey_feedback_preview => false, translation_record: @translated_survey, language: @survey_language } %>
<%else%>
	<%=render :partial => "satisfaction_survey", :locals => {:ticket => @ticket, :survey_handle => @survey_handle,
				:surveymonkey_survey => @surveymonkey_survey, :in_placeholder => false,
				:survey_feedback_preview => false } %>
<%end%>

<%= render :partial => 'helpdesk/shared/secure_attachments.html.erb' if @account.secure_attachments_enabled? %>

<%= render :partial => 'shared/free_plan_message' %>

<%= hidden_ticket_identifier(@ticket) %>
