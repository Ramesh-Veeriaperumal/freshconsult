<% content_for :layoutType do%>single<% end %>
<div class="page_area">
	<h3 class="content_title">Edit SLA Policy</h3>
	<span class="seperator"></span> 
	<% form_for(@sla_policy) do |f| %>
  		<%= render :partial => "form", :locals => { :f => f } %>
   		<div class="button-container"> 
			<%= f.submit t('save'), :class => "uiButton" %>
			<%= link_to t('cancel'), helpdesk_sla_policies_path, :class => "uiButton grey" %>
		</div>
	<% end %>
</div>