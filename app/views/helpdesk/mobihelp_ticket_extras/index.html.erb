<% 
  debug_data = @extra_info.debug_data unless @extra_info.nil?
  if debug_data
    json_data_str = AwsWrapper::S3Object.read(debug_data.content.path(:original),debug_data.content.bucket_name)
    debug_data_json = JSON.parse(json_data_str);
  end
%>
<div class="tab-pane fade active in" id="myAppTab">
  	<div id="ticket-data" class="selection-bottom app-content-wrapper">
  		<ul id="app-and-device-tab" class="tabs nav-tabs">
  			<li class="active first"><a href="#metaData" data-toggle="tab"><%= t("ticket.app_info.app_and_device")%></a></li>
  			<li><a href="#customData" data-toggle="tab"><%= t("helpdesk.tickets.show.custom")%></a></li>
  			<li><a href="#breadCrumb" data-toggle="tab"><%= t("ticket.app_info.breadcrumbs")%></a></li>
        <li><a href="#debugLog" id="link-debug-log" data-toggle="tab"><%= t("ticket.app_info.debug_log")%></a></li>
  		</ul>
  		<div class="tab-content">
  			<div class="tab-pane active" id="metaData">
          <%= render :partial => 'helpdesk/tickets/show/app_device_info.html.erb', :locals => {:extra_info => @extra_info, :info => debug_data_json["app_info"] ,  :source => 'app_info'} if debug_data %>
  			</div>
  			<div class="tab-pane" id="customData">
          <%= render :partial => 'helpdesk/tickets/show/app_device_info.html.erb', :locals => {:extra_info => @extra_info, :info => debug_data_json["custom_data"] , :source => 'custom_data'} if debug_data %>
  			</div>
  			<div class="tab-pane" id="breadCrumb">
          <%= render :partial => 'helpdesk/tickets/show/app_device_info.html.erb', :locals => {:extra_info => @extra_info, :info => debug_data_json["breadcrumbs"] , :source => 'breadcrumbs'} if debug_data%>
  			</div>
        <div class="tab-pane" id="debugLog">
          <pre>
            <div id="debugLogContent">
              <%=debug_data_json["debug_logs"] if debug_data%>
            </div>
          </pre>
  			</div>
  		</div>
  	</div>
  </div>
</div>