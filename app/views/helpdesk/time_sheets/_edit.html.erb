<% form_remote_for :time_entry, edit, :url => helpdesk_time_sheet_path, :update => { :success => "timeentry_#{edit.id}" }, :html => { :method => :put, :class => "ui-form" } do |f| %>
  <%= render :partial => "/helpdesk/time_sheets/form", :object => f %>
  <div class="row">
    <div class="span4">
	    <label class="checkbox">
	      <%= f.check_box :billable %>
        This entry is billable
      </label>
	  </div>
	  <div class="span5">
      <%= link_to_function "Change Date", "$(this).hide(); jQuery('#time_entry_executed_at').show().datepicker('show');" %>
 	    <%= f.text_field :executed_at, :value => edit.created_at.strftime("%m/%d/%Y"), :size => 10, :class => "auto hide datepicker" %>
 	  </div>
	</div>
 	<div class="button-container">
 	  <%= submit_tag "Update", :class => "uiButton special submit", "data-loading-text" => "Saving time entry..." %>
    <%= link_to_function("Cancel", "jQuery('#timeentry_edit_#{edit.id}').empty(); jQuery('#timeentry_view_#{edit.id}').show();", :class => "uiButton" ) %>
 	</div>
<% end %>