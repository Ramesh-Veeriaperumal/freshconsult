<tr class="<%= cycle('stripe', '') %>">
  <td class="check">
    <%= check_box_tag('ids[]', authorization.to_param,  false, :class => 'selector') %>
  </td>
  <td class="name"><h3><%=h(authorization.name)%></h3></td>
  <td class="role">

    <% if authorization.user_id == current_user.id %>
      <%= authorization.role[:title] %>
    <% else %>
      <%= select_tag(
        :role_token, 
        options_for_select(Helpdesk::Authorization::ROLE_OPTIONS, authorization.role_token),
        :class => 'role-selector',
        :action => helpdesk_authorization_path(authorization),
        :method => :put
      )%>
    <% end %>
  </td>
</tr>

