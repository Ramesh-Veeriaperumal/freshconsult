<div class="pageContent">
	<div class="title_bar_grey">
		<div class="floatr">
			<%= link_to "<img src='/images/add.png' /> New Agent", new_agent_path, :class => "fdbutton"  %>
		</div>	
		<h3 class="title">Agents</h3>		 
	</div> 
	<ul class="admin_list">		 
		<%@agents.each do |agent| %>
			<li>
				<div class="item_actions">
					<%= link_to 'delete', agent, :confirm => 'Are you sure you want delete?', 
												 :method => :delete, :class => "button" %>
					<%= link_to 'edit', edit_agent_path(agent), :class => "button" %>									 
				</div>
				<div class="preview_pic">
					<%= image_tag (agent.user.avatar) ? 
							agent.user.avatar.content.url(:thumb) : "/images/icons/profile_blank.gif" %>		  
			    </div>
				<%= link_to(h(agent.user.name), edit_agent_path(agent), :class => "item_info") %>
				<div><%= h agent.user.job_title %></div>
				<div><%= mail_to ( h(agent.user.email)) %></div>							
			</li>	
		<% end %>	 
	</ul>
	<!--%= link_to 'New customer', new_support_plan_path %-->
</div>
	
