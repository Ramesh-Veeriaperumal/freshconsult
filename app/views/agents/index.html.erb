<% content_for :sidebar do -%><%-end %>
	<div class="floatr">
		<%= link_to t('agent.new'), new_agent_path, :class => "uiButton"  %>
	</div>
	<h3 class="title"><%=t('agent.title')%></h3>
	<ul class="admin_list">		 
		<%@agents.each do |agent| %>
			<li>
				<div class="item_actions">
					<%= link_to (t('delete'), agent, :confirm => "#{t('agent.info3')}?", 
												 :method => :delete, :class => "button") unless (agent.user == current_user)  %>
					<%= link_to t('edit'), edit_agent_path(agent), :class => "button" %>									 
				</div>
				<%= user_avatar(agent.user.avatar) %>
				<%= link_to(h(agent.user.display_name), edit_agent_path(agent), :class => "item_info") %>
				<div><%= h agent.user.job_title %></div>
				<div><%= mail_to ( h(agent.user.email)) %></div>							
			</li>	
		<% end %>	 
	</ul>
	
