<% content_for :sidebar do %>
  <%= render :partial => "helpnote_without_tour" %>
<% end %>

<%= include_stylesheets :pattern %>
<%= include_javascripts :pattern  %>
<%= include_stylesheets :redactor  %>
<%= include_javascripts :redactor  %>
<% form_for @agent, :html => { :id => "agent_form", :rel => "validate", :multipart => true, 
    "data-focus-invalid" => false,  "data-ignore" => "" } do |f| %>
  <%= f.error_messages %>
  <h3 class="lead">
    <%=t('agent.edit')%>
    <span class="pull-right">
     <%= link_to t('cancel'), {:action => 'index'}, :class => "btn" %>
      <%= f.submit t('save'), { :class => "btn  btn-primary" } %>
    </span>
  </h3>
  <div class="seperator"></div><br/>
  <%= render :partial => "agent_form", :locals => { :type => "edit" } %>
  <ul class="admin-breadcrumb breadcum-footer clearfix">
      <li class="non-arrow pull-right">
        <%= f.submit t('save'), { :class => "btn  btn-primary" } %>
      </li>
    	<li class="non-arrow pull-right">
    		<%= link_to t('cancel'), {:action => 'index'}, :class => "btn" %>
    	</li>
  </ul>  
<%end%>
 
