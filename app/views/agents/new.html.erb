<script>

function setUserRole()
{
	
	if (jQuery('input[name=user_role]').is(':checked'))
	{
		jQuery('#role_taken').val('admin');

	}
	else
	{
		jQuery('#role_taken').val('poweruser');
		
	}
	
}
</script>

