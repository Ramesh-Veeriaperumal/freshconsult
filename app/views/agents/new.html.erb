<% if current_account.reached_agent_limit? %>	
	<p>
	    You have reached the maximum number of agents you can have with your subscription. You can either delete some of your agents or <a href="/account/plan">upgrade your account</a> to be able to create a new agent.
	</p>	
<% else %>
	<% content_for :sidebar do -%><%-end %>
	<h3 class="title"><%=t('agent.new')%></h3>
	<% form_for @agent, :html => { :multipart => true } do |f| %>
		<%= f.error_messages %>		
	 	<%= render :partial => "agent_form" %>
		<div class="button-container">
	   		<%= f.submit 'Save', { :class => "uiButton" } %>
			<%= link_to "Cancel", {:action => 'index'}, :class => "uiButton" %>
		</div>  
	<%end%>
<% end %>
