<div class="chats-container">
  <% if current_user && current_user.agent? && current_account.freshfone_active? %>
    <% twilio_client_version = current_account.freshfone_account.twilio_client_version%>
    <script type="text/javascript" src= <%= "https://static.twilio.com/libs/twiliojs/#{twilio_client_version}/twilio.min.js"%> >
    </script>
    <%= render :partial => 'layouts/shared/freshfone' %>
  <% end %>
  <%= render :partial => "layouts/chat"%>
  <% if in_app_support? %>
    <%= render :partial => "layouts/shared/chat/chat_support"%>
  <% end %>
</div>

<% if current_user && current_user.agent? && (current_account.freshfone_active? || ( chat_activated? && !(is_assumed_user?))) %>
  <%= stylesheet_link_tag_with_rtl :'cdn/freshfone_livechat' %>
<% end %>