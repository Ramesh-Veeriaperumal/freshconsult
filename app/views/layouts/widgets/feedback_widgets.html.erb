<!DOCTYPE html>
<%= open_html_tag %>
	<head>
    	<meta charset="utf-8">	
		<!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
		     Remove this if you use the .htaccess -->
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	  
	  	<title><%= "#{h(current_account.name)} Widget" %></title>
	  	<link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,600,700' rel='stylesheet' type='text/css'/>
		<%= stylesheet_link_tag_with_rtl :'cdn/widget' %>
		<%= stylesheet_link_tag_with_rtl :'cdn/ie_hacks' %>		
		<%= javascript_tag do %>
			var validation_messages = <%= I18n.translate('validation').to_json.html_safe %>	
		<%- end -%>
		<%= javascript_include_tag :'cdn/fdwidget' %>
		<%= javascript_include_tag :'cdn/pattern' %>
		<%= javascript_include_tag :'cdn/redactor' %>
		<%= javascript_include_tag :"cdn/i18n/#{I18n.locale.to_s}" %>
		
		<%= javascript_tag do %>
				jQuery.extend(jQuery.validator.messages, validation_messages );
		<%- end -%>

		<!--[if IE]><%= javascript_include_tag :'cdn/excanvas' %><![endif]-->

	  	<%= yield :head %>
		<script type="text/javascript">
			var $J = jQuery.noConflict();
				I18n.defaultLocale = "<%= I18n.locale.to_s %>";	
				I18n.locale = "<%= I18n.locale.to_s %>";	
		</script>
		<%= render :partial => "layouts/support/google_analytics_integration" %>
	</head>
    <body data-lang="<%= I18n.locale.to_s %>">
    	<div class="feedback-wrapper">
	    	<div class="modal modal-widget" id="feedback-widget-container">
				<%= yield %>
			</div>
		</div>		
    </body>
</html>


