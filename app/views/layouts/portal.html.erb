<!DOCTYPE html>
<%= render :partial => "layouts/shared/html" %>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

		<title><%= page_title %></title>
		<meta name="description" content="<%= page_description %>">
		<meta name="author" content="">
		<meta name="keywords" content="<%= page_keywords %>">

		<meta name="viewport" content="width=device-width">  
		<link rel="shortcut icon" href="<%= current_portal.fav_icon_url %>" />
		
		<%#= include_stylesheets :portal, :redactor %>
		<%= include_stylesheets :portal %>
		<link href="/theme.css" media="screen" rel="stylesheet" type="text/css">
		<%= portal_fonts %>
		<%= include_javascripts :portal_head %>

		<!-- Access variables for the portal -->
		<%= portal_access_varibles %>
	</head>
	<body>
		<%= assumed_identity_message %>
		
		<%= @layout %>

		<%= include_javascripts :portal_bottom, :redactor %>
		<%= render :partial => "layouts/integrations" %>
	</body>
</html>