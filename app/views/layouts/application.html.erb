<!DOCTYPE html>
<%
  @debuging =  Rails.env.development? && params.has_key?("debug")
  @content_for_sidebar = content_for?(:sidebar)
  @content_for_helpcard = content_for?(:helpcard)

%>
  <%= open_html_tag %>
	<%= render :partial => "layouts/shared/head" %>
	<body class="<% unless(@content_for_sidebar || @content_for_helpcard) %>single<% end %> <%= yield :layoutType %>">
		<div id="wrap">
			<%= render(:partial => '/layouts/shared/header') %>
			<%if @debug%>
			<script type="text/javascript">
    		var t_headerend = new Date().getTime();
  		</script>
  		<%end%>
      <%= render(:partial => '/discussions/shared/sidebar') if forums_visibility? %>
      <%= render(:partial => '/solution/shared/navmenu') if privilege?(:view_solutions) %>
  		<div class="content" id="body-container">
  		  <%= render :partial => "layouts/tour_my_app" %>
        <%= render :file => "layouts/maincontent" %>
		  </div>
  		<%= render :partial => "layouts/shared/footer" %>
      <%= render :partial => "layouts/shared/scripts" %>
    </div>
  </body>
</html>
