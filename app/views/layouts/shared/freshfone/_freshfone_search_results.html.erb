<% results_found = false %>
<% if !freshfone_search_results.blank? %>
	<% freshfone_search_results.each do |search_record| %>
	  <% if !search_record[:phone].blank? || !search_record[:mobile].blank? || search_record[:custom_field].any? %>
	  	<% results_found = true %>
	  	<li id="result-info" data-contact-id="<%= search_record[:id] %>">
		  	<div class='contact'>
		  		<div class='ff_profile_img hide' id="<%= search_record[:id] %>">
		  				<%= user_avatar(search_record[:user], :thumb, "preview_pic circle") %>
		  		</div>
		  		<div class="contact-name result-name ellipsis"><%= search_record[:value] %> </div>
		  		<% unless search_record[:company].blank? %>
		  			<div class="company-name result-company ellipsis"> 
		  				<%= search_record[:company] %> 
		  			</div>
		  		<% end %>
		  	</div>

		  	<ul class='contact-num'>
					<% unless search_record[:phone].blank? %>
		  			<li class='contact-details search-result' id="ff_contact_id_<%= search_record[:id] %>">
							<div class="phone-contact result-phone ellipsis"><%= search_record[:phone] %> </div>
					  	<div class="phone-type ellipsis"><%=t('freshfone.search.work_phone')%></div>
							<div class="ff_call_button pull-right hide">
								<%= font_icon "ff-phone", :size => 11 %> Call
							</div> 
		  			</li>
		  		<% end %>

		  		<% unless search_record[:mobile].blank? %>
		  			<li class='phone-details search-result' id="ff_contact_id_<%= search_record[:id] %>">
					  	<div class="phone-contact result-phone ellipsis"><%= search_record[:mobile] %> </div>
					  	<div class="phone-type ellipsis"><%=t('freshfone.search.mobile_phone')%></div>
					  	<div class="ff_call_button pull-right hide">
								<%= font_icon "ff-phone", :size => 11 %> Call
							</div> 
		  			</li>
					<% end %>

					<% if search_record[:custom_field].length > 0 %>
						<%= render :partial => 'layouts/shared/freshfone/freshfone_custom_fields',:object => search_record %>
					<% end %>
				</ul>
			</li>
		<% end %>	
	<% end %>
<% end %>

<% unless results_found %>
 	<li class="no-search-result hide">
		<ul class="no-search-result-number hide">
			<li class="searched-number search-result">
				<div class="no_results contact-num phone-contact "></div>
			</li>
		</ul>
	</li>
<% end %>