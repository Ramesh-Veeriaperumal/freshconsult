<% if current_account_freshfone_numbers.length == 1 %>
 <% number = current_account_freshfone_numbers.first %>
	<span data-number_id='<%= number[1] %>' class="outgoing_number"
				id="outgoing_number_selector"><%= number[0] %></span>
<% else %>
	<%= select_tag "outgoing_number_selector", 
								options_for_select(current_account_freshfone_numbers),  
								 :class => "select2 span2 outgoing_numbers_list",
								 :id => "outgoing_number_selector",
								 :"data-dropdown-css-class" => "outgoing_numbers_list_dropdown",
								 :"data-minimum-results-for-search" => 5,
								 :"data-attachto-container-class" => ".popupbox-content" %>
<% end %>
<span class="invalid_phone_text hide"><%=t('freshfone.dialpad.not_valid_number')%></span>
<span class="info_message hide"><%=t('freshfone.dialpad.not_enough_credit')%></span>
<input class="user_phone" id="number" type="tel">