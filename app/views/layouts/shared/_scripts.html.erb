<%- javascript_tag do -%>
  // Partial Localizing for date elements
	date_lang = <%= t("date").to_json.html_safe %>;
	
	jQuery(document).ready(function() {
		<%= yield :onload_script -%>
		<% if flash[:highlight] %>
			var ele = jQuery("#<%= flash[:highlight] %>");
			if(ele.is('tr'))
				ele = ele.find('td');
			ele.addClass('record_highlight');
		<% end %>
	});
<%- end -%>