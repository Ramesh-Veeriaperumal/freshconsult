<%- javascript_tag do -%>	
	jQuery(document).ready(function() {
		<%= yield :onload_script -%>
			
		// Setting the locale for moment js
		moment.lang('#{I18n.locale.to_s.downcase}');

		<% if flash[:highlight] %>
			var ele = jQuery("#<%= flash[:highlight] %>");
			if(ele.is('tr'))
				ele = ele.find('td');
			ele.addClass('record_highlight');
		<% end %>
	});
<%- end -%>