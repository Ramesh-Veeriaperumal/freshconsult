<!doctype html>
  	<%= open_html_tag %>
	<head>
	  	<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	  	<title><%= h(page_title) %></title>
		<meta name="description" content="<%= page_description %>">
		<meta name="author" content="">
		<meta name="keywords" content="<%= page_keywords %>">

    <!-- Adding meta tag for CSRF token -->
    <%= csrf_meta_tag %>
    <!-- End meta tag for CSRF token -->

		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<% unless page_canonical.blank? %>
			<link rel="canonical" href="<%= page_canonical %>" />
		<% end %>
		<link rel="canonical shortcut icon" href="<%= fav_icon_url %>" />
		<%= stylesheet_link_tag_with_rtl :'cdn/common' %>
		<%= stylesheet_link_tag_with_rtl :'cdn/ie_hacks' %>
		<%= stylesheet_link_tag_with_rtl :'cdn/shopify_listing' %>
		<%= stylesheet_link_tag_with_rtl :'cdn/pattern', :media => "screen, print, projection"  %>
		<%= render :partial => "shared/theme", :formats => [:css]  %>

		<script type="text/javascript">
			PROFILE_BLANK_THUMB_PATH = '<%= image_path("misc/profile_blank_thumb.jpg") %>';
			PROFILE_BLANK_MEDIUM_PATH = '<%= image_path("misc/profile_blank_medium.jpg") %>';
			FILLER_IMAGES = {
				imageLoading : '<%= image_path("animated/image_upload_placeholder.gif") %>'
			};
			cloudfront_version = "<%= CLOUDFRONT_VERSION %>";
		</script>
		<%= javascript_include_tag :'cdn/defaults'  %>
		<%= javascript_include_tag :'cdn/frameworks' %>
		<%= javascript_include_tag :'cdn/workspace' %>
		<%= javascript_include_tag :'cdn/pattern'  %>
		<%= javascript_include_tag :'cdn/visitor' %>
		<%= yield :head %>
	</head>
	<body class="shopify-signup">
		<div>
			<%= yield %>
		</div>
		<script type="text/javascript">
				var ele = document.getElementById('domain-name');
				ele.addEventListener("keyup", function(evt) {
					var data = ele.value;
					if (data) {
						document.getElementById("domain-btn").disabled = false;
					} else {
						document.getElementById("domain-btn").disabled = true;
					}
				});
		</script>
	</body>
</html>