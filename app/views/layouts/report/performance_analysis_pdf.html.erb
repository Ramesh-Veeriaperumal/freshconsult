<%= render :partial => "layouts/report/pdf_files", :locals => {} %>
<div class="report-page" id="report-page">
  <div class="report-content-wrapper">
    <!--report header-->
    <%= render :partial => "reports/shared/report_view_header", :locals => {:is_pdf =>true} %>

    <div class="row-fluid">
      <div class="span12">
        <h3 class="header-lead"><span>Response Accuracy</span></h3>
        <div id="response_accuracy_line_chart" class="single-stacked-bar" style="height:330px;"><div class="noinfo">No data to display!</div></div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h3 class="header-lead"><span>Response Time</span></h3>
        <div id="response_time_line_chart" class="single-stacked-bar" style="height:330px;"><div class="noinfo">No data to display!</div></div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h3 class="header-lead"><span>Customer Interactions vs Agent Interactions</span></h3>
        <div id="interactions_line_chart" class="single-stacked-bar" style="height:330px;"><div class="noinfo">No data to display!</div></div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h3 class="header-lead"><span>Ticket Assiggnment</span></h3>
        <div id="assignments_line_chart" class="single-stacked-bar" style="height:330px;"><div class="noinfo">No data to display!</div></div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
var data_obj = <%=@data_obj.to_json.html_safe%>
jQuery(document).ready(function() {
  var analysis_1_lineChart = new lineChart(
      {renderTo: 'response_accuracy_line_chart',chartData:[data_obj['resolved_tickets'],data_obj['fcr_tickets'],data_obj['sla_tickets'],data_obj['num_of_reopens']],isPDF:true}
    );
  analysis_1_lineChart.lineChartGraph();
  
  var analysis_2_lineChart = new lineChart(
      {renderTo: 'response_time_line_chart',chartData:[data_obj['first_response_time'],data_obj['avg_response_time']],isPDF:true}
    );
  analysis_2_lineChart.lineChartGraph();
  var analysis_3_lineChart = new lineChart(
      {renderTo: 'interactions_line_chart',chartData:[data_obj['customer_interactions'],data_obj['agent_interactions']],isPDF:true}
    );
  analysis_3_lineChart.lineChartGraph();
  var analysis_4_lineChart = new lineChart(
      {renderTo: 'assignments_line_chart',
      chartData:[data_obj['tickets_assigned'],data_obj['num_of_reassigns']],
      yAxisTitle:'No. of Ticket Operations',
      toolTipLabel: 'Operation(s)',isPDF:true}
    );
  analysis_4_lineChart.lineChartGraph();
});
</script>