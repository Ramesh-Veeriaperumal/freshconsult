                <div id="inner">
                    <div class="leftcontent"> 
						<%= yield  %>
                    </div> 
	                <div class="sidebar">
						 <%= yield :sidebar %>					
					</div> 
				</div> 
			</div>
        	<div class="push"></div>
		</div>
		<div id="footer" class="footer">
	        <div class="corners">
	            <span class="ltSlant"></span>
	            <span class="rtSlant"></span>
	            <span class="ltExt"></span>
	            <span class="rtExt"></span>
	        </div>
