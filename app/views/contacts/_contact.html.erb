<tr>
	<td class="selector-box">
    <% if (params[:state].eql?("unverified") && privilege?(:manage_users)) ||
        privilege?(:delete_contact) %>
		  <%= check_box_tag('ids[]', contact.to_param, false, :class => 'customers_selector', :disabled => contact.parent) %>
    <% end %>
	</td>
	<td >
		<div class="cust-list-avatar">
			<%= user_avatar(contact)%> <!-- class="img-circle" have to add in img tag for circle-->
		</div>
		<div class="text-info">
			<strong><%= link_to(h(contact.display_name), {:controller => "contacts", :action => "show", :id => contact}, :class => "item_info custom-tip-bottom contact-name", :'data-pjax' => "#body-container") %></strong>
			<% unless contact.job_title.blank? %>
				<p class="muted mb0"><%= h contact.job_title %></p>
			<% end %>
			<% if contact.privilege?(:contractor) %>
				<p>
					<% companies = contact.companies %>
					<% if companies.any? %>
						<% if contact.companies.length == 1 %>
							<%= link_to(h(companies.first.name), companies.first, :'data-pjax' => "#body-container", :class => "muted mb0") %>
						<% else %>
							<span class="muted mb0"> <%= t("n_companies", :count => contact.companies.length) %> </span>
						<% end %>
					<% end %>
				</p>
			<% elsif contact.company.present? %>
			  <p class="muted mb0">
			  	<%= link_to(h(contact.company.name), contact.company, :'data-pjax' => "#body-container") %>
			  </p>
			<% end %> 
		</div>
	</td>
	<td class="email">
		<div><%= content_tag(:span, "#{(contact.email)}") unless contact.email.blank? %></div>
		<div>
			<%= content_tag(:span, "#{I18n.t('phone')} : #{(contact.phone)} ") unless contact.phone.blank? %>
		</div>
		<% if contact.email.blank? and contact.phone.blank? and contact.mobile.blank? %>
			<%= content_tag(:div, "<a target='_blank' href=http://twitter.com/#{h(contact.twitter_id) }>@#{h(contact.twitter_id)}</a>".html_safe, :class => "user_twitter") if !contact.twitter_id.blank? %>
			<%= content_tag(:div, "<a target='_blank' href=http://facebook.com/#{h(contact.fb_profile_id) }>#{t('facebook_user')}</a>".html_safe) if !contact.fb_profile_id.blank? %>
		<% end %>
	</td>
	<td>
		<div class="user_actions hide" align="right">
			<% if privilege?(:delete_contact) %>
			   <%= link_to(content_tag(:i, "", :class => "ficon-restore fsize-16 contact-action"), {:controller => "contacts", :action => "unblock", :id => contact} , :method => 'get', :class => "btn p7 tooltip", :title => t('unblock').html_safe) if contact.spam? || contact.blocked?%>
			   <%= link_to(content_tag(:i, "", :class => "ficon-restore fsize-16 contact-action"), {:controller => "contacts", :action => "restore", :id => contact, :redirect_back => true} , :method => 'put', :class => "btn p7 tooltip", :title => t('contacts.restore').html_safe) if contact.deleted? and !contact.spam? and !contact.blocked? and contact.parent.nil? %>
			<% end %>
			<% if privilege?(:view_contacts) %>
			  <%= link_to(content_tag(:i, "", :class => "ficon-mail fsize-20 contact-action"), send_invite_activation_path(contact), 
			  	:class => "btn send-activation p7 tooltip",
			  	:"data-method" => 'PUT',
					:"data-loading-text" => "<i class='ficon-ellipsis'></i>".html_safe,
					:remote => true,
					:"data-type" => "json",
					:title => t('contacts.send_activation'),
					:"data-complete-text" => "<i class='icon-ok'></i>".html_safe) if !contact.active? and !contact.deleted and !contact.spam? and !contact.blocked? and !contact.email.blank? %>
			<% end %>
			<% if privilege?(:manage_contacts) %>
			   <%= link_to(content_tag(:i, "", :class => "ficon-edit fsize-20 contact-action"), edit_contact_path(contact), :class => "p7 tooltip", 
			   	:'data-pjax' => "#body-container",
			   	:title => t('contacts.edit_contact')) if !contact.deleted? and !contact.spam? and !contact.blocked? %>
			<% end %>
			<% if privilege?(:delete_contact) %>
						<% if contact != current_user and !contact.deleted? and !contact.spam? and !contact.blocked? %>
			   		<%= link_to("<i class='ficon-trash-o fsize-20 contact-action'></i>".html_safe, {:controller => "contacts", :action => "destroy", :id => contact} , :method => 'delete', :class => "hide", :id => "user_id_"+contact.id.to_s)%>
			 		<a href="#user-deletion-confirmation" 
			 				rel="freshdialog"
			 				class="delete_user_btn p7 tooltip" 
			 				title="<%= t('contacts.delete_contact')%>" 
			 				data-user="<%=contact.id%>"
			 				data-submit-label="Confirm"
			 				data-width="400px"
			 				data-close-on-submit="true"
			 				data-close-label="Cancel" 
			 				data-destroy-on-close="true"
			 				>
			 			<i class='ficon-trash-o fsize-20 contact-action'></i>
			 		</a>
					<% end %>
			<% end %>
		</div>
	</td>
</tr>
