<tr>
	<td class="selector-box">
    <% if (params[:state].eql?("unverified") && privilege?(:manage_users)) ||
        privilege?(:delete_contact) %>
		  <%= check_box_tag('ids[]', contact.to_param, false, :class => 'customers_selector', :disabled => contact.parent) %>
    <% end %>
	</td>
	<td >
		<a href="#" class="cust-list-avatar">
			<%= user_avatar(contact)%> <!-- class="img-circle" have to add in img tag for circle-->
		</a>
		<div class="text-info">
			<strong><%= link_to(h(contact.display_name), {:controller => "contacts", :action => "show", :id => contact}, :class => "item_info custom-tip-bottom contact-name", :'data-pjax' => "#body-container") %></strong>
			<% unless contact.job_title.blank? %>
				<p class="muted mb0"><%= h contact.job_title %></p>
			<% end %>
			<% unless contact.company.blank? %>
			  	<p class="muted mb0"><%= link_to(h(contact.company.name), contact.company, :'data-pjax' => "#body-container") %></p>
			<% end %> 
		</div>
	</td>
	<td class="email">
		<div><%= content_tag(:span, "#{(contact.email)}") unless contact.email.blank? %></div>
		<div>
			<%= content_tag(:span, "#{I18n.t('phone')} : #{(contact.phone)} ") unless contact.phone.blank? %>
		</div>
		<% if contact.email.blank? and contact.phone.blank? and contact.mobile.blank? %>
			<%= content_tag(:div, "<a target='_blank' href=http://twitter.com/#{h(contact.twitter_id) }>@#{h(contact.twitter_id)}</a>".html_safe, :class => "user_twitter") if !contact.twitter_id.blank? %>
			<%= content_tag(:div, "<a target='_blank' href=http://facebook.com/#{h(contact.fb_profile_id) }>#{t('facebook_user')}</a>".html_safe) if !contact.fb_profile_id.blank? %>
		<% end %>
	</td>
	<td>
		<div class="user_actions" align="right">
      <% if privilege?(:delete_contact) %>
			   <%= link_to(t('unblock').html_safe, {:controller => "contacts", :action => "unblock", :id => contact} , :method => 'get', :class => "btn btn-mini") if contact.spam? || contact.blocked?%>
			   <%= link_to(t('contacts.restore').html_safe, {:controller => "contacts", :action => "restore", :id => contact, :redirect_back => true} , :method => 'put', :class => "btn btn-mini") if contact.deleted? and !contact.spam? and !contact.blocked? and contact.parent.nil? %>
      <% end %>
      <% if privilege?(:view_contacts) %>
			  <%= link_to(t('contacts.send_activation').html_safe, send_invite_activation_path(contact), 
			  	:class => "btn send-activation btn-mini",
			  	:"data-method" => 'PUT',
					:"data-loading-text" => t('admin.getting_started.index.next_please_wait').html_safe, 
					:remote => true,
					:"data-type" => "json",
					:"data-complete-text" => "<i class='icon-ok'></i><b class='sent-text'>#{t('users.activations.sent')}</b>".html_safe) if !contact.active? and !contact.deleted and !contact.spam? and !contact.blocked? and !contact.email.blank? %>
      <% end %>
      <% if privilege?(:manage_contacts) %>
			   <%= link_to(t('edit').html_safe, edit_contact_path(contact), :class => "btn btn-mini", 
			   	:'data-pjax' => "#body-container") if !contact.deleted? and !contact.spam? and !contact.blocked? %>
      <% end %>
      <% if privilege?(:delete_contact) %>
      			<% if contact != current_user and !contact.deleted? and !contact.spam? and !contact.blocked? %>
			   		<%= link_to("<i class='icon-trash'></i>".html_safe, {:controller => "contacts", :action => "destroy", :id => contact} , :method => 'delete', :class => "btn btn-mini hide", :id => "user_id_"+contact.id.to_s)%>
			 		<a href="#user-deletion-confirmation" 
			 				rel="freshdialog"
			 				class="btn btn-mini delete_user_btn" 
			 				title="<%= t('contacts.delete_contact')%>" 
			 				data-user="<%=contact.id%>"
			 				data-submit-label="Confirm"
			 				data-width="400px"
			 				data-close-on-submit="true"
			 				data-close-label="Cancel" 
			 				data-destroy-on-close="true"
			 				>
			 			<i class='icon-trash'></i>
			 		</a>
		 		<% end %>
      <% end %>
		</div>
	</td>
</tr>
