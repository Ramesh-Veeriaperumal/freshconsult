<div class="contact_hover circle-profile">
    <%= user_avatar(@user) %>
  <div class="infoblock muted">
    <%= content_tag :div, link_to(h(@user.display_name), @user), :class => "user_name" %>

    <div class="user_desig">
      <%= render :partial => "helpdesk/tickets/components/company_info", :locals => { :user => @user } %>
    </div>

    <% unless @user.email.blank? %>
      <div class="contact-append">
        <span class="add-on"><i class="product-email-logo"></i></span>
        <%= content_tag :div, h(@user.email), :class => "input-box" %>
      </div>
    <% end %>

    <% unless @user.phone.blank? %>
      <div class="contact-append">
        <span class="add-on"><i class="product-call"></i></span>
        <%= content_tag :div, h(@user.phone),:class => "input-box" %>
      </div>
    <% else %>
      <% unless @user.mobile.blank? %>
        <div class="contact-append">
          <span class="add-on"><i class="product-call"></i></span>
          <%= content_tag :div, h(@user.mobile), :class => "input-box" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>