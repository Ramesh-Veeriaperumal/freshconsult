<div class="contact_hover circle-profile">
    <%= user_avatar(@user) %>
  <div class="infoblock muted">
    <%= content_tag :div, link_to(h(@user.display_name), @user), :class => "user_name" %>
    <div class="user_desig">
      <%= render :partial => "helpdesk/tickets/components/company_info", :locals => { :user => @user } %>
      <% if feature?(:gamification) and @user.agent? %>
      <%= content_tag :div, h(@user.agent.level.name) unless @user.agent.level.blank? %>
    <% end %>
    </div>

    <% unless @user.email.blank? %>
      <div class="contact-append">
        <span class="add-on"><i class="product-email-logo"></i></span>
        <%= content_tag :div, h(@user.email), :class => "hover-contact-box ellipsis" %>
      </div>
    <% end %>

    <% unless @user.phone.blank? %>
      <div class="contact-append">
        <span class="add-on"><i class="product-call"></i></span>
        <%= content_tag :div, h(@user.phone),:class => "hover-contact-box" %>
      </div>
    <% else %>
      <% unless @user.mobile.blank? %>
        <div class="contact-append">
          <span class="add-on"><i class="product-call"></i></span>
          <%= content_tag :div, h(@user.mobile), :class => "hover-contact-box" %>
        </div>
      <% end %>
    <% end %>
    <% unless @user.email.present? and @user.phone.present? and @user.mobile.present? %>
      <% unless @user.twitter_id.blank? %>
        <div class="contact-append">
          <span class="add-on"><i class="product-twitter"></i></span>
          <%= content_tag :div, h(@user.twitter_id), :class => "hover-contact-box" %>
        </div>
      <% end %>
    <% end %>

    <div class="contact-append">
          <span class="add-on recent-tickets">
              <%= link_to t('ticket.recent_tickets',:nick_name => h(@user.display_name)).html_safe, helpdesk_requester_filter_path(:requester_id => @user.id) , :id => "show_more" if @user.agent? %>
          </span>
    </div>
  </div>
</div>