<% content_for :layoutType do -%>single bg_pulp<%-end %>
<% content_for :sidebar do %>
	<div class="rightSubContainers">
		<h3 class="title">Contact info</h3>
		<ul class="ui-list_with_icon contact_info">
			<li class="icon_text">
				<img src="/images/icons/email_icon.png" width="24px" height="24px" />
				<% unless @user.email.nil? %>
					<%= mail_to (@user.email) %>
				<% end %>
				<% unless @user.second_email.nil? %>
					<%= mail_to (@user.second_email) %>
				<% end %>
			</li>
			<li class="icon_text">
				<img src="/images/icons/phone_icon.png" width="24px" height="24px" />
				<% unless @user.phone.nil? %>
					<span><em>work:</em><%= @user.phone %></span>
				<% end %>
				<% unless @user.mobile.nil? %>
					<span><em>mobile:</em><%= @user.mobile %></span>
				<% end %>
			</li>
		</ul>
	</div>
<% end %>

<div class="page_area contactPage">
	<%= user_avatar(@user.avatar, :medium, "profile_pic") %>
	<div class="contact_box">
		<div class="floatr">
			<%= link_to 'Edit', edit_contact_path(@user), :class => "button" %>
			<%= link_to('Delete', {:controller => "contacts", :action => "destroy", :id => @user} , :method => 'delete', :confirm => 'Are you sure you want to delete this contact?', :class => "button") unless @user == current_user %>		
		</div> 
		<h4 class="info_title"><%= @user.display_name %></h4>
		<% unless @user.job_title.blank? %>
		   <b><%= h @user.job_title %></b>
		<% else %>
		   Working
		<% end %>
		<% unless @user.customer.blank? %>
			at <%= link_to(h(@user.customer.name), @user.customer)  %>
		<% end %>	
		<span class="seperator"></span>
		<div class="user_info">
			<%= content_tag (:div, "#{content_tag(:span, "primary")}  #{h(@user.email)}") unless @user.email.blank? %>
			<%= content_tag (:div, "#{content_tag(:span, "secondary")}  #{h(@user.second_email)}") unless @user.second_email.blank? %>
			<%= content_tag (:div, "#{content_tag(:span, "phone")}  #{h(@user.phone)}") unless @user.phone.blank? %>
			<%= content_tag (:div, "#{content_tag(:span, "mobile")}  #{h(@user.mobile)}") unless @user.mobile.blank? %>
			<%= content_tag (:div, "#{content_tag(:span, "twitter id")}  #{h(@user.twitter_id)}") unless @user.twitter_id.blank? %>
			<%= content_tag (:div, "#{content_tag(:span, "time zone")}  #{h(@user.time_zone)}") %>
		</div>
		<% unless @user.description.blank? %>
			<span class="seperator"></span>
			<h4>Background information</h4>
			<div>
				<%= @user.description %>
			</div>					
		<% end %>
		<span class="seperator"></span>
		<h4> Tickets raised </h4>
		<% if @user.tickets.size.eql?(0) %>
			<%= "User has not created any tickets" %>
		<% end %>
		<ul class="history_list">
			<% @user.tickets.each do |ticket| %>
			<li class="<%= cycle('stripe', '') %>">
				<%= link_to("##{ticket.display_id} " + h(ticket.subject), ticket) %> 
				<%= formated_date(ticket.created_at) %> 
			</li>		
			<% end %>
		 </ul>
	</div> 			
</div>	