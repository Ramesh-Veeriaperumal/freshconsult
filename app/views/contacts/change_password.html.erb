<% content_for :sidebar do -%>&nbsp;<%- end %>

<%= form_for @user, :url => update_password_contact_path, :method => :put, :html => { :rel => "validate", :class => "form-portal"} do |f| %>
  <div class='page-header-sticky' rel='sticky'>
    <div class='sticky-header-wrapper'>
      <h3 class='lead pull-left'> 
        <%= t('profile.change_password') %> 
        <span class='info_data'> "
          <%= h(@user.display_name) %>"
        </span>
      </h3>
      <div class="pull-right">   
        <%= link_to(t('cancel'), {:controller =>'contacts', :action => 'show', :id => @user} , :class => "btn") %>
        <%= submit_tag t('save'), :class => "btn btn-primary"  %>
      </div>
    </div>
    <hr />
    
    <br />
    <%= render :partial => "update_password_form" %>
  </div>
<% end %>
