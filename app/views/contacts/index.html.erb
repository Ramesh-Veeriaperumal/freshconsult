<% content_for :layoutType do -%>single<%- end %>  

<%content_for :sidebar do%>
	<div class="sidepanel">
	<h3 class="title">Quick Contact</h3>
	
	<% form_tag :url  => contacts_path, :method =>:post do %>
	<%= error_messages_for :user %> 	
	<ul class="ui-form">
	<li> 
		<label for="user_name">Full Name</label> 
		<input class="text" id="user_name" name="user[name]" size="30" type="text" value="" /> 
	</li> 
	<li>
		<label for="email_primary">Email</label> 
		<input class="text" id="email_primary" name="user[email]" size="30" type="text" />
	</li>
	<li>
		<label for="user_phone">Phone</label> 
		<input class="text" id="phone_work" name="user[phone]" size="30" type="text" /> 
	</li>
	</ul>
  		<div><%= submit_tag 'Create', :class => "fdbutton" %></div>
	<% end %>
	</div>
<%end%>

<%= render(:partial => '/shared/companyheader', :locals => {:type => "user"}) %>
<ul id="users" class="content_list contact_list">	  
  <% @contacts.each do |contact| %>
    <li class="<%= cycle('stripe', '') %>">	   
	  <div class="item_actions">
	  	<%= link_to('Edit', edit_contact_path(contact), :class => "button") %>
      	<%= link_to('Delete', {:controller => "contacts", :action => "destroy", :id => contact} , :method => 'delete', :confirm => 'Are you sure you want to delete this contact?', :class => "button") unless contact == current_user %>
	  </div>	   
	  <%= user_avatar( contact.avatar ) %>
	  <div class="item_information">
	  	<div class="col1">
        	<%= link_to(h(contact.display_name), {:controller => "contacts", :action => "show", :id => contact}, :class => "item_info" ) %>
			<div>
			
			</div>
			<div class="user_info">
		  		<%= content_tag (:div, "#{content_tag(:span, "primary")}  #{h(contact.email)}") unless contact.email.blank? %>
				<%# content_tag (:div, "#{content_tag(:span, "secondary")}  #{h(contact.second_email)}") unless contact.second_email.blank? %>
				<%= content_tag (:div, "#{content_tag(:span, "phone")}  #{h(contact.phone)}") unless contact.phone.blank? %>
				<%# content_tag (:div, "#{content_tag(:span, "mobile")}  #{h(contact.mobile)}") unless contact.mobile.blank? %>
			</div>
		</div>
	  	<div class="col2">
	  		<% unless contact.job_title.blank? %>
	  			<b><%= h contact.job_title %></b>
			<% else %>
				<% unless contact.customer.blank? %>
			   		Working
				<% end %> 
			<% end %>
			<% unless contact.customer.blank? %>
			   at <%= link_to(h(contact.customer.name), contact.customer)  %>
			<% end %>
		</div>
	 </div>
     	      
    </li>	
  <% end %>	 
</ul> 
<div>  <%= will_paginate @contacts %> </div>