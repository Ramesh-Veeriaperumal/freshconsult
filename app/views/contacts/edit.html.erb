<% content_for :sidebar do -%><%- end %>
<h3 class="title"><%=t('contacts.edit')%> <span class="info_data">"<%= @user.display_name %>"</span> </h3>
<% form_for @user, :url => { :controller => "contacts", :action => "update" },:html => { :multipart => true }  do |f| %>
	  <%= render :partial => "form", :locals => { :f => f, :type => "edit" } %>
	  <div class="button-container">
      <% if privilege?(:delete_contact) %>
		  <div class="floatl">
		  		<%= link_to(t('delete'), {:controller => "contacts", :action => "destroy", :id => @user} , :method => 'delete', :confirm => 'Are you sure you want to delete this contact?', :class => "uiButton red") %>
		  </div>
      <% end %>
	      <%= f.submit t('contacts.save_changes'), :class => "uiButton" %> 
		  <%= link_to t('cancel'), (@user.new_record? ? {:controller =>'contacts', :action => 'index'} : @user ), :class => "uiButton" %>
	</div>
<% end -%>