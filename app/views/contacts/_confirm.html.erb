<% form_tag :action => :complete, :controller => 'contact_merge', :method => :post do |f| %>
  <%= hidden_field_tag 'parent_user',  @source_user.id %>
  <div class="contact-special">
 	  <br>
    <div id="primary-contact">
      <div id="user-contact" data-uid="<%= h(@source_user.id) %>">
        <%= user_avatar(@source_user) %>
        <a class="item_info"><b><%= h(@source_user.name) %></b></a>
        <div class="info_contact_data">
          <span><%= h(@source_user.company.name) unless @source_user.company.nil?%></span>
          <span><%= h(@source_user.email) %></span>
        </div>
      </div>
    </div>
    <div id="merge-ready">
      <% @target_user.each do |target| %>
        <div id="one-contact">
          <% if target == @target_user.last %>
            <span class="line last-line"></span>
          <% else %>
            <span class="line"></span>
          <% end %>
          <div id="contact-area">
            <div id="user-contact" data-uid="<%= h(target.id) %>">
              <%= user_avatar(target) %>
              <a class="item_info"><b><%= h(target.name) %></b></a>
              <%= hidden_field_tag 'target[]', target.id %>
              <div class="info_contact_data">
                <span><%= h(target.company.name) unless target.company.nil?%></span>
                <span><%= h(target.email) %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="info-text">
    <h3><%= t("merge_contacts.header",{:number => @target_user.size, :name => @source_user.name}).html_safe %></h3>
    <%= t("merge_contacts.info", {:name => @source_user.name}).html_safe %>
  </div>
  <div class="button-container">
    <%= link_to_function(t("back"), "jQuery('#mergebox_confirm').hide(); jQuery('#mergebox').show();", :class => "btn", :id  => "back-user-merge") %> 
    <a class="btn" id="cancel-user-merge" data-dismiss="modal"><%= t('cancel') %></a>
      <%= submit_tag t('merge_contacts.confirm_and_merge'), :class => "btn btn-primary", :id => "merge_completion", "data-loading-text" => t('merge_contacts.please_wait') %>
  </div>
<%end%>
