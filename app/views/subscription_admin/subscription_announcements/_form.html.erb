<%= form.error_messages %> 
<div class="control-group">
	<%= form.label :notification_type, "", :class => "control-label" %>
	<div class="controls">
  		<%= form.select :notification_type, options_for_select(
	  		SubscriptionAnnouncement::NOTIFICATION_TYPES_OPTIONS, :selected => @announcement.notification_type
  		), :include_blank => true%>
	</div>
</div> 
<div class="control-group">
  <%= form.label :title, "",:class => "control-label" %>
	<div class="controls">
  	<%= form.text_field :title, :class => "input span3" %>
	</div>
</div>
<div class="control-group" id="notification-url">
  <%= form.label :url, "",:class => "control-label" %>
	<div class="controls">
  	<%= form.text_field :url, :class => "input span3" %>
		<p class="help-block">
			Example: https://support.freshdesk.com/support/solutions/articles/12345
		</p>
	</div>
</div>
<div class="control-group">
  <%= form.label :message, "",:class => "control-label" %>
	<div class="controls">
  	<%= form.text_area :message, :class => "input-xlarge span5", :rows => "6", :cols => "80" %>
		<p class="help-block">
			You can add plain text inside the message
		</p>
	</div>
</div>
<div class="control-group notification-date">
  <%= form.label :starts_at, "", :class => "control-label" %>
	<div class="controls">
  	<%= form.datetime_select :starts_at %>
	</div>
</div>
<div class="control-group notification-date">
  <%= form.label :ends_at, "", :class => "control-label" %>
	<div class="controls">
  	<%= form.datetime_select :ends_at %>
	</div>
</div>
<%= javascript_include_tag :'cdn/subscription' %>
<%= javascript_tag do %>
    jQuery("#subscription_announcement_notification_type").on("change",function(){ 
		if(this.value == 2){
			jQuery(".notification-date").hide();
			jQuery("#notification-url").show();
		}else{
			jQuery(".notification-date").show();
			jQuery("#notification-url").hide();
		}
	})
	if(jQuery("#subscription_announcement_notification_type").val() == 2){
		jQuery(".notification-date").hide();
	}else{
		jQuery("#notification-url").hide();
	}
<% end %>