<h2>Edit announcement</h2>
<div class="row">
	<div class="span8">
		<% form_for [:admin, @announcement], :html => {:class => "form-horizontal"} do |f| %>
		  <fieldset>                
				<%= render :partial => "form", :object => f %>
			  <div class="form-actions">
			    <%= f.submit 'Update', :class => "btn btn-primary" %>  
					<%= link_to 'Cancel', admin_subscription_announcements_path, :class => "btn" %>   
					<%= link_to('Delete', admin_subscription_announcement_path(@announcement), :method => 'delete', :confirm => "Remove this announcement?", :class => "btn btn-danger offset2") %>
			  </div> 
			 </fieldset>
		<% end %>
	</div>
</div>    