<div class="page-header">     
	<%= javascript_include_tag :defaults %>
	<%= calendar_date_select_includes 'silver' %>
	<% CalendarDateSelect.format = :iso_date %>

	<% form_tag "/payments", :method => 'get', :class => "pull-right" do %>
	  <p>                                                                      
	    <%= calendar_date_select_tag 'start_date', "" %>
		 	to
      <%= calendar_date_select_tag :end_date, "" %>
	    <%= submit_tag "Search", :name => nil, :class => "btn" %>
	  </p>
	<% end %>
	
	<h1>Payments</h1>                         
</div>	
<div class="row">
	<div class="span8">
		<table id="accounts" class="table">
		  <tr>
		    <th>Name</th>
		    <th>Domain</th>
		    <th>Next Renewal Date</th>
			<th>Renewal Period</th>
			<th>Agent Count</th>
		  </tr>
		  <% @payments.each do |payment| %>
		   <%unless payment.account.nil?%>
		    <tr>
		      <td><%= link_to(h(payment.account.name), [:admin, payment.account]) %></td>
		      <td><%= payment.account.full_domain %></td>
		      <td><%= payment.subscription.next_renewal_at.to_s(:short_day) %></td>
			  <td><%= payment.subscription.renewal_period %></td>
			  <td><%= payment.subscription.agent_limit %></td>
		    </tr>
			<%end%>
		  <% end %>      
		</table>

		<%= will_paginate(@payments) %> 
	</div>
  
	<div class="span4">
		 <table class="table table-bordered">
			<tr>
		  	<th>Total Revenue</th>
			<th>$<%=@total_revenue%></th>
		  </tr>
		  <tr>
		  	<th>Revenue</th>
			<th>$<%=@revenue%></th>
		  </tr>
 		 </table>
	</div>
</div>