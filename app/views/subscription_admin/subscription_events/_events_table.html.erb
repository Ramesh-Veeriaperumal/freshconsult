<div class = 'event-container'>
  
  <div id="slide-down">
    <a id="slide-down"><img src="data:image/png;base64," /></a> <%= details[1] %>
  </div>
  
  <div class="event-overview"> 
    
    <ul>
      <li><%= pluralize(events.size, "Account") %></li>
      
    </ul>

  </div>

  <div class="event-details hide">  
    <% if (events.size.eql?(0)) %>
      <center>No accounts to display</center>

    <% else %>

      <table class="table table-striped table-details">

          <tr>
            <th>Company</th>
            <th>URL</th>
            
            <% unless details[0].eql?(:free) %>
              <th><%= column %></th>
            <% end %>

            <th>On</th>
            <th>Active since</th>
          </tr>
            
          <% events.each do |record| %>

          <%shard = ShardMapping.find_by_account_id(record.account_id)%>

          <%unless shard.blank?%>
            <% Sharding.run_on_shard(shard.shard_name) do %>
            
              <tr>
                <td><%= link_to(h(record.account.name), [:admin, record.account]) %></td>
                <td><%= record.account.full_domain %></td>

                <% unless details[0].eql?(:free) %>
                  <td><%= record.cmrr.abs %></td>
                <% end %>

                <td><%= record.code.eql?(200) ? record.updated_at.strftime("%b %d, %Y") : record.created_at.strftime("%b %d, %Y")%> </td>
                <td><%= record.account.created_at.strftime("%b %d, %Y") %></td>
              </tr>    
            <%end%>
          <%else%>
            <tr>
             <td style="color:red;">Account id : <%= record.account_id %></td>
                    <td> - </td>

                    <% unless details[0].eql?(:free) %>
                      <td><%= record.cmrr.abs %></td>
                    <% end %>

                    <td><%= record.created_at.strftime("%b %d, %Y") %></td>
                    <td> - </td>
            </tr>
          <%end%>
            
            
          <% end %>  
      </table> 

    <% end %>
  </div>
</div>
