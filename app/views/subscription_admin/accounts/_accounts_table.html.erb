<table id="accounts">
  <tr>
    <th>Name</th>
    <th>Domain</th>
    <th>Next Renewal Date</th>
	<th>Email</th>
	<th>Agent Count</th>
	<th>Helpdesk url</th>
	<th>Tickets Count</th>
  </tr>
  <% @accounts.each do |account| %>
    <%if account.subscription.state == "trial"%>
    <tr>
      <td><%= link_to(h(account.name), [:admin, account]) %></td>
      <td><%= account.full_domain %></td>
      <td><%= account.subscription.next_renewal_at.to_s(:short_day) %></td>
      <td><%= account.admin_email %></td>
      <td><%= account.all_agents.count %></td>
      <td><%= account.helpdesk_url %></td>
      <td><%= account.tickets.count %></td>
    </tr>
	<%end%>
  <% end %>
 
</table>

<%= will_paginate(@accounts) %>