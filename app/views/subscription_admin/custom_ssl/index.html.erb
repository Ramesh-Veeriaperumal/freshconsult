<div class="rwow">

	<div class="span4">
		<h3> New Custom SSL :</h3>
		<br/>
		<%= form_tag(enable_custom_ssl_admin_custom_ssl_path, :method => :post ) do %>
			
			<h5>Account ID : </h5>  
			<%= text_field_tag :account_id, "", :class => "span4" %>
			
			<h5>Portal URL : </h5>  
			<%= text_field_tag :portal_url, "", :class => "span4" %>

			<h5>ELB Name : </h5>  
			<%= text_field_tag :elb_name, "", :class => "span4" %>
			<br /><br />
			
			<%= submit_tag "Enable Custom SSL", :class => "btn btn-inverse" %>
		<% end %>
	</div>

	<% if @portals.present? %>
		<div class="span7">
			<h3> Customers with Custom SSL :</h3>
			<br/>
			<table class="table">
				<tr>
					<th>Account ID</th>
					<th>Account</th>
					<th>ELB Name</th>
				</tr>
				<% @portals.each do |portal| %>
					<tr>
						<td><%= link_to portal.account_id, admin_account_path(portal.account_id) %></td>
						<td><%= portal.portal_url %></td>
						<td><%= portal.elb_dns_name %></td>
					</tr>
				<% end %>
			</table>
			<%= will_paginate @portals, :renderer => BootstrapPaginationRenderer, 
							        				:previous_label => "<b class='arrow-left'></b>",
							        				:next_label => "<b class='arrow-right'></b>",
							        				:class => "pagination pagination-centered" %>
		</div>
	<% end %>
</div>