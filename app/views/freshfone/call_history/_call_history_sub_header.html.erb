
<div class="filter_title">
	<label>Number</label>
</div>
<div id="sorting_dropdown" class="filter_tool_select2">
	<input type="hidden" id="ff_number"  name="ff_number" class="number_id" fnumber=""/>
</div>
<div class="filter_title">
	<label><%= t('freshfone.call_history.filter_by_time') %></label>
</div>
<div class="filter_tool_select2">
	<input class="ff_item" id="date_range" type="text" condition="created_at" operator="is_in_the_range" 
		values="" data-filtername="<%= t('freshfone.call_history.filter_by_time') %>"data-value="<%=Date.today()%>"/>
</div>
<div class="filter_title">
		<label><%= t('freshfone.call_history.filter_by_call_status') %></label>
</div>

<div id="sorting_dropdown" class="filter_tool_select2">
	<input type="hidden" id="ff_call_status" class="ff_item" condition="call_type" operator="is" 
	values='' data-filtername="<%= t('freshfone.call_history.filter_by_call_status') %>" data-value="All calls"/>
</div>

<div class="filter_title">
	<label><%= t('freshfone.call_history.filter_by_agent')%></label>
</div>
<div class="filter_tool_select2">
	<input type="text" name="requester_name" id="requesterName"  class="requesterName"/>
	<input type="hidden"  id="requesterId" />
				 <div id="requesterName_choices" class="autocomplete ff_item" condition="user_id" 
				 		operator="is" values='' data-filtername="<%= t('freshfone.call_history.filter_by_agent') %>" data-value=""></div>
</div>
<div class="filter_title">
	<label><%= t('freshfone.call_history.filter_by_caller')%></label>
</div>
<div class="filter_tool_select2">
	<input type="text" name="caller_name" id="callerName"  class="callerName"/>
	<input type="hidden"  id="callerId" />
 	<div id="callerName_choices" class="autocomplete ff_item" condition="customer_id" 
 		operator="is" values='' data-filtername="<%= t('freshfone.call_history.filter_by_caller')%>" data-value=""></div>
</div>
<div class="filter_title">
	<label><%= t('freshfone.call_history.filter_by_group')%></label>
</div>
<div class="filter_tool_select2">
	<input type="hidden" id="groupName"  name="group_name" class="groupName ff_item" condition='freshfone_calls_meta.group_id' 
	operator='is' values = '0' data-filtername="<%= t('freshfone.call_history.filter_by_group')%>" data-value=''/>
	</div>
<div class="filter_footer">
	<a class="btn btn-primary" id="submitfilter">Filter</a>
	<a class="btn" id="cancel" data-dismiss="slider" class="filter-close">Close</a>
</div>