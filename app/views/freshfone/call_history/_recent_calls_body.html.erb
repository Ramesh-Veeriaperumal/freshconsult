
<div class="recent_calls_container">
	<% unless calls.blank? %>
    <span class="recent_calls_title"><%= t('freshfone.widget.recent_calls') %></span>
		<%= render :partial => "recent_calls",
		:collection => calls,
		:as => :call %>
	<% else %>
		<p class="no_call_history"><%= t('freshfone.widget.no_calls') %></p>
	<% end %>
</div>