<% content_for :layoutType do -%>reports_page<%- end %>
<link href="/stylesheets/ui.daterangepicker.css" media="screen" rel="stylesheet" type="text/css">

<%= include_cloudfront_rtl_css :reports %>
<%= include_cloudfront_js :reports  %>
<div class="row-fluid">
	<div class="span12 report-breadcrum-wrapper">
		<ul class="breadcrumb span8">
		  <li><a href="<%=reports_url%>"><%=t('adv_reports.glance.all_reports')%></a> <span class="divider">/</span></li>
		  <li><%=t('adv_reports.glance.report_view')%></li>
		</ul>
		<ul class="nav pull-right">
	      <li class=""><a href="#" class="proxy-generate-pdf" ><i class="reports-icon-download"></i><%=t('adv_reports.glance.download')%></a></li>
	    </ul>
	</div>
</div>
<div class="row-fluid">
	<div id="ticket-list-body-content">
		<div class="report-page" id="report-page">
		  <div id="loading-box"> <div class="sloading loading-left loading-small reports-loading">Generating Report...</div> </div>
		  <div class="report-content-wrapper">
		  	<%= render :partial => "reports/shared/report_view_header", :locals => {:report_type_id => @report_type} %>
		  	<div id="graphs_container"></div>
		  </div>
		</div>
		<!--%= render :partial => "reports/agents_analysis/agent_analysis", :locals => {} %-->
	</div>
	<div class="report-left-filter hide" id="report-filter-edit">
		<div class="left-filter">    
		  <!-- <div> <a href="#" data-dismiss="slider">close</a> </div> -->
		  <%= render :partial => "reports/shared/filter_options", :locals => {:neglect_fields => [:responder_id,:customer_id],:current_page => 'top_n_analysis_report', :group_select_type => 'multi_select', :action_url => reports_agent_analysis_reports_url}%>
		</div>
	</div>
</div>
<%= render :partial => "reports/shared/top_n_analysis_dialog", :locals => {:dialogTitle => t('adv_reports.agent_top_n_analysis')}%>
<script type="text/javascript">

jQuery(document).ready(function(){
	Helpkit.AnalysisReport.init({
		report_type: 'Agent',
		title: "<%=t('adv_reports.agent_top_n_analysis')%>",
		date_range: jQuery("#date_range").val(),
		_url: '<%=reports_agent_analysis_reports_url%>/fetch_chart_data'
	});

	/**save report filters code**/
	Helpkit.report_filter_data = <%=@report_filter_data.to_json.html_safe%>;
	Helpkit.reports_util.bindEventsForReportFilter();
});

</script>
<script type="text/javascript" src="/javascripts/report/date.js"></script>
<script type="text/javascript" src="/javascripts/report/daterangepicker.jQuery.js"></script>