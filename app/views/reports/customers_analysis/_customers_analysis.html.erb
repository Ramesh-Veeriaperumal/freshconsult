<div class="report-page" id="report-page">
  <div id="loading-box"> <div class="reports-loading">Generating</div> </div>
  <div class="report-content-wrapper">
    <!--report header-->
    <%= render :partial => "reports/shared/report_view_header", :locals => {} %>

    <div class="row-fluid">
      <div class="span6 single-line-bar">
        <h3 class="header-lead"><span><%=t('adv_reports.top_n.tickets_submitted')%></span></h3>
        <div id="received_tickets_line_chart" class="graph-container"><div class="loading-center"></div></div>
      </div>
      <div class="span6 single-line-bar">
        <h3 class="header-lead"><span><%=t('adv_reports.tickets_resolved')%></span></h3>
        <div id="resolved_tickets_line_chart" class="graph-container"><div class="loading-center"></div></div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6 single-line-bar">
        <h3 class="header-lead"><span><%=t('adv_reports.tickets_backlog')%></span></h3>
        <div id="backlog_tickets_line_chart" class="graph-container"><div class="loading-center"></div></div>
      </div>
      <div class="span6 single-line-bar">
        <h3 class="header-lead"><span><%=t('adv_reports.top_n.sla_violations')%></span></h3>
        <div id="SLA_tickets_line_chart" class="graph-container"><div class="loading-center"></div></div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6 single-line-bar">
        <h3 class="header-lead"><span><%=t('adv_reports.top_n.happy_customers')%></span></h3>
        <div id="happy_customers_line_chart" class="graph-container"><div class="loading-center"></div></div>
      </div>
      <div class="span6 single-line-bar">
        <h3 class="header-lead"><span><%=t('adv_reports.top_n.frustrated_customers')%></span></h3>
        <div id="frustrated_customers_line_chart" class="graph-container"><div class="loading-center"></div></div>
      </div>
    </div>
  </div>
</div>