<% content_for :onload_script do %>     
  jQuery("#Sidebar form").submit();
  jQuery('#date_range').bind('keypress keyup keydown', function(ev) {
  	ev.preventDefault();
  	return false;
  });

  //Deprecated message
  var show_disabled = <%= current_account.classic_reports_disabled? %>;
  if(show_disabled){
  	  var message = '<div class="deprecated-header"><div class="message"><%=t('adv_reports.deprecated_header')%></div></div>';
	  jQuery(".leftcontent").prepend(message);
  } else{
  	 jQuery(".empty-holder").hide();
  }
<% end %>
