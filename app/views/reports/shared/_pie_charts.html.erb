<div class="report-unit">
  <h3><%= t('reports.pie_chart_title_prefix') %> <%= t('ticket_fields.fields.source')%>
  <div id="source_freshdesk_single_stacked_bar_chart" class="single-stacked-bar"></div>
  <% javascript_tag do %>
	<%= @source_single_stacked_bar_chart %>
  <% end %>
</div>
<%	
unless params[:reports].nil?
	params[:reports].each do |report_name|
		unless self.instance_variable_get("@#{report_name.to_s.gsub('.', '_')}_pie_chart").nil? or report_name.to_s == 'status'
		%>
		<div class="report-unit report-pie-chart">
			<h3><%= t('reports.pie_chart_title_prefix') %> <%= @pie_chart_labels.fetch(report_name.to_s,'')%></h3>
			<div id ="<%=report_name.to_s.gsub('.', '_')%>_freshdesk_chart" class="chart-container"></div>
		</div>
		<%
		end
	end
end
%>
<% javascript_tag do %>
	jQuery(document).ready(function() {
	<%	unless params[:reports].nil?
			params[:reports].each do |report_name|
				%>
				<%=self.instance_variable_get("@#{report_name.to_s.gsub('.', '_')}_pie_chart") unless report_name.to_s=='status'%>
			<%
			end
		end 
	%>
	});
<%end%>