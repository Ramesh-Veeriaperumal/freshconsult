<div class="report-unit">
  <h3><%= t('reports.pie_chart_title_prefix') %> <%= t('ticket_fields.fields.source')%>
  <div id="source_freshdesk_single_stacked_bar_chart" class="single-stacked-bar"></div>
  <% javascript_tag do %>
	<%= @source_single_stacked_bar_chart %>
  <% end %>
</div>
<%=@pie_charts_hash["flexifields.ffs_01"]%>
<%	
unless @pie_charts_hash.nil?
	@pie_charts_hash.each do |label,pie_chart|
		%>
		<div class="report-unit report-pie-chart">
			<h3><%= t('reports.pie_chart_title_prefix') %> <%= @pie_chart_labels.fetch(label,'')%></h3>
			<div id ="<%=label.gsub('.', '_')%>_freshdesk_chart" class="chart-container">No Data to display!</div>
		</div>
		<%
	end
end
%>
<% javascript_tag do %>
	jQuery(document).ready(function() {
	<%	unless @pie_charts_hash.nil?
			@pie_charts_hash.each do |label,pie_chart|
				%>
				<%=pie_chart%>
			<%
			end
		end 
	%>
	});
<%end%>