<div class="schedule">
   <div class="container_sch">
      <div class="form">
         <div class="form-row">
            <label><%= t('helpdesk_reports.scheduled_reports.dialog.generate_report') %></label>
            <div class="field">
               <select class="frequency">
                  <option value="1"><%= t('helpdesk_reports.scheduled_reports.dialog.daily') %></option>
                  <option value="2"><%= t('helpdesk_reports.scheduled_reports.dialog.weekly') %></option>
                  <option value="3"><%= t('helpdesk_reports.scheduled_reports.dialog.monthly') %></option>
               </select>
            </div>
         </div>
         <div class="form-row runat cron" style="display: none">
            <label class="text-right"><%= t('helpdesk_reports.scheduled_reports.dialog.on') %></label>
            <div class="field">
               <div class="weekly hide pull-left">
                     <input type="radio" name="day" value="1" checked>M
                     <input type="radio" name="day" value="2" >T
                     <input type="radio" name="day" value="3" >W
                     <input type="radio" name="day" value="4" >T
                     <input type="radio" name="day" value="5" >F
                     <input type="radio" name="day" value="6" >S
                     <input type="radio" name="day" value="0" >S
               </div>
               <div class="monthly hide pull-left">
                  <select class="day_of_mnth">
                          
                  </select>
               </div>
               <div class="hours inner-time-picker hide">
                        <span class="inner-label"> <%= t("helpdesk_reports.at") %> </span>
                        <select class="timer pull-left">
                        </select>
                        <span class="tzone"></span>
                </div>
                <div class="clear"></div>
            </div>
         </div>
         <div class="form-row outer-time-picker">
            <label class="text-right"><%= t("helpdesk_reports.at") %></label>
            <div class="field">
               <div class="hours">
                     <select class="timer pull-left">
                     </select>
                     <span class="tzone"></span>
                </div>
            </div>
         </div>
         <div class="clearfix"></div>
      </div>
      
      <div class="form">
         <div class="message" style="display:none">
      </div>
         <div class="form-row">
            <label><%= t('helpdesk_reports.scheduled_reports.dialog.email') %></label>
            <div class="field email_container">
               
            </div>
         </div>
         <div class="form-row">
            <label><%= t('helpdesk_reports.scheduled_reports.dialog.subject') %></label>
            <div class="field">
               <input class="subject" type="text" />
            </div>
         </div>
         <div class="form-row">
            <label><%= t('helpdesk_reports.scheduled_reports.dialog.desc') %></label>
            <div class="field">
               <textarea rows="8" class="desc"></textarea>
            </div>
         </div>
      </div>
   </div>
</div>
