	<% if @champions.length > 0 %>
		<% high_score = @champions[0].tot_score.to_i %> 
	<% end %>
	<div class="titlebar" style="margin-top:50px;"><%= t('reports.scoreboard_reports.champions_title')%></div>
	<% @champions.each_with_index  do |champion, index|%>
	<% unless champion.tot_score.to_i < 0 %>
	<div class="agentreport">
		<ul>
			<li class="nospace"><div class="bignum floatleft"><%= (index + 1)%></div></li>	
			<li style="width:35%;">
				<div class="floatleft photo"><%= user_avatar(champion.user, :thumb, 'preview_pic') %></div>
				<div class="floatleft agentname"><%= champion.user.display_name %><div>Job Title</div></div>								
			</li>
			<li style="width:35%;" class="nospace">
				<!--div class="scorecard" score="<%= (champion.tot_score.to_i / high_score) * 100 %>"></div-->
				<% progress_percentage =  ((champion.tot_score.to_i / high_score) * 100).to_i %>
				<% progress_color = (progress_percentage > 30 and progress_percentage < 70) ? 'progress-warning' :  ((progress_percentage < 30) ? 'progress-danger' : 'progress-success') %>
				<div class="progress <%= progress_color%>" style="margin-bottom: 9px;">
        			<div class="bar" style="width: <%= ((champion.tot_score.to_i / high_score) * 100).to_i %>%"></div>        			
      			</div>
			</li>
			<li class="nospace"><%= champion.tot_score %> points</li>			
		</ul>
	</div>
	<% end %>
	<% end %>