<div class="content-area">

<%@remarks.each do |remark|%>

	<div class="content-set">
		<a href="<%=contacts_url%>/<%=remark.customer.id%>">
			<div class="left-box">			
				<span class="content-img"><%=user_avatar(remark.customer)%></span>
				<%smiley = (remark[:rating].to_i == Survey::HAPPY) ? "happy-smily-small": (remark[:rating].to_i == Survey::UNHAPPY) ? "unhappy-smily-small" : "neutral-smily-small"%>
				<span class="<%=smiley%>"></span>					
				<p class="inner-box">
						<strong class="box-title"><%=remark.customer[:name]%></strong>		
					<span class="box-date">on <%=remark[:created_at].strftime("%d %b %Y")%></span>
				</p>			
			</div>
		</a>	
		<div class="right-box">
			<div class="container-arrow"></div>
			<span class="cote"></span>
			<%
				feedback = ""

				feedback = remark.survey_remark.feedback.body+"<br>" unless remark.survey_remark.nil?
			%>
			<p class="box-content">
				<%=feedback%>
				<a href="<%=helpdesk_tickets_url%>/<%=remark.surveyable.display_id%>">
					<span class="bottom-ticket-title"><%=t('.in_response_to')%>:</span> <%=remark.surveyable.subject%> (#<%=remark.surveyable.display_id%>)
				</a>
			</p>

		</div>
	</div>

<%end%>

<%if @remarks.blank?%>
<div class="usercomment no-feedback">
	<%=t("reports.survey_reports.list.no_feedback")%>
</div>
<%end%>

</div>
