<%
date_range = params[:date_range].blank? ? "#{(Time.zone.now.ago 30.day).strftime("%d %B %Y")} - #{Time.zone.now.strftime("%d %B %Y")}" :  h(params[:date_range])
%>

<div class="request-well">          
    <ul data-tabs="tabs" class="tabs">
        <li class="first min-width">            
            <% user = User.find_by_id(params[:entity_id])%>
            <%if content[:category].blank? || content[:category]=="agent" %>
                    <span class="agent-img"><%=user_avatar(user)%></span>
            <%end%>            
            <% name = (!params[:category].blank? && params[:category]=="company")? current_account.main_portal[:name] : content[:name]%>
            <p class="topic-head"><%=name%></p>
        </li>
        <li class="first active report-grid">
            <% link_title = "<span class='tab-text top-p'>All ("+content[:total].to_s+")</span>" %>
            <%= link_to_remote link_title,{:url => {:action =>'refresh_details', :entity_id =>params[:entity_id], :category=>params[:category], 
                     :date_range => date_range},:update => "report_feedback",:loading => "jQuery('#report_feedback').html('<div class=\"loading-box\"></div>');"}, {:class => "all_link",:id=>"PagesTab",:href=>"#Pages"}  %>            
        </li>
        <li class="tab-width">
            
           <%link_title = "<span class='happy-smily'></span><span class='tab-text'>"+
                 (((content[:happy]*100)/content[:total]).to_f.round).to_s + "%" +
                 "<p class='tab-bottom'>"+content[:happy].to_s+" responses</p></span>" %> 
                <%= link_to_remote link_title,{:url => {:action =>'refresh_details', :entity_id =>params[:entity_id], :category=>params[:category],
                    :date_range => date_range, :rating => Survey::HAPPY},:update => "report_feedback",:loading => "jQuery('#report_feedback').html('<div class=\"loading-box\"></div>');"}, {:class => "happy_link",:id=>"PagesTab",:href=>"#Pages"}  %> 
        </li>
        <li class="tab-width">
            
           <%link_title = "<span class='happy-smily neutral-smily'></span><span class='tab-text'>"+
                 (((content[:neutral]*100)/content[:total]).to_f.round).to_s + "%" +
                 "<p class='tab-bottom'>"+content[:neutral].to_s+" responses</p></span>" %>             
            <%= link_to_remote link_title,{:url => {:action =>'refresh_details', :entity_id =>params[:entity_id], :category=>params[:category],
                     :date_range => date_range, :rating => Survey::NEUTRAL},:update => "report_feedback",:loading => "jQuery('#report_feedback').html('<div class=\"loading-box\"></div>');"}, {:class => "neutral_link",:id=>"PagesTab",:href=>"#Pages"}  %>
        </li>
        <li class="tab-width">
            
            <%link_title = "<span class='happy-smily unhappy-smily'></span><span class='tab-text'>"+
                 (((content[:unhappy]*100)/content[:total]).to_f.round).to_s + "%" +
                 "<p class='tab-bottom'>"+content[:unhappy].to_s+" responses</p></span>" %>            
            <%= link_to_remote link_title,{:url => {:action =>'refresh_details', :entity_id =>params[:entity_id], :category=>params[:category],
                :date_range => date_range, :rating => Survey::UNHAPPY},:update => "report_feedback",:loading => "jQuery('#report_feedback').html('<div class=\"loading-box\"></div>');"}, {:class => "unhappy_link",:id=>"PagesTab",:href=>"#Pages"}  %>
        </li>
    </ul> 
</div>