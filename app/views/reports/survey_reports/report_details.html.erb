 <%= include_stylesheets :satisfaction  %>

   <div id="report-container" class="report-container">
<div class="satisfaction-head">
		<span id="back_to_con" class="floatr">	
			<%
				category = "agent" if params[:category].blank?
				category = params[:category] unless params[:category].blank?

				if params[:date_range].blank?
		   			back_to_link = survey_back_to_list_url(:category=> category)
		   		else
		   			back_to_link = survey_back_to_list_url(:category=> category, :date_range => params[:date_range])
		   		end	
			%>
			<%= link_to("&larr; #{t('reports.survey_reports.back_to')}", back_to_link, {:method => :post,:class => "slim-button", :id => "back_to_link"}) %>
		</span>
		<h3 class="title" id="report-main-title">		          
		  <%= t('reports.satisfaction_title') %><br />		  
		</h3>
		<span id="date_range_title" style="align:left"><%= params[:date_range] %></span>		                                                        
</div>

  <div id="report_list">  
   <%@reports_list.each do |key,value|%>
			<%= render :partial => "/reports/survey_reports/details_header", :locals => {:content => value} %>
   <%end%>

<div id="report_feedback">
	<%@reports_list.each do |key,value|%>
			<%= render :partial => "/reports/survey_reports/feedbacks" %>
   	<%end%>
</div>
</div>
</div>

<% content_for :sidebar do %>
	<%= render :partial => "/reports/survey_reports/details_sidebar" %>
<%end%>

<%if @reports_list.blank?%>
	 <h1 style="font-size:18px;text-align:center;margin-top:50px;"> <%=t('reports.survey_reports.list.no_feedback')%> </h1>
<%end%>

<% javascript_tag do %>
		var isRefreshed = false;
		<% if !params[:category].blank? and params[:category]!="company" %> 
		   jQuery("#back_to_con").show();		 
		<%end%>
		jQuery('#report_feedback').pageless({
		    currentPage:1,
		    totalPages : <%=@remarks.total_pages%>,
      		    url : "<%=survey_feedbacks_url%>",
      	                loaderMsg : "",
      	                params:{category:"<%=params[:category]%>",rating:"<%=params[:rating]%>",entity_id:"<%=params[:entity_id]%>"}
		});		
<%end%>