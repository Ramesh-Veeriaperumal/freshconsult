<div class="reports-title span12 updated-time">
	<span class="report-icon">
		<%= font_icon(@report_type,{:size=>32}) %>
	</span>
	<span class="report-title-block" data-action="pop-report-type-menu" >
		<span class="unsaved_star vertical-alignment hide">*</span>
		<span id="report-title">
			<%=t("helpdesk_reports.#{@report_type}.title").html_safe %>
		</span>
		<% if current_account.subscription.non_sprout_plan? || feature?(:advanced_reporting) %>
			<span class="grey-arrow-down title-dropdown"></span>
		<% end %>
		<div id="last-updated"></div>
	</span>
	<% if current_account.subscription.non_sprout_plan? || feature?(:advanced_reporting)%>
		<%= render :partial => "reports/shared/save_report_controls"%>
	<% end %>
	<% if current_user.privilege?(:export_reports) %>
		<%= render :partial => "reports/v2/tickets/reports/shared/generate_pdf" %>
	<% end %>
	<% if current_account.old_reports_enabled? %>
		<% if @report_type == :agent_summary %>
		    <% if current_user.privilege?(:export_reports) %>
				<span class="pull-right dividr"> | </span>
			<% end %>
		    <a class="pull-right old_report_link" href="/reports/classic/agent_summary" ><%= t("helpdesk_reports.view_old_report") %></a>
		 <% elsif @report_type == :group_summary %>
		    <% if current_user.privilege?(:export_reports) %>
				<span class="pull-right dividr"> | </span>
			<% end %> 
		    <a class="pull-right old_report_link" href="/reports/classic/group_summary" ><%= t("helpdesk_reports.view_old_report") %></a>
		 <% end %>
	<% end %>
</div>
<div class="reports-filter span12">
		<% if current_account.subscription.non_sprout_plan? || current_account.advanced_reporting_enabled? %>
			<div class="edit-filter span1">
				<button class="btn btn-primary" id="metric-edit" data-action="open-filter-menu"><%=t('helpdesk_reports.edit_filter') %></button> 
			</div>
		<% else %>
			<div class="edit-filter span5 inline-filter">
				<div id="FilterOptions" method="post" action='#' target="_blank" class="filter-form">
		     	   <div class="row-fluid">
			     	   <div class="report-fields-widget">
							<div id="time-duration">
								<span class="date-label"><%= t('helpdesk_reports.time_period') %> : </span>
								<span class="date-value"></span>
								<a id="sprout-datepicker"><%= t("helpdesk_reports.change") %></a>
							</div>
						</div>
		        	</div>
				</div>
			</div>
		<% end %>
	<div class="filter-type <%= current_account.subscription.non_sprout_plan? ? 'span11' : 'span7' %>">
		<ul id="filter_text"></ul>
	</div>
	<div class="reports-menu hide" id="reports_type_menu">

	</div>
</div>
<%= render :partial => "reports/shared/dialog" %> 
<script>
jQuery("#pdf_form").submit(function(event) {
  var pdf_args = HelpdeskReports.CoreUtil.pdfParams();
	jQuery('#pdf_args').val(Browser.stringify(pdf_args));	
});
</script>