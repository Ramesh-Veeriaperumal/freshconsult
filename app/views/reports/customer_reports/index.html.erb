<% form_tag :action => :index, :controller => "reports/customer_reports" do %>
	<%= select_tag "customer_id", options_for_select(current_account.customers.collect{ |c| [c.name, c.id] }.insert(0, '---')) %>     
	<%=select_month(Date.today)%>
	<%= submit_tag 'Submit' %>
<% end %>
<%if !@total_tickets.nil? and @total_tickets > 0 %>
<br>
<br>
Status: <%=@status_hash.to_json%>
<br>
<br>
Ticket type: <%=@ticket_type_hash.to_json%>
<br>
<br>
Priority: <%=@priority_hash.to_json%>
<br>
<br>
Average Resolved Tickets this month: <%=@avg_current_month%>
<br>
<br>
Sla difference:<%=@sla_diff%> 
<%= get_sla_image(@sla_diff) %>
<br>
<br>
Total tickets: <%=@total_tickets%>
<br>
<br>
All Tickets
<br>
<%@customer_tickets.each do |ticket|%>
<%=ticket.id%> -- <%=ticket.subject%>
<br>
<%end%>

<%else%>
No data to display!
<%end%>