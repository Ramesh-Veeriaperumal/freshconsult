<% content_for :layoutType do -%>reports_page<%- end %>
<link href="/stylesheets/ui.daterangepicker.css" media="screen" rel="stylesheet" type="text/css">

<%= stylesheet_link_tag :reports %>
<%= javascript_include_tag :reports  %>
<div id="loading-box"> <div class="reports-loading sloading loading-small loading-left">Generating Report...</div> </div>
<div class="row-fluid">
	<div class="span12 report-breadcrum-wrapper">
		<ul class="breadcrumb span8">
		  <li><a href="<%=reports_url%>"><%=t('adv_reports.glance.all_reports')%></a> <span class="divider">/</span></li>
		  <li><%=t('adv_reports.glance.report_view')%></li>
		</ul>
		<ul class="nav pull-right">
	       <li class=""><a href="#" class="proxy-generate-pdf" ><i class="reports-icon-download"></i><%=t('adv_reports.glance.download')%></a></li>
	    </ul>
	</div>
</div>
<div class="row-fluid">
	<div class="report-page" id="report-page">
    <div class="report-content-wrapper">
      <!--report header-->
      <%= render :partial => "reports/shared/report_view_header", :locals => {:report_type_id => @report_type} %>
      <div id="ticket-list-body-content"></div>
    </div>
  </div>
	<div class="report-left-filter hide" id="report-filter-edit">
		<div class="left-filter">    
		  <!-- <div> <a href="#" data-dismiss="slider">close</a> </div> -->
		  <%= render :partial => "reports/shared/filter_options", :locals => {:neglect_fields => [:responder_id,:customer_id],:current_page => 'analysis_report', :group_select_type => 'multi_select', :action_url => reports_performance_analysis_reports_url}%>
		</div>
	</div>
</div>
<script type="text/javascript">
var _slide_init = false;
jQuery(document).ready(function(){
	jQuery("#submit").click(function(){
    if(jQuery("#report-filter-edit").css('visibility') == 'visible'){
      jQuery('#sliding').click();
    }
    jQuery("#loading-box").removeClass('hide');
    jQuery("#ticket-list-body-content").html("");
    jQuery.ajax({
      url: '<%=reports_performance_analysis_reports_url%>/generate',
      type: "POST",
      dataType: "html",
      data: jQuery(".serialize").serializeArray(),
      success: function(data){
        Helpkit.reports_util.set_filter_data();
      	jQuery("#loading-box").addClass('hide');
        jQuery('#ticket-list-body-content').html(data);
      },
      error: function(data){
        jQuery('#ticket-list-body-content').html(data.statusText);
      }
    }); 

  });
  jQuery("#submit").click();

  /**save report filters code**/
  Helpkit.report_filter_data = <%=@report_filter_data.to_json.html_safe%>;
  Helpkit.reports_util.bindEventsForReportFilter();
});
</script>
<script type="text/javascript" src="/javascripts/report/date.js"></script>
<script type="text/javascript" src="/javascripts/report/daterangepicker.jQuery.js"></script>