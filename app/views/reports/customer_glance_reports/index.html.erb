<% content_for :layoutType do -%>reports_page<%- end %>
<link href="/stylesheets/ui.daterangepicker.css" media="screen" rel="stylesheet" type="text/css">

<%= include_cloudfront_css :pattern %>
<%= include_cloudfront_css :reports %>
<%= include_cloudfront_js :pattern  %>
<%= include_cloudfront_js :reports  %>
<div id="loading-box"> <div class="reports-loading">Generating Report...</div> </div>
<!-- select model for agent start-->
<%= render :partial => "reports/helpdesk_glance_reports/glance_model_dialog", :locals => {:select_option=>'customer_id',:dialog_box_title=>"#{t('adv_reports.customer_at_a_glance')} #{t('adv_reports.report')}",:field_title=> t('adv_reports.glance.select_customer_msg'),
  :no_option_message=> t('adv_reports.glance.no_customers_msg')} %>
<!-- select model for agent end-->
<div class="row-fluid">
	<div class="span12 report-breadcrum-wrapper">
		<ul class="breadcrumb span8">
		  <li><a href="<%=reports_url%>"><%=t('adv_reports.glance.all_reports')%></a> <span class="divider">/</span></li>
		  <li><%=t('adv_reports.glance.report_view')%></li>
		</ul>
		<ul class="nav pull-right">
      <li class=""><a href="#" class="proxy-generate-pdf" ><i class="reports-icon-download"></i><%=t('adv_reports.glance.download')%></a></li>
    </ul>
	</div>
</div>
<div class="row-fluid">
	<%= render :partial => "reports/helpdesk_glance_reports/glance_container", :locals => {:report_for=> 'customer'} %>
	<div class="report-left-filter" id="report-filter-edit">
		<div class="left-filter">    
		  <!-- <div> <a href="#" data-dismiss="slider">close</a> </div> -->
		  <%= render :partial => "reports/shared/filter_options", :locals => {:neglect_fields => [:group_id,:responder_id],:current_page => 'glance_report', :action_url => reports_customer_glance_reports_url}%>
		</div>
	</div>
</div>
<script type="text/javascript">

jQuery(document).ready(function(){
	Helpkit.GlanceReport.init({
		report_type: 'customer',
		title:"<%=t('adv_reports.customer_at_a_glance')%>",
		date_range: jQuery("#date_range").val(),
		_url:'<%=reports_customer_glance_reports_url%>'
	});
});

</script>
<script type="text/javascript" src="/javascripts/report/date.js"></script>
<script type="text/javascript" src="/javascripts/report/daterangepicker.jQuery.js"></script>