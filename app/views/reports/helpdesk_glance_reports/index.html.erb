<% content_for :layoutType do -%>reports_page<%- end %>
<%= stylesheet_link_tag_with_rtl :'cdn/ui_daterangepicker', :media => "screen" %>  
<%= stylesheet_link_tag_with_rtl :'cdn/reports' %>
<%= javascript_include_tag :'cdn/reports'  %>
<div id="loading-box"> 
	<div id="loading-box"> <div class="sloading reports-loading loading-left loading-small">Generating Report...</div> </div>
</div>

<div class="row-fluid">
	<div class="span12 report-breadcrum-wrapper">
		<ul class="breadcrumb span8">
		  <li><a href="<%=old_reports_url%>"><%=t('adv_reports.glance.all_reports')%></a> <span class="divider">/</span></li>
		  <li><%=t('adv_reports.glance.report_view')%></li>
		</ul>
		<ul class="nav pull-right">
      <li class=""><a href="#" class="proxy-generate-pdf" ><i class="reports-icon-download"></i><%=t('adv_reports.glance.download')%></a></li>
    </ul>
	</div>
</div>
<div class="row-fluid">
	<%= render :partial => "reports/helpdesk_glance_reports/glance_container", :locals => {:report_for=> 'helpdesk',:report_type_id => @report_type} %>
	<div class="report-left-filter" id="report-filter-edit">
		<div class="left-filter">    
		  <!-- <div> <a href="#" data-dismiss="slider">close</a> </div> -->
		  <%= render :partial => "reports/shared/filter_options", :locals => { :neglect_fields => [:responder_id,:group_id,:customer_id], :current_page => 'glance_report', :action_url => reports_helpdesk_glance_reports_url} %>
		</div>
	</div>
</div>
<script type="text/javascript">

jQuery(document).ready(function(){
	Helpkit.GlanceReport.init({
		report_type: 'helpdesk',
		title:"<%=t('adv_reports.helpdesk_at_a_glance').html_safe %>",
		date_range: jQuery("#date_range").val(),
		_url:'<%=reports_helpdesk_glance_reports_url%>'
	});

	/**save report filters code**/
	Helpkit.report_filter_data = <%=@report_filter_data.to_json.html_safe%>;
	Helpkit.reports_util.bindEventsForReportFilter();
});

</script>
<%= javascript_include_tag :'cdn/report_date'  %>