
	<% @page_title = @forum.name %>
	<div class="clearfix">
		<div class="pull-right">
			<% if privilege?(:create_topic) %>
			  <%= link_to(t('forum.start_topic'), new_category_forum_topic_path(@forum_category, @forum), :class => "btn btn-primary") %>
			<% end %>
		</div>
		<h5 class="">
		 	<%= link_to(t('forum.title'), categories_path) %> &rarr;
			<%= link_to( "#{(@forum_category.name)}", category_path(@forum_category)) %> &rarr;
			<%= @forum.name %> 
		</h5>	 
	</div>
	<br>
	<div class="forum-group">
		<div class="search-grey-box">
			<% if privilege?(:manage_forums) -%>
				<div class="pull-right">
				
					<br/>
					<%= link_to t("forum.edit"), edit_category_forum_path(@forum_category, @forum), :class => "btn"  %>
				</div>

			<% end %>
			<div class="" style="display:none;">
				<%= feed_icon_tag @forum.name, forum_posts_path(@forum, :format => :rss) %>
				<%= '{count} topic(s)'[(count=@forum.topics.size)==1 ? :topic_count : :topics_count, number_with_delimiter(count)] %>,
				<%= '{count} post(s)'[(count=@forum.posts.size)==1 ? :post_count : :posts_count, number_with_delimiter(count)] %>	
			</div>
			<%= render :partial => "/search/pagesearch", :locals => { :placeholder => t('forums.search.placeholder', :name => h(@forum_category.name)), :url => "/search/topics?category_id=#{@forum_category.id}&search_key=" } %>
	   </div>
	   <div class="list-bar"> 
		   <%= link_to(t("forums_order.popular"), category_forum_path( @forum_category, @forum), :class => "first #{ (params[:stamp_type].blank? && params[:order].blank?)? 'active' : '' }" ) if @forum.ideas? %>
		   <%= link_to(t("forums_order.overview"), category_forum_path( @forum_category, @forum), :class => "first #{ (!params[:order].blank? && params[:order] == 'created_at desc' )? 'active' : '' }" ) unless @forum.ideas? %>
		   <%= link_to t("forums_order.recent"), category_forum_path( @forum_category, @forum, :order => "replied_at"), :class => ((!params[:order].blank? && params[:order] == 'replied_at desc')  ? "active" : "") %>
		   <% if @forum.ideas? %>
		   		<% Topic::IDEAS_STAMPS_OPTIONS.each do |k,v| %> 
		   			<%= link_to k, category_forum_path( @forum_category, @forum, :stamp_type  => v ), :class => ((params[:stamp_type] == v.to_s)? "active":"") %>
		   		<% end %>
		   <% end %>
	   </div>
	   <%= render :partial => "forum_shared/topics", :object => @topics, :locals => { :category => @forum_category, :forum => @forum } %>
	</div>
  <%= will_paginate @topics %>	
	 
	