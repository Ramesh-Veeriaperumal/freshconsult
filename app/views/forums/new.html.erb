<div class="page_area">
	<h3 class="content_title"><%= t('forum.new') %></h3>
	<% form_for :forum, :url => category_forums_path(@forum_category) do |f| -%>
		<%= render :partial => "form", :object => f %>
		<%= submit_tag t('create'), { :class => "fdbutton" } -%> 
		<%= link_to(t('cancel'), category_path(@forum_category), :class => "fdbutton grey" ) -%>
	<% end -%>
</div>