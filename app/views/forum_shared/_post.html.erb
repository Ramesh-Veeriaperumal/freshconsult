<div class="description <%= cycle('stripe', '') %>"  id="<%= dom_id post %>-row">
	<a href="#<%= dom_id post %>" rel="bookmark"></a>
	<div class="item-right-actions">		
		<ul class="nav-drop">
			<% if logged_in? && (post.editable_by?(current_user) || current_user.has_manage_forums?) -%>
			<li>
				<a href="#" class="menu-trigger nav-item-icon"><span class="item-options"></span></a>
				<ul class="menu-box">
					<li class="menu-item">
						<% if logged_in? && post.editable_by?(current_user) -%> 
							   <%= ajax_spinner_for "edit-post-#{post.id}", "load.gif" %>
						       <%= link_to_remote('Edit'[], 
						             {:url => edit_post_path(:forum_id => @forum, :topic_id => @topic, :id => post), :method => :get,
						              :before => "EditForm.init(#{post.id});", :condition => "!EditForm.isEditing(#{post.id})" }, 
						             {:href => edit_post_path(:forum_id => @forum, :topic_id => @topic, :id => post, :page => params[:page]) }) %>
						<% end -%>
					</li>
					<li class="menu-item">
						<%if post != @posts.first and @forum.questions? %> 
								<% if logged_in? && current_user.has_manage_forums?  %>
									<%= link_to ("Unmark this as the answer" , toggle_answer_category_forum_topic_post_path(@forum_category,@forum,@topic,post),  :method=>:put ) if post.answer?  %>
									<%= link_to ("Mark this as the answer" , toggle_answer_category_forum_topic_post_path(@forum_category,@forum,@topic,post ),  :method=>:put ) if !post.answer?  %>
								<%end%> 
						<%end%>
					</li>					
					<% end %>
				</ul>
			</li>
		</ul>
	</div>
	<%= content_tag(:div, "Answer", :class => "stamp_answer floatr", :title => "This post is accepted as a good answer to this topic") if post.answer? %>
	<div class="user_details">
		<%= user_avatar(post.user.avatar)  if post.user %>
		<%= link_to_user post.user, :class => "user_name" %> on <%= formated_date(post.created_at) %> 
	</div>
	<div class="details">
		<%= post.body_html %>
	</div>
	<% unless post.attachments.empty? %>
			<h4><%= pluralize(post.attachments.size, 'attachment')%></h4>
			<ul class="attachment_list">
				<%= render :partial => '/helpdesk/shared/attachment', :collection => post.attachments, :locals => {:show_delete => true, :url => [post] } %>
			</ul>
	<% end %>	
</div>

				
