	<ul class="base-set">	
		<% unless (category.forums.size == 0) %>
			<% category.forums.each do |forum| %>
				<%= render :partial => "forum_shared/forum", :object => forum, :locals => {:category => category }  %>				
			<% end %>
		<% else %>
			<span class="no_info_text">No forums in this category -</span>
			<% if admin? %>
	  			<%= link_to 'add a new forum'[:create_new_forum], new_category_forum_path(category) %>
			<% end %> 
		<% end %>
	</ul>