<li class="<%= cycle('odd', 'even') %>"> 
	<h4 class="forum_title">
		<span class="<%= "forum_type_#{forum.type_symbol}" %> icon"></span>
		<%= link_to ( h(forum.name), category_forum_path(category, forum), :class => "title" )  %>
		<span class="subcounter">(<%= content_tag(:span, forum.topics.size, :class => "sub_counter") %>)</span>
	</h4>
	<div class="topic-list">
		<% unless (forum.topics.freshest(current_account).limit(5).size == 0) %> 
			<%= render :partial => "forum_shared/topics_brief", :locals => { :topics => forum.topics.freshest(current_account).limit(5).each } %>
		<% else %>
			<span class="no_info_text"><%=t('no_topics_text')%> - </span>
			<%= (link_to t('add_a_topic'), new_category_forum_topic_path(category, forum)) if logged_in? %>
		<% end %>	
	</div>
</li> 