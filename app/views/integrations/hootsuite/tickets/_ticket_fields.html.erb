<% form_disable = params[:format] == 'widget' ? {:onsubmit=> 'return false'} : {} %>
<%= form_for @ticket,
		:url => url_for(:controller => "integrations/hootsuite/tickets", 
		:action => "update", :id => @ticket.display_id), 
		:html => { :id => 'custom_ticket_form'}.merge(form_disable) do |f| %>
		
		<div class='side-header clearfix'>
			<p class='hs_userName pull-left'> Properties </p>
			<%= f.submit t('update'), 
				:class => "pull-right hs_btnCtaSml hs_btnTypeSubmit", 
				:id => "helpdesk_ticket_submit",
				:"data-loading-text" => "#{t('ticket.updating')}...", 
				:"data-saved-text" => "âœ” #{t('ticket.update_done')}",
				:"data-default-text" => t('update') %>
		</div>
	
	<ul class="cnt dont-validate ticket-fields" id="TicketPropertiesFields">
		<%= render :partial => 'ticket_field_elements',:locals => {:form_builder => f, :ticket_fields => @ticket_fields} %>
	</ul>
<% end %>
<script type="text/javascript">
jQuery('#helpdesk_ticket_status').trigger('change');
jQuery('#custom_ticket_form').validate();
</script>