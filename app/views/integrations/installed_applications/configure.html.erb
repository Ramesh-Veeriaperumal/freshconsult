<% content_for :sidebar do -%><%- end %>
<%= content_tag (:h3, @installing_application.name, :class => "title") %>
<% form_for @installed_application, :url => { :controller=> "installed_applications", :action => "update" }, :html => {:multipart => true, :id => "ConfigureApplication" } do |f| %>
  <ul class="ui-form">  
    <%= render :partial => "integrations/applications/application_form", :object => f, :locals => { :is_edit => true } %>
  </ul>
  <div class="button-container">
    <%= f.submit t('application.configure'), :class => "uiButton" %>
    <%= link_to t('cancel'), {:controller => 'applications', :action => 'index'}, :class => "uiButton" %>
  </div>
<% end %>
