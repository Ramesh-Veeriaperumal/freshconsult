<%= content_tag (:h3, t('integrations.'+@installing_application.name+'.label') + " " + t("settings"), :class => "title") %>
<% form_for @installed_application, :url => { :controller=> "installed_applications", :action => "update" }, :html => {:multipart => true, :id => "ConfigureApplication" } do |f| %>
  <ul class="ui-form">  
		<li class="inline-field">
			<label class="caption">
				<div class="logo application-logo-<%= @installing_application.name %>"></div>
				<div class="logo info-data">
					<%= t(@installing_application.description) %>
				</div>
			</label>
   		<%= render :partial => "integrations/applications/application_form", :object => f, :locals => { :is_edit => true, :form => f } %>
		</li>
  </ul>
  <div class="button-container">
    <%= link_to t('back'), {:controller => 'applications', :action => 'index'}, :class => "floatl uiButton" %>
	<% if @installing_application.name != "google_contacts"%>
	    <%= f.submit t('update'), :class => "uiButton" %>
    <% else %>
		<%= yield :special_buttons %>    
	<%end%>
  </div>
<% end %>
