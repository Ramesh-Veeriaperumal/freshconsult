<!-- Doing this because for development environment cloudfront_js or cloudfront_css returns only relative path -->
<% Jammit.configuration[:stylesheets][:gadget].each do |stylesheet| %>
    <link type="text/css" rel="stylesheet" media="screen, projection" href="<%= stylesheet.gsub(/public/, AppConfig['integrations_url'][Rails.env])%>">
<%end%>

<% Jammit.configuration[:javascripts][:gadget].each do |js| %>
    <script src="<%= js.gsub(/public/, AppConfig['integrations_url'][Rails.env])%>" type='text/javascript'></script>
<%end%>