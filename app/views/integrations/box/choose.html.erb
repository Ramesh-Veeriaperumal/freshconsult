<html>
  <%= render :partial => "layouts/shared/head" %>
  <body class="popup-body box-chooser-body">
  <% if logged_in? %>
    <script type="text/javascript"> document.title = "<%=@page_title%>"; </script>
    <%= render :partial => "toolbar", :locals => {:installed_app => @installed_app,
        :user_credential => @user_credential} %>

    <div id="box-content-pane">
      <div id="box-left-pane">
        <ul id="box-left-list"></ul>
      </div>
    </div>
    <div class="modal-backdrop fade in box-loading-big">
      <div style="text-align: center">
        <div class="sloading loading-align loading-circle-large"></div>
      </div>
    </div>

    <script type="text/javascript">
      var boxBundle = {
        oauth_token: '<%= @user_credential.auth_info['oauth_token'] unless @user_credential.blank? %>',
        oauth_url: '<%= @installed_app.oauth_url({:account_id => current_account.id, :portal_id => current_portal.id})%>',
        is_customer: <%= current_user.customer? %>,
        auth_status: '<%= @auth_status %>'
      }
      CustomWidget.include_js("/javascripts/integrations/boxChooser.js");
    </script>
  <% end %>

  <div id="box-confirm-modal" class="hide">
    <div class="box-confirm-modal-content"><span>Convert to Open link?</span></div>
  </div>
  <div id="box-error-modal" class="hide">
    <div class="box-error-modal-content"><span>Convert to Open link?</span></div>
  </div>

  </body>
</html>
