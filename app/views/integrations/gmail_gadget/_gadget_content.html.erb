<![CDATA[

    <% if Rails.env.development? %>
        <%= render :partial => "integrations/gmail_gadget/gadget_development_css_js.html"%>
    <% else %>
        <%= stylesheet_link_tag_with_rtl :'cdn/gadget' %>
        <%= javascript_include_tag :'cdn/gadget' %>
        <script type="text/javascript">
            window['SPACER_IMAGE_PATH'] = "<%= spacer_image_url %>";
        </script>
    <%end%>

    <style type="text/css">
        html {
            overflow-y: hidden;
        }
        body {
            min-width: 300px;
        }
    </style>

    <div id="maxmin" class="minimize hide" title="<%= I18n.t("integrations.applications.gmail_gadget.minimize_the_gadget") %>">&nbsp;</div>
    <div id="maxmin_tip" class="hide"><%= I18n.t("integrations.applications.gmail_gadget.maximize_the_gadget") %></div>
    <div id="fullbody" class="hide">
        <ul class="tabs" id="gcgTabs">
        <li id="contact" class="active" onclick="showContact()"><a href="#"><%= t("integrations.applications.crm.mapping.contact") %></a></li>
        <li id="recent_tickets"><a href="#" onclick="showRecentTickets()"><%= t("integrations.screen_pop.widget.recent_tickets") %></a></li>
        <li id="ticket"><a href="#" onclick="showTicket()"><%= t("integrations.applications.gmail_gadget.ticket") %></a></li>
        </ul>
        <div id="content_div"></div>
        <div id="output"></div>
    </div>
    <div id="auth" class="hide">
        <div class="center"><%= t("integrations.applications.gmail_gadget.no_linked_account") %></div><br/>
        <a class="special uiButton" href="javascript:void(0);"><%= t("integrations.applications.gmail_gadget.connect_fd") %></a>
    </div>
    <div id="error"></div>

    <%= render :partial => "integrations/gmail_gadget/gadget_content.js" %>
]]>
