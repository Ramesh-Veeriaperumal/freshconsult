<div id="quickbooks_c2qb_widget" class="quickbooks_c2qb hide" rel="lazyload">
	<div class="logo">
		<i class="remote-configurations-freshdesk-logo"></i><i class="remote-configurations-arrow"></i><i class="remote-configurations-quickbooks-logo"></i>
	</div>
	<div class="connect_text"><%= t('integrations.quickbooks.connect_text') %></div>
	<div id="quickbooks_connect" class="quickbooks_connect"><span id="quickbooks_connect_button"><ipp:connectToIntuit></ipp:connectToIntuit></span></div>
</div>
<%= link_to "<strong> #{t('application.disabled')} </strong><span></span>".html_safe, "#", :class => "uiButton special iphone-inactive custom-tip-bottom", :title => t("application.click_to_enable"), :rel => "freshdialog", "data-target" => "#quickbooks_c2qb_widget", "data-template-footer" => "", "data-width" => "500" %>

<script src="https://js.appcenter.intuit.com/Content/IA/intuit.ipp.anywhere-1.3.2.js" type="text/javascript"></script>
<script type="text/javascript">
  intuit.ipp.anywhere.setup({
    grantUrl: "<%= AppConfig['integrations_url'][Rails.env] %>/auth/quickbooks?origin=id%3D<%= current_account.id %>",
    datasources: {
			quickbooks : true
		}
  });
  jQuery('#quickbooks_connect_button').click(function() {
  	jQuery('#quickbooks_c2qb_widget').modal('toggle');
  });
</script>
