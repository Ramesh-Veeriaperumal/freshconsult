<%= content_tag (:h3, @installing_application.display_name, :class => "title") %>
<% form_for @installing_application, :url => { :controller=> "applications", :action => "update", :id => @installing_application.id }, :html => {:multipart => true, :id => "ConfigureApplication" } do |f| 
  @application = @installing_application%>
  <%= render :partial => "custom_application_form", :locals => { :is_edit => true } %>
  <div class="button-container">
    <%= link_to t('back'), {:controller => 'applications', :action => 'index'}, :class => "floatl uiButton" %>
    <%= f.submit t('update'), :class => "uiButton" %>
  </div>
<% end %>
