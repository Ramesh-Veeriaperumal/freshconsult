<div class="well-active <%= current_account.new_pricing_launched? ? 'well-active-new': '' %>">
  <%
      plan = @subscription.subscription_plan
      is_new_sprout = new_sprout?(plan.name)
  %>
  <% if current_account.new_pricing_launched?%>
    <div class="current-plan">
      <h1 class="plan-title <%= 'classic' if @subscription.classic?%>">
        <%= t('plan') %> :
        <strong>
          <%= " #{ plan.display_name }" %>
          <%if previous_plan?(plan)%>
            <%= content_tag(:span, "2016", :class => "label") %>
          <%elsif @subscription.classic?%>
            <%= content_tag(:span, t('classic_label'), :class => "label") %>
          <%end%>
        </strong>
      </h1>
    </div>
    <div class="subscribed-plan-details current-plan-info">
      <div id="info_1" class="subscription-info-divider free-divider free-divider--sanscard">
        <ul>
          <li>
            <%= t('free_plan') %>
          </li>
          <li>
            <%= is_new_sprout ? t('free_plan_agents_v2') : t('agent_seats',:no_of_agents => @subscription.agent_limit) %>
          </li>
          <li>
            <%= t('account.active_since') %>
            <strong>
              <%= formated_date(current_account.created_at) %>
            </strong>
          </li>
          <% if !is_new_sprout %>
          <li>
            <span class="free-plan-payment"><%= t('add_more_agents', :amount => fetch_plan_amount(plan)) %></span>
          </li>
          <% end %>
          <div class="sprout-new-active"><%= link_to t( is_new_sprout ? 'enter_payment_details_to_add_v2': 'enter_payment_details_to_add').html_safe, billing_subscription_url%></div>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <h1 class="lead">
      <%= t('current_free_plan') %> :
      <strong>
        <%= " #{ plan.display_name }" %>
      </strong>
    </h1>

    <div class="plan-info">
      <div class="row-fluid">
        <div class="span3">
          <%= t('subscription.agents') %>
        </div>
        <div class="span2">
          <strong><%= "#{ @subscription.agent_limit }" %></strong>
        </div>
      </div>
      <div class="row-fluid">
        <span class="free-plan-payment"><%= t('add_more_agents', :amount => fetch_plan_amount(plan)) %></span>
      </div>
    </div>

    <div class="plan-info">
      <div class="row-fluid">
        <div class="span3">
          <%= t('account.active_since') %>
        </div>
        <div class="span8">
          <strong>
            <%= formated_date(current_account.created_at) %>
          </strong>
        </div>
        <div class="free-plan-payment">
            <p><%= link_to t('enter_payment_details_to_add').html_safe, billing_subscription_url%></p>
          </div>
      </div>
    </div>
  <% end %>
</div>

<%= render :partial => "/subscriptions/freshfone_subscription" %>
