<div class="well-active">
  <h1 class="lead">
    <%= t('current_free_plan') %> :
    <strong>
      <%= " #{ @subscription.subscription_plan.name }" %>
    </strong>
  </h1>

  <div class="plan-info">
    <div class="row-fluid">
      <div class="span3">
        <%= t('subscription.agents') %>
      </div>
      <div class="span2">
        <strong><%= "#{ @subscription.agent_limit }" %></strong>  
      </div>
    </div>
    <div class="row-fluid">
      <span class="free-plan-payment"><%= t('add_more_agents', :amount => fetch_plan_amount(@subscription.subscription_plan)) %></span>
    </div>
  </div>

  <div class="plan-info">
    <div class="row-fluid">
      <div class="span3">
        <%= t('account.active_since') %>
      </div>
      <div class="span8">
        <strong> 
          <%= formated_date(current_account.created_at) %>
        </strong>
      </div>
      <div class="free-plan-payment">
          <p><%= link_to t('enter_payment_details_to_add').html_safe, billing_subscription_url%></p>
        </div>
    </div>
  </div>
</div>

<%= render :partial => "/subscriptions/freshfone_subscription" %>
