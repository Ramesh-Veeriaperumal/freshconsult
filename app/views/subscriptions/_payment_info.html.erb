<div class = "payment-info">
	<%= content_tag(:label, t('payment_info'), :class => "caption") %>
	<div class="fields"> 
	   <div class="pull-right">
	    <%= link_to( "#{t('change')} &rsaquo;".html_safe, billing_subscription_url, :class => "btn btn-mini" ) %>
	   </div>
	   <%= @subscription.card_number %>
	 <% if @subscription.billing_address %>
	 <span class = "billing-address"> <%= t('billing_address').html_safe %> </span>
	 	<%= @subscription.billing_address.humanize.gsub("\n","<br>").html_safe %>
	 <% end %>
	</div>
</div>