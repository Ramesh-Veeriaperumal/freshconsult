<% form_for :freshfone_credits, @freshfone_credit,
						:url => {:action => "purchase", :controller => "admin/freshfone/credits"}, 
						:html => {:class => "purchase_freshfone"} do |f| %>
	<div class="row-fluid">
		<div class="recharge-now-text"><%= t('freshfone.subscription.recharge_now_text') %></div>
		<%= f.select "credit", recharge_options, {}, 
					:class => 'select2', :'data-minimum-results-for-search' => '30' %>
		<%= submit_tag "Purchase Credits", :class => "btn" %>
	</div>
<% end %>