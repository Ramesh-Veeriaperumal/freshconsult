<%
cancel_url = "https://www.google.com/a/cpanel/"+@google_domain

 unless @call_back_url.blank? 
    cancel_url = @call_back_url+"&EXTERNAL_CONFIG=true"
 end
%>

	<div id="change-sub-domain" class="ui-form">
		 <%= form_for @account, :url => {:action=> :associate_local_to_google} , :html => { :method => "put" } do |f| %>
			<%= render partial: '/shared/error_messages', collection: @account.errors.full_messages %>
			<input type="hidden" name="call_back" id="call_back_url" value="<%=@call_back_url%>" />				
			<input type="hidden" value="<%=@sub_domain%>" name="account[sub_domain]" id="account_sub_domain" class="textfield" />		
			<input type="hidden" value="<%=@google_domain%>" name="account[google_domain]" id="account_google_domain" class="textfield" />		 				
			<h3 class="title">Login to <span><%= @full_domain %></span></h3>
			<div class="intro info-data">
				<%= t("accounts.associate_google.login_message") %>
			</div>
			<input type="hidden" value="<%=@full_domain%>" name="account[full_domain]" id="account_full_domain" class="text disabled" />
			<ul>
		  	<li>
		  		<label for="user_session_email"><%=t('user.email')%></label>
		  		<input class="required text valid" id="user_session_email" name="user_session[email]" size="30" type="text">
				</li>
				<li>
		  		<label for="user_session_password"><%=t('password')%></label>
		  		<input class="text valid" id="user_session_password" name="user_session[password]" size="30" type="password" autocomplete="off">
		  	</li>
			</ul>
			<p class="button-container">
				<%= submit_tag  t("accounts.associate_google.login_button") , :class => "uiButton floatl" %>		
				<%= link_to t("cancel"), cancel_url , :class => "uiButton" %>
			</p>
		<% end %>	
	</div>
