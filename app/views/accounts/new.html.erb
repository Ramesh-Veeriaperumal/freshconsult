<% content_for :sidebar do -%>&nbsp;<%- end %>
<h3 class="title"><%= t("accounts.new.create_an_account") %></h3> 

	<%= form_tag :action => 'create' do %>
  		<%= hidden_field_tag 'plan', params[:plan] %>
  		
	  <% if @account.errors.any? %>
	    <div class="errorExplanation">
	      <h2><%= t("accounts.new.errors_encountered") %></h2>
	      <ul>
	        <%= @account.errors.full_messages.map {|m| content_tag('li', m)} %>
	      </ul>
	    </div>
	  <% end %> 
	<ul class="ui-form"> 
	  <li>
	  	<h4 class="title"><%= t("accounts.new.enter_name_subdomain") %></h4>
	    <%= fields_for :account do |f| %>
	      <label for="account_name"><%= t("accounts.new.company") %></label>
		  <%= f.text_field :name, :class => "required" %>
	      <label for="account_domain"><%= t("accounts.new.site_url") %></label>
		  <%= f.text_field :domain, :class => "very_small required" %>.<%= AppConfig['base_domain'][Rails.env] %>
	    <% end %>
	  </li> 
	  <li>
	  	<h4 class="title"><%= t("accounts.new.administrator_account") %></h4>  
	    <%= fields_for :user do |f| %>
	      <label for="user_name"><%= t("accounts.new.full_name") %></label>
		  <%= f.text_field :name, :class => "text" %>
		  <label for="user_email"><%= t("Email") %></label>
	      <%= f.text_field :email, :class => "text email" %>
	      <label for="user_password"><%= t("password") %></label>
	      <%= f.password_field :password, :class => "text password" %>
	      <label for="user_password_confirmation"><%= t("accounts.new.confirmation") %></label>
	      <%= f.password_field :password_confirmation, :class => "text password_confirm" %>
	    <% end %>
	  </li>  
	  
	  <% if @account.needs_payment_info? %>
	    <p>
	      <%= t("accounts.new.enter_payment_info") %>
	    </p>
	    
	    <%= render :partial => "shared/credit_card_form" %>
	  <% end %>
	  
	  <!--br/>
	  
	  <fieldset>
	    <label><%= t("accounts.new.discount_code") %></label>
	    <%= text_field_tag :discount, params[:discount] %>
	  </fieldset -->
	  
	  <br/>
	  
	  <li>
	    <%= content_tag(:p) do %>
	      <%= t("accounts.new.card_charge") %><%= number_to_currency(@account.plan.setup_amount) + ' now and ' if  @account.plan.setup_amount? && !@account.plan.trial_period? %> <%= number_to_currency(@account.plan.amount) %> 
	      <%= @account.plan.renewal_period == 1 ? 'every month' : "every #{@account.plan.renewal_period} months" %>.
	    <% end if @account.needs_payment_info? %>
	
	    <input type="submit" value="Create my account" class="uiButton" />
	  </li>
	  </ul>
<% end %>
 
