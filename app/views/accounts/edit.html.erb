	jQuery.fn.mColorPicker.init.enhancedSwatches = false;
	jQuery.fn.mColorPicker.init.allowTransparency = false;
	jQuery.fn.mColorPicker.init.showLogo = false;
	jQuery.fn.mColorPicker.defaults = {
		 imageFolder: '../images/',
		    swatches: [
		      "#ffffff",
		      "#ffff00",
		      "#00ff00",
		      "#00ffff",
		      "#0000ff",
		      "#ff00ff",
		      "#ff0000",
		      "#4c2b11",
		      "#3b3b3b",
		      "#000000"
		    ]
		  };
	jQuery(document).ready(function(){ 
			
	}); 
</script>

<div class="header_area">
	<h4>Rebrand your Help Desk</h4>
</div>	
<div class="page_area">
	<% form_for :account, @account, :url => { :action => 'update' }, :html => { :multipart => true ,:method => :put} do |f| %>
	  <%= f.error_messages %>
	  <ul class="ui-form">
		  <li>
		    <%= f.label :name, "Account Name" %>
		    <%= f.text_field :name, :class => "text" %>
		  </li>
		  <li>
			<%= f.label :time_zone, "Time Zone" %>
			<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all %>
		  </li>
		  <li>
		    <%= f.label :helpdesk_name, "Helpdesk Name" %>
		    <%= f.text_field :helpdesk_name, :class => "color", :id => "headcolor" %>
		  </li>
		  <li>
		    <%= f.label :helpdesk_url, "Helpdesk URL" %>
		    <%= f.text_field :helpdesk_url, :class => "color" %>
		  </li>
		  <% f.fields_for :preferences, @account.preferences do |p| %>
        	<li>
        		<table>
        			<tr>
        				<td>
							<%= p.label :header_color, "Tab color" %>
							<div class="color">
								<input type="color" class="color_field" name="account[preferences][header_color]"  data-hex="true" value="<%= @account[:preferences].default(:header_color) %>"> 
							</div>
						</td>	
        				<td>
			        		<%= p.label :header_color, "Tab selected color" %>
							<div class="color">
								<input type="color" class="color_field" name="account[preferences][header_color_selected]"  data-hex="true" value="<%= @account[:preferences].default(:header_color_selected) %>"> 
							</div>
         				</td>						
						<td>
			        		<%= p.label :bg_color, "Background Color" %>
							<div class="color"> 
								<input type="color" class="color_field" name="account[preferences][bg_color]"  data-hex="true" value="<%= @account[:preferences].default(:bg_color) %>">
							</div>	
						</td>
					</tr>
				</table>
         	</li>
		  <% end %>
		  <li>
			<%= render :partial => "/shared/logo_image", :locals => { :account => @account } %>
		 </li>
		 
		 <li>
			<%= render :partial => "/shared/fav_image", :locals => { :account => @account } %>
		 </li>
		  
		  <li>
		  	<span class="seperator"></span>
		  	<%= submit_tag 'Save', :class => 'fdbutton' %>
	  		<%= link_to "Cancel", admin_home_path , :class => "fdbutton grey" %>
		  </li>
	  </ul>
	<% end %>
</div>