<% thumbs_up = meta_child ? @article.thumbs_up : @article_meta.thumbs_up %>
<% thumbs_down = meta_child ? @article.thumbs_down : @article_meta.thumbs_down %>
<% if thumbs_up.zero? and thumbs_down.zero? %>
	<span class="muted">
		<%= t('discussions.topics.title_meta.no_votes') %>
	</span>
<% else %>
	<%= user_votes_stats(thumbs_up, 1, meta_child) %>
	<%= user_votes_stats(thumbs_down, 0, meta_child) %>
<% end %>
<% if meta_child && current_user.privilege?(:delete_solution) && (@article.thumbs_up > 0 || @article.thumbs_down > 0) %>
	<% reset_url = reset_ratings_solution_article_path(@article_meta.id, :language_id => @article.language_id) %> 
	&nbsp;-&nbsp;
	<%= link_to(t('solution.articles.reset_rating.link'), '', 
				"data-target" => "#article-reset-rating-confirmation", 
				:rel => "freshdialog", 
				"title" => t('solution.articles.reset_rating.dialog_title'), 
				"data-submit-label" => t('solution.articles.reset_rating.dialog_submit'), 
				"data-width" => "500px", 
				"data-close-label" => t('cancel'),
				"data-submit-loading" => t('solution.articles.reset_rating.resetting')) %>
	<div class="hide" id="article-reset-rating-confirmation">
		<%= form_for @article, :url => reset_url, :method => 'put', 
	    :html => { "data-remote" => true } do |f| %>
			<%= t('solution.articles.reset_rating.confirm_msg',
									:no_of_likes => @article.thumbs_up,
									:no_of_dislikes => @article.thumbs_down) %>
		<% end %>
	</div>
<% end %>