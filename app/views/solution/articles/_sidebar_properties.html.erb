		<div class="title-wrapper">
			<p class="leads span2"><%= t('solution.general.article_prop') %></p>
			<p class="edit span1 pull-right">
				<%= link_to( t('edit'), 
						properties_solution_article_path(@article, {:edit => true}),
						:rel => "freshdialog",
						:class => "article-properties",
						:title => t('solution.articles.properties'),
						"data-target" => "#article-prop",
						"data-width" => "700px",
						"data-close-label" => t('cancel'),
						"data-submit-label" => t('save'), 
					  "data-submit-loading" => t('saving') ) 
				%>
			</p>
		</div>

		<div class="section">
			<h5 class="leads"><%= t('event.type') %>:</h5> <span><%= t(@article.type_name) %></span>
		</div>
		<div class="folder-name section">
			<h5 class="leads"><%= t('solution.folders.folder_form.category') %>:</h5>
			<%= pjax_link_to @article.folder.category.name, solution_category_path(@article.folder.category_id), {:title => "#{t('solution.folders.folder_form.category')} - #{@article.folder.category.name}" } %>
			<p class="muted">
				<% if @article.folder.category.portals.present? %>
					<%= t('solution_category.product_portal_visibility') %> <%= @article.folder.category.portals.map(&:name).join(", ") %>
				<% else %>
					<span class="red"><%= t('solution.orphan_category_info') %></span>
				<% end %>
			</p>
		</div>
		<div class="folder-name section">
			<h5 class="leads"><%= t('solution.folder') %>:</h5>
			<%= pjax_link_to @article.folder.name, solution_folder_path(@article.folder_id), {:title => "#{t('solution.folder')} - #{@article.folder.name}" } %>
			<p class="muted">
				<%= t('forum.visible_to') %> <%= company_visibility_tooltip(@article.folder) %>
			</p>
		</div>
		<div class="tags-wrapper section">
			<h5 class="leads"><%= t('filter_options.tags') %></h5>
			<div class="tags <%='muted' if @article.tags.blank? %>">
				<%= t('no_tags') if @article.tags.blank? %>
				<% @article.tags.each do |t| %>
					<span>
						<%= t.name %>
					</span>
				<% end %>
			</div>
		</div>

