<h3 class="lead itil-hide"><%=t('solution.add_new_solution')%></h3>
<div id="article-form-container">
	<%= form_for @article, :url => solution_category_folder_articles_path(@article.folder.category_id  , @article.folder.id) , :html => {:multipart => true, :id => "article-form", :"data-default-folder" => @article.folder.is_default} do |f| %>
	  <%= render :partial => 'solution/articles/draft/article_form', :locals => { :f => f } %>
		<div class="button-container align-right itil-hide">
			<%= link_to(t('cancel'), solution_category_folder_url(@article.folder.category_id, @article.folder.id), :class => "btn" ) %>
	    <%= submit_tag t('save'), :name => "save_as_draft", :class => "btn" %>
			<%= submit_tag t('solution.articles.publish'), :name => "publish", :class => "btn btn-primary", :id => "article-publish-btn" %>
		</div>
	<% end %>
</div>
<% content_for :helpcard do %>
	<h3 class="lead"> <%=t('solution.title').html_safe%> </h3>
  <p><%=t('solution.info15').html_safe%></p>
  <p><%=t('solution.info16').html_safe%></p>
  <p><%=t('solution.info17').html_safe%></p>
  <p><i><%=t('solution.info18').html_safe%></i></p>
  <p><%=t('solution.info19').html_safe%></p>
  <p><%=t('solution.info20').html_safe%></p>
<% end %>
