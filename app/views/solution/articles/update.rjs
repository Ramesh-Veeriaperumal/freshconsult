draft_status = Solution::Article::STATUS_KEYS_BY_TOKEN[:draft]
show_ajax_flash(page)
if params[:solution_article][:status] == draft_status.to_s && @article.status == draft_status
	page << "pjaxify('');"
else
	page << "jQuery('#article-prop').modal('hide');jQuery('#article-prop').modal('destroy');"
	page << "jQuery('#solution_article_folder_id').select2(\"val\", \"#{@article.folder.id}\");"
	page.replace_html "sidebar-prop", render(:partial => "sidebar_properties", :locals => {:@article => @article}).html_safe
end
