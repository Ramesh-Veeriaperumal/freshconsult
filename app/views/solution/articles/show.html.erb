<% content_for :layoutType do%>single<% end %> 
<div>
	  <div class="header_area">
	  	<div class="floatr">
	  		<%= link_to('Edit', edit_solution_category_folder_article_path(@article.folder.category_id,@article.folder,@article), :class => "button") %>
			<%= link_to('Delete', solution_category_folder_article_path(@article.folder.category_id,@article.folder,@article), :method => 'delete', :confirm => 'Are you sure you want to delete this solution', :class => "button" ) %>
	  	</div>
	 	<%= link_to "Solutions", solution_category_folders_path, :class => "page_title" %>
		
	  </div> 
	  <div class="page_area">
	  		<h3 class="title"><%= @article.title %></h3>
			<ul>
				<div id="article_voting">
				<%= render :partial => "voting", :object => @article %>
				</div>
			<p>
	  		<%= @article.description %>	
			</p>
			<p>
		    Created By: 
			<%= @article.user.name%>	
			</p>
			<p>
			Solution Type:
			<%= @article.type_name%>
			</p>
			<p>
				Solution Status:
			<%=@article.status_name%>
			</p>
			
			</ul>
			
	  </div>	 
</div>
 