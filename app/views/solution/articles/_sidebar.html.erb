<div class="solution-details">
	<div class="draft-history sidebar-section">
		<div class="created-history">		
			<p><%= t('solution.general.created_by') %></p>
			<p><%= @article.user.name %></p>
			<p><%= formated_date(@article.created_at) %></p>
		</div>
		<div class="edited-history">
			<% if @article.draft.present? || !@article.published? %>
				<p><%= t('solution.general.last_edited') %></p>
				<p><%= @current_item.user.name %></p>
				<p><%= formated_date(@current_item.modified_at) %></p>
			<% end %>	
		</div>
		<div class="tags">
			<span><%= t(@article.status_name) %></span>
		</div>
	</div>

	<div class="sidebar-section" id="sidebar-prop">
		<%= render :partial => 'sidebar_properties' %>
	</div>

	<% if @article.tickets.count > 0 %>
		<div class="sidebar-section feedback">
			<div class="title-wrapper">
				<p class="leads span2"><%= t('solution.general.feedback') %></p>
			</div>
			<div class="section feedback-list">
				<ul>
					<li>
						<p class="feed-title">Need more information</p>
						<p class="shortnote">I've just installed the freshdesk extension for magento, and i need help on...</p>
						<p class="feed-time">Steph reported a month ago</p>
					</li>
					<li>
						<p class="feed-title">Need more information</p>
						<p class="shortnote">I've just installed the freshdesk extension for magento, and i need help on...</p>
						<p class="feed-time">Steph reported a month ago</p>
					</li>
				</ul>
			</div>
			<div class="section view-all-feed">
				<a href="#">View all feedback</a>
			</div>
		</div>
	<% end %>

	<div class="sidebar-section analytics">
		<div class="title-wrapper">
			<p class="leads span2"><%= t('solution.general.analytics') %></p>
		</div>
		<div class="section">
			<h5 class="leads"><%= t('solution.articles.views') %></h5>
			<p>
				<%= font_icon :"file-visible" %> 
				<%= t('discussions.topics.title_meta.hits', :count => @article.hits) %>
			</p>
			<br/>
			<h5 class="leads"><%= t('solution.articles.votes') %></h5>
			<p id="article_voting"> 
			 	<%= render :partial => "voting", :object => @article, :locals => {:new_draft_ui => true} %> 
			</p>
		</div>
	</div>
</div>
<div id="article-likes"> </div>
<div id="article-dislikes"> </div>