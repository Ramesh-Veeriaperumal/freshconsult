<div class="solution-details">
	<div class="article-history sidebar-section">
		
		<div class="created-history <%= 'hide' if created_at_ellipsis? %>">		
			<p><%= t('solution.general.created_by') %></p>
			<p><%= @article.user.name %></p>
			<p><%= formated_date(@article.created_at) %></p>
		</div>

		<% if created_at_ellipsis?  %>	
			<div class="ellipsis">...</div>

			<div class="edited-history">
					<p><%= t('solution.general.last_published') %></p>
					<p><%= @article.modified_by.present? ? @article.recent_author.name : @article.user.name %></p>
					<p><%= formated_date(@article.modified_at) %></p>
			</div>
		<% end %>
	</div>

	<div class="sidebar-section" id="sidebar-prop">
		<%= render :partial => 'sidebar_properties' %>
	</div>

	<% if @article.tickets.present? %>
		<div class="sidebar-section feedback">
			<div class="title-wrapper">
				<p class="leads span2"><%= t('solution.general.feedback') %></p>
			</div>
			<div class="section feedback-list">
				<ul>
					<% @article.tickets[0..2].each do |ticket| %>
						<li>
							<p class="feed-title pb2">
								<%= pjax_link_to ticket.encode_display_id, helpdesk_ticket_path(ticket) %>
							</p>
							<span><%=ticket.status_name%></span>							
							<p class="feed-time pt2"><%= ticket.requester.name %> <%= t('portal.reported') %> <span data-livestamp="<%= ticket.created_at.to_i %>">
						</li>	
					<% end %>
				</ul>
			</div>
			<div class="section view-all-feed">
				<%= link_to t('solution.view_feedback'), "#{helpdesk_filter_view_default_path('article_feedback')}?article_id=#{@article.id}", :target => "_blank" %>
			</div>
		</div>
	<% end %>

	<div class="sidebar-section analytics">
		<div class="title-wrapper">
			<p class="leads span2"><%= t('solution.general.analytics') %></p>
		</div>
		<div class="section">
			<% if @article.hits > 0 %>
				<h5 class="leads"><%= t('solution.articles.views') %></h5>
				<p>
					<%= font_icon :"file-visible" %> 
					<%= t('discussions.topics.title_meta.hits', :count => @article.hits) %>
				</p>
			<% end %>

			<br/>
			<h5 class="leads"><%= t('solution.articles.votes') %></h5>
			<p id="article_voting"> 
			 	<%= render :partial => "voting", :object => @article %> 
			</p>
		</div>
	</div>
</div>
<div id="article-likes"> </div>
<div id="article-dislikes"> </div>