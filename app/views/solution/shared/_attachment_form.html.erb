<script src="/javascripts/helpdesk/article_section.js" type="text/javascript"></script>
<% attach_id = attach_id || "solution_article" %>
<label><%=t('attach_files')%></label>
<input type="file" id="<%=attach_id%>_file" name="emptyfile" nameWhenFilled="solution_article[attachments][][resource]" fileContainer="<%=attach_id%>-container" fileList="<%=attach_id%>-attachments" sendFocusTo="<%=attach_id%>-body" />
<div class="info-data">
  <%=t('attachment_help_info')%>
</div>
<div class="attachments" id="<%=attach_id%>-container" style="display:none">
  <div id="<%=attach_id%>-attachments"></div>
</div>

