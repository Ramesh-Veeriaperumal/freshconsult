<div class="folder-2col">
  <div class="folder_section" id="folder-section">
	  <%= render :partial => "/solution/shared/category_folder_list", :locals => { :category => @item.category, :selected => @item } %>
	  <% if privilege?(:manage_solutions) %>
	   	  <%= render :partial => "/shared/reorder_list", :locals => { :items => @item.category.folders.visible(current_user), :action_url => reorder_solution_category_folders_path(@item.category), :title => :name, :container_id => "folder_sort", :reorder_id => "folder_reorder_button", :list_id => "folder_list"} %>
		  <span class="seperator"></span>
		  <div class="align-right">
		  	<%= link_to t('reorder'), '#', :id => "folder_reorder_button", :class => "btn" unless(@item.category.folders.visible(current_user).size <= 1)%>
		  </div>
	  <% end %>	
  </div>
  <div class="artical_section" id="article-section"> 
  	<div class="crumbs">
  		<%= link_to t('solution.title'), solution_categories_path %> &rarr; 
  		<%= link_to h(@item.category.name), solution_category_path(@item.category) %> &rarr;
  		<%= content_tag(:span, h(@item.name) ) %>
  	</div>
  	<div class="search-grey-box search-page">
  	  <%= render :partial => "/search/pagesearch", :locals => { :placeholder => t('solutions.search.placeholder', :name => h(@item.category.name)), :url => "/search/solutions?category_id=#{@item.category.id}&term=" } %>
  	</div>
  	<%= render :partial => "/solution/shared/solution_list", :locals => { :category => @item.category, :folder => @item } %>
  </div>
</div>
<%= javascript_tag do -%>
  if(jQuery("#folder-section").height() > jQuery("#article-section").height())
    jQuery("#article-section").css("minHeight", jQuery("#folder-section").height());
<%- end %>
<% content_for :layoutType do -%>antipattern<%- end %>