<% unless @modal %>
	<% content_for :layoutType do %>community solutions<% end %>
	<% content_for :sidebar do -%>&nbsp;<%-end %>
	<%= content_tag :h3, t(".new_folder"), :class => "lead itil-hide" %>
<% end %>
<%= form_for (@folder), :url => solution_folders_path , :html => {:multipart => true, :id => "folder-form"} do |f| %>
	<%= render :partial => "folder_form" , :locals => { :f => f }%>
	<% unless @modal %>
		<div class="button-container align-right itil-hide">
			<%= link_to(t('cancel'), solution_categories_path, :class => "btn" ) %>
			<%= submit_tag t('save'), :class => "btn btn-primary" %>
		</div>
	<% end %>
<% end %>
