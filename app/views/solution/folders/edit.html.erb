<% unless @modal %>
	<% content_for :sidebar do -%>&nbsp;<%-end %>
	<h3 class="lead itil-hide"><%=t('folder.edit')%> <span class="info_data">"<%=@folder.name%>"</span> </h3>
<% end %>
<%= form_for (@folder), :url => solution_folder_path(@folder) , :html => {:multipart => true, :id => "folder-form"} do |f| %>
	<%= render :partial => "folder_form" , :locals => { :f => f }%>
	<% unless @modal %>
		<div class="button-container align-right itil-hide">
			<div class="pull-left">
				<%= confirm_delete(@folder, solution_folder_path(@folder)) %>
			</div>
			<%= link_to(t('cancel'), solution_folder_path(@folder), :class => "btn", :"data-dismiss" => "modal" ) %> 
		  <%= submit_tag t('save'), :class => "btn btn-primary" %>	  
		</div>
	<% end %>
<% end %>
