<div class="pageContent">
	<h3 class="content_title">Edit Folder</h3>
	<% form_for (@folder), :url => solution_category_folder_path(@folder.category_id) , :html => {:multipart => true, :id => "folder-form"} do |f| %>

	<%= render :partial => "folder_form" , :locals => { :f => f }%>
	
	<div class="button-container">
	    <%= submit_tag "Save", :class => "fdbutton submit" %>	  
		<%= link_to('Cancel'[:cancel], solution_category_url(@folder.category_id), :class => "fdbutton grey" ) %>
	</div>
	
	<% end %>
</div>