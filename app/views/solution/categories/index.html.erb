			<p>
				<%=t('solution.info1')%>.
			</p>
			<p>
				 <%=t('solution.info2')%>. 
			</p>
			<p>
				<%=t('solution.info3')%>.
			</p>
			<p> 
				<%=t('solution.info4')%>
			</p>	  
			
			<p>
				<%=t('solution.info5')%>. 
				
		    </p>
			
			<p>
				<%=t('solution.info6')%>.
		    </p>
			<span class="seperator"></span>			
		</div>
	<%- end %>
<%- end %> 

<% if logged_in? && current_user.has_manage_solutions? -%>
	<div class="floatr">
	    <%= link_to t('reorder'),'#', :id => "categories_reorder_button", :class => "uiButton" unless(@categories.size <= 1)%>
		<%= link_to t('solution_category.new'), new_solution_category_path, :class => "uiButton" %>
	</div>
<%- end %>
<h3 class="title"><%=t('solution.title')%></h3> 
<div class="search-grey-box ignore-margin-20">
	<%= render :partial => "/search/pagesearch", :locals => { :placeholder => t('solutions.search_all.placeholder'), :url => "/search/solutions?search_key=" } %>
</div>
<div class="clearfix solution-list" id="categories_list">			
	<% @categories.each do |category| %>
		<div class="<%= cycle('odd', 'even') %>">
			<% if (!category.is_default? && permission?(:manage_knowledgebase)) -%>
					<div class="action_buttons">
						<%= link_to t('folder.add_folder'), new_solution_category_folder_path(category), :class => "first"  %> 
						<%= link_to t('edit') ,edit_solution_category_path(category), :class => "last"   %>
					</div>
			<% end %>
			<h4 class="border_title">
				<% unless category.folders.empty? %>
					<%= link_to  "#{h(category.name)} &raquo;", category %>
				<% else %>
					<%= h(category.name) %>
				<% end %>
			</h4>  
			<ul>			
	  		<% category.folders.visible(current_user).each do |folder| %>
				<li><%= link_to h(folder.name),  solution_category_folder_path(category, folder)  %>
				<span>
				<% if logged_in? && current_user.has_manage_solutions? %>
					(<%= folder.articles.size %>)
				<%else%>
	  				(<%= folder.articles.visible.size %>)
				<%end%>
			   </span> 
			   </li>
			<% end %> 
			</ul>
			<%= content_tag(:span, t('solution_category.info2'), :class => "no_info_text") if (category.folders.size == 0)  %>
		</div>
	<%end%>
</div>

<% if logged_in? && current_user.has_manage_solutions? -%>	
	<%= render :partial => "/shared/reorder_list", :locals => { :items => @categories,  :action_url => reorder_solution_categories_path, :title => :name, :container_id => "categories_sort", :reorder_id => "categories_reorder_button", :list_id => "categories_list"} %>
<% end %>
   