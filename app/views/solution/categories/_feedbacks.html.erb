<% 
@my_article_ids = current_account.solution_articles.by_user(current_user).pluck(:id)
@my_feedbacks = @my_article_ids.present? ? @feedbacks.for_user_articles(@my_article_ids) : []
@my_feedbacks_count = @my_feedbacks.size
%>

<% if @my_feedbacks_count < 1 %>
  <%= render :partial => "all_feedbacks" %>
<% else %>
  <%= render :partial => "my_feedbacks" %>
<% end %>