<div class="list-panel-main">
<% if privilege?(:manage_solutions) && !@category.is_default? -%>
	<ul class="list-actions-left">
		<li class="category-edit">
			<%= link_to( font_icon(:edit, {:size => 23}), 
						edit_solution_category_path(@category),
						:rel => "freshdialog",
						:title => t('solution_category.edit'),
						"data-target" => "#category-edit",
						"data-close-label" => t('cancel'),
						"data-submit-label" => t('save') ) unless @category.is_default? %>
		</li>
	</ul>
	<ul class="list-actions-right">
		<li class="list-default-btns">
			<%= reorder_btn %>
			<%= new_solutions_button(:folder) %>
		</li>
		</li>
	  <li class="list-reorder-btns">
	    <a href="#" class="btn btn-primary" id="submit_btn">Done</a>
	    <a href="#" class="btn btn-link" id="cancel_btn">cancel</a>
	  </li>
	</ul>
<% end %>	
	<h2 class="list-title ellipsis"><%= h(@category.name) %></h2>
</div>