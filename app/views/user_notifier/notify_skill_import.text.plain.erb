  total_failed_count = @params[:message][:agent_update_failed].count.to_i + @params[:message][:agent_not_found].count.to_i
%>
<%= "#{t(:'flash.import.info17', :create_failed_count => @params[:message][:skill_creation_failed].count)}".html_safe%>
