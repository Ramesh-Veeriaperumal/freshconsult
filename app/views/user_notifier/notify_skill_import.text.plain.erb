<%= render layout: 'shared/email_header_footer.plain.erb', locals: { user_name: User.current.name, sent_by: :freshdesk_team } do %>

<%if @params[:failure]%>
<%= "#{t(:'flash.import.info14', :file_name => @params[:file_name])}".html_safe%>
1. <%= t(:'flash.import.info12').html_safe%>
2. <%= t(:'flash.import.info13').html_safe%>

<%= t(:'flash.import.info11').html_safe%>

<%elsif @params[:message].present?%>
<%= t(:'flash.import.info10').html_safe%>
<%= "#{t(:'flash.import.info15', :create_count => @params[:message][:skill_creation_success].count)}".html_safe%>
<%= "#{t(:'flash.import.info16', :update_count => @params[:message][:skill_update_success].count)}".html_safe%>

