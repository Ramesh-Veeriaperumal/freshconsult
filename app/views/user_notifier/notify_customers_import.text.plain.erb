	<% else %>
		<%= "#{t('flash.import.info2', :type => @type.downcase, :success => @success_count, :failure => @failed_count)}" %>

		<%= "#{t('flash.import.info3', :type => @type, :dc_type => @type.downcase)}" %>
	<% end %>

	<%= "#{t('flash.import.info4', :type => @type, :dc_type => @type.downcase)}"%>
