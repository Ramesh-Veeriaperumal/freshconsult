<%= t("mailer_notifier.hi_user", user_name: @user.name) %>

<% if @import_success %>
	<%= "#{t('flash.import.info1', :type => @type, :uc_type => @type.capitalize)}"%>
<% elsif @wrong_csv %>
    <%= "#{t('flash.import.info7', :type => @type.singularize.capitalize, :solution_link => 'https://support.freshdesk.com/support/solutions/articles/196491')}" %>
<% else %>
	<% if @import_stopped %>
		<p><%= "#{t('flash.import.info20', :type => @type, :domain => @account_domain)}" %></p>
	<% else %>
		<p><%= "#{t('flash.import.info2', :type => @type)}" %></p>
	<%end%>

	<%= "#{t(:'flash.import.created', :count => @created)}" %>
	<%= "#{t(:'flash.import.updated', :count => @updated)}" %>
	<%= "#{t(:'flash.import.failed', :count => @failed)}" %>

	<%= "#{t('flash.import.info3', :type => @type, :uc_type => @type.capitalize)}" %>

	<%= "#{t('flash.import.info4', :type => @type.singularize)}" if @attachment%>
	
	<%= @corrupted ? t('flash.import.info6') : "#{t('flash.import.info5', :solution_link => 'https://support.freshdesk.com/support/solutions/articles/196491')}" %>
<% end %>

<%= t(:'flash.import.help_desk')%>

<%= t(:'flash.import.regards')%>

<%= t(:'flash.import.freshdesk')%>