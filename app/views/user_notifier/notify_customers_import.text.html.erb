<%= render layout: 'shared/email_header_footer.html.erb', locals: { user_name: @user.name, sent_by: :freshdesk_team } do %>
<div>
<% if @import_success %>
	<p><%= "#{t('flash.import.info1', :type => @type, :uc_type => @type.capitalize)}".html_safe%></p>
<% elsif @wrong_csv %>
    <p><%= "#{t('flash.import.info7', :type => @type.singularize.capitalize, :solution_link => 'https://support.freshdesk.com/support/solutions/articles/196491')}".html_safe %></p>
<% else %>
	<% if @import_stopped %>
		<p><%= "#{t('flash.import.info20', :type => @type, :domain => @account_domain)}".html_safe %></p>
	<% else %>
		<p><%= "#{t('flash.import.info2', :type => @type)}".html_safe %></p>
	<%end%>
	</br>
		<%= "#{t(:'flash.import.created', :count => @created)}".html_safe%><br>
		<%= "#{t(:'flash.import.updated', :count => @updated)}".html_safe%><br>
		<%= "#{t(:'flash.import.failed', :count => @failed)}".html_safe%><br>
	<p></p>

	<p>
		<%= "#{t('flash.import.info3', :type => @type, :uc_type => @type.capitalize)}".html_safe %>
		<span>
			<%= "#{t('flash.import.info4', :type => @type.singularize)}".html_safe if @attachment%>
			<%= @corrupted ? t('flash.import.info6').html_safe :  "#{t('flash.import.info5', :solution_link => 'https://support.freshdesk.com/support/solutions/articles/196491')}".html_safe  %>
		</span>
	</p>
<%end%>
<p></p>
<p><%= t(:'flash.import.help_desk').html_safe%></p>
<p></p>
<% end %>