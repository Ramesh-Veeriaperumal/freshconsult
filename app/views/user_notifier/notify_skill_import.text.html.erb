<%= render layout: 'shared/email_header_footer.html.erb', locals: { user_name: User.current.name, sent_by: :freshdesk_team } do %>
<%if @params[:failure]%>
<%= "#{t(:'flash.import.info14', :file_name => @params[:file_name])}".html_safe%><br/>
1. <%= t(:'flash.import.info12').html_safe%><br/>
2. <%= t(:'flash.import.info13').html_safe%><br/><br/>

<%= t(:'flash.import.info11').html_safe%><br/><br/>

<%elsif @params[:message].present?%>
<%= t(:'flash.import.info10').html_safe%><br/>
<%= "#{t(:'flash.import.info15', :create_count => @params[:message][:skill_creation_success].count)}".html_safe%><br/>
<%= "#{t(:'flash.import.info16', :update_count => @params[:message][:skill_update_success].count)}".html_safe%><br/><br/>
<%if @params[:message][:skill_creation_failed].present? or @params[:message][:agent_update_failed].present? or @params[:message][:agent_not_found].present?%>
<%
  total_failed_count = @params[:message][:agent_update_failed].count.to_i + @params[:message][:agent_not_found].count.to_i
%>
<%= "#{t(:'flash.import.info17', :create_failed_count => @params[:message][:skill_creation_failed].count)}".html_safe%><br/>
<%= "#{t(:'flash.import.info18', :update_failed_count => total_failed_count)}".html_safe%><br/><br/>

<%= t(:'flash.import.info8').html_safe%><br/>
<%end%>
<%= t(:'flash.import.info9').html_safe%><br/><br/>
<%= t(:'flash.import.help_desk').html_safe%><br/><br/>
<%end%>
<% end %>