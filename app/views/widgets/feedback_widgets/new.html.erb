			if(jQuery("#helpdesk_ticket_custom_field_"+key)){
						jQuery("#helpdesk_ticket_custom_field_"+key).attr("readonly","readonly");
			}
		}

		var prepopulate_name = "<%= params[:helpdesk_ticket][:name] if params[:helpdesk_ticket]%>"

