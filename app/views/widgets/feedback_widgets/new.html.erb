      <%= hidden_field_tag "meta[user_agent]", request.env["HTTP_USER_AGENT"] %>
      <% referrer = h(request.referrer) %>
      <%= hidden_field_tag "meta[referrer]", referrer %>
    </div>
  </div>
</div>
<% end %>


