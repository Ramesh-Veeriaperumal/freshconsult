<% content_for :sidebar do %>
 <%= render :partial => "helpnote" %>
<% end %>

<% content_for :page_title do -%>
  <%=t('automations.title')%>
<% end %>

<% content_for :page_toolbar do -%>
  <%= link_to(t('automations.reorder'), "#", :id => "Reorder", :class => "uiButton") if ( @va_rules.size > 1 ) %>
  <%= link_to t('automations.new'), new_admin_automation_path, :class => "uiButton", :id => 'scenario_new' %>
<% end %>

<% content_for :page_active_list do -%>
  <% @va_rules.each do |va_rule| %>
		<li class="<%=cycle('stripe', '') %>"> 
			<div class="item_actions">
				<%= link_to(t('delete'), admin_automation_path(va_rule), :method => 'delete', :confirm => t('delete_confirm_scenario'), :class => "button" ) %>					
				<%= link_to(t('edit')  , edit_admin_automation_path(va_rule), :class => "button") %> 					
			</div>
			<%= link_to(h(va_rule.name), edit_admin_automation_path(va_rule), :class => "item_info") %>
			<div><%= h(va_rule.description) %></div>				
		</li>
	<% end %>
<%- end %>

<% content_for :page_reorder_list do -%>
  <% @va_rules.each do |va_rule| %>
	  <% content_tag :li, :ruleid => va_rule.id do %> 
			<span class="sort_handle"></span>
			<%= h(va_rule.name) %> 
		<% end %>
	<% end %>
<% end %>

<%= render :partial => "/admin/shared/rule_page" %>