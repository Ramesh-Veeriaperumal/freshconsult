<% content_for :sidebar do -%>&nbsp;<%-end %>

<% content_for :helpcard do %>
  <%= render :partial => "helpnote" %>
<% end %>

<% unless @twitter_handles.empty? %>
  <div class="floatr">
    <% if @add_new_handle %>
      <%= link_to t('.new_account'), @auth_redirect_url , :class => "btn btn-primary mrt" %> 
    <% end %>
    <% if @add_new_stream %>
      <%= link_to t('.new_stream'), new_admin_social_twitter_stream_url , :class => "btn btn-primary" %> 
    <% end %>
  </div>
  <h3 class="lead"><%=t('.title')%></h3><hr />
  <% unless @twitter_streams.empty? %>
    <%= render :partial => "twitter_streams", :locals => { :streams => @twitter_streams } %>
  <% end %>

<% else %>
  <%= render :partial => "signin_info", :locals => { :product => @current_product } %>
<% end %>



