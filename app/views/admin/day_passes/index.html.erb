<% content_for :helpcard do -%>
	<% if current_account.has_credit_card? %>      
    <div class="actions">
      <%= on_off_button(@day_pass_config.auto_recharge, toggle_auto_recharge_admin_day_pass_path(@day_pass_config) ) %>
    </div>
    <%= content_tag :h3, t(".auto_recharge").html_safe, :class => "title" %>
    <p><%= content_tag :strong, t(".recharge_quantity") %> </p>
    <div  id="text_daypass" class="intro"><%= t(".daypass_quantity", :quantity => @day_pass_config.recharge_quantity) %> (<a href="javascript:void(0)" onclick="jQuery(this).parent().hide(); jQuery('#update_daypass').slideDown();"><%= t("change") %></a>) </div>
    <div id="update_daypass" class="intro hide">
    <% form_tag(admin_day_pass_path(@day_pass_config), :method => :put ) do %>
      <%= select :day_pass_config, :recharge_quantity, options_for_select([ "5", "10", "25", "50" ], @day_pass_config.recharge_quantity.to_s)  %>
      <%= t(".day_passes") %>
      <br />      
      <button class='button' style="margin-left:-2px;"><%= t("update") %></button> or <a href="javascript:void(0)" onclick="$('update_daypass').hide(); $('text_daypass').show()" ><%= t('cancel') %></a>
    <% end %>
    </div>
    <span class="seperator"></span>
    <br />
    <p class="intro">
      <%= t('.helptext') %>
    </p>
	<% end %>
<% end %>