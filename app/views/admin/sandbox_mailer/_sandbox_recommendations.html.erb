<div style="text-align:center;">
  <div style="width:500px;
          display:inline-block;
          padding: 10px;
          color: #111111;">
    <h2>
      <%= t('sandbox.mail.freshdesk_recommends') %>
    </h2>
    <% for i in 1..7 do %>
      <p style="padding: 12px 10px;
                font-size: 16px;
                line-height: 1.4;
                margin: 0;
                color: #183247;">
        <%= t("sandbox.mail.recommended_point_#{i}") %>
      </p>
      <% if !(i==7) %>
        <div>
          <% for j in 1..3 do %>
            <div style="width: 4px;
                        height: 4px;
                        background: #6f7c87;
                        border-radius: 50%;
                        display: inline-block;">
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>