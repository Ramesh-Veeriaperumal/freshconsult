<% content_for :sidebar do -%><%- end %> 

<%= content_tag( :h3,  t('portal_customizer_title'),	   :class => "title" ) %>
<% form_for(:account, :url => admin_portal_path(@account), :html => { :method => :put }) do |f| %>
	<ul class="ui-form">
		<li>
			<label>
		      <%= f.feature_check_box :anonymous_tickets %> <%=t('portal_customizer_option_tickets')%>
		  </label>
			<%= content_tag( :div, t('portal_customizer_option_tickets_i'), :class => "info-data tabbed" ) %>
		</li>
	 	<li>
			<label>
		      <%= f.feature_check_box :open_solutions %> <%=t('portal_customizer_option_solutions')%>
		    </label>
			<%= content_tag( :div, t('portal_customizer_open_sol_i'), :class => "info-data tabbed" ) %>
	 	</li>
		<li>
			<label>
		      <%= f.feature_check_box :open_forums %> <%=t('portal_customizer_option_forums')%>
		    </label>
			<%= content_tag( :div, t('portal_customizer_option_for_i'), :class => "info-data tabbed" ) %>
		</li>
		<li>
			<label>
		      <%= f.feature_check_box :google_signin %> <%=t('portal_customizer_google_signin')%>
		    </label>
			<%= content_tag( :div, t('portal_customizer_anon_for_g'), :class => "info-data tabbed" ) %>
		</li>
		<li>
			<label>
		      <%= f.feature_check_box :twitter_signin %> <%=t('portal_customizer_twitter_signin')%>
		    </label>
			<%= content_tag( :div, t('portal_customizer_anon_for_t'), :class => "info-data tabbed" ) %>
		</li>
		<li>
			<label>
		      <%= f.feature_check_box :signup_link %> <%=t('portal_signup')%>
		    </label>
			<%= content_tag( :div, t('portal_signup_anon'), :class => "info-data tabbed" ) %>
		</li>
		<li>
			<label>
		      <%= f.feature_check_box :captcha %> <%=t('portal_captcha')%>
		    </label>
			<%= content_tag( :div, t('portal_captcha_anon'), :class => "info-data tabbed" ) %>
		</li>
	</ul>
	<div class="button-container">
		<%= link_to "&larr; #{t('account.cancel')}", "/admin/home", { :class => "uiButton floatl" } %>
		<%= f.submit t('save'), { :class => "uiButton" } %>
	</div>
<% end %>
