<%if support_mint_applicable?%>
	<div class="notification-box">
		<%if current_account.portals.count>1%>
			<%=t("portalcss.mint_info_portals")%><br>
		<%else%>
			<%=t("portalcss.mint_info_portal")%><br>
		<%end%>
	</div>
<%end%>
	
<% content_for :sidebar do %>
  <%= render :partial => "helpnote" %>
<% end %>
<div class="list-page product-page" id="multi-product-index">
	<%= render :partial => 'header', :locals => { :active => :portals }  %>
	<div class="list-page-body" id="multi-product-list">
		<table class="table table-striped">
			<%= render :partial => 'portal', :collection => current_account.portals %>
			<%= render :partial => 'product', :collection => @products %>
		</table>
	</div>
</div>

