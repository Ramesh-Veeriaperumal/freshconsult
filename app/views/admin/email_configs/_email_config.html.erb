<tr class="<%= cycle('odd', 'even') %>">
  <td class="edit">
    <%= link_to t('email_configs.edit'), edit_admin_email_config_path(email_config) %>
  </td>
  <td class="primaryRole">
    <% portal_name = email_config.product ? email_config.product.name : current_account.portal_name%>
    <% if email_config.primary_role? %>
      <%= content_tag :span, "", :title => t('email_configs.primary_supp_email_tool_tip'), :class => "tooltip primary" %>
    <% else %>
      <%= link_to "", "/admin/email_configs/make_primary/#{email_config.id}", :confirm => t('email_configs.mark_as_primary_msg'), :title => t('email_configs.secondary_supp_email_tool_tip'), :class => "tooltip secondary" %> 
    <% end %>
  </td>
  <td class="supportMail">
    <% if email_config.active? %>
      <%= content_tag(:span, h("#{email_config.name}"), :class => "bold")%><br>
      <%= content_tag(:div, h("#{email_config.reply_email}"), :class => "wrap" ) %>
    <% else %>
      <%= content_tag :span, "", :title => t('email_configs.unverified_info1'), :class => "tooltip warning_icon"%>
      <div class="not-verified">
        <%= content_tag(:span, h("#{email_config.name}"), :class => "bold") unless email_config.name.blank?%><br>
        <%= content_tag(:div, h("#{email_config.reply_email}"), :class => "reply_email wrap") %>
        <div class="verify-button">
          <%= link_to( t("email_configs.send_verification_email"), deliver_verification_admin_email_config_path(email_config) )  unless email_config.active?  %>
        </div>
      <div>
    <% end %>
  </td>
  <td class="to-email"><%= content_tag :div, h(email_config.to_email), :class => "wrap" %> </td>
  <td><%= content_tag :span, h(email_config.group ? email_config.group.name : "-") %> </td>
</tr>