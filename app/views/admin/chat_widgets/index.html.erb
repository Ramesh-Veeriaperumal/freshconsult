  <%= render :partial => "helpnote" %>
  <% if @chat_active %>
    <div id="chat_header" class="chat-header">
      <h3 class = "lead margin-bottom-5"> <%=t('chatwidget_title')%>
        <div class="pull-right">
             <span class ="chat_enable_label"><strong><%=t('freshchat.chat_enabled_label')%></strong></span>
          <%= check_box_tag :chat_enable, 0, current_account.chat_setting.active, :class => 'filter_item', 
            "data-checked-label" => t('freshchat.text_yes'), 
            "data-unchecked-label" => t('freshchat.text_no'),
            :id => 'chat_enable' %>
        </div>
      </h3>
      <p class="small"><%=t('freshchat.widgets_list_info')%></p>
    </div>
    <div id="chat_widgets_list" <% unless @chat_enabled %>class="disable-widgets"<%end%>>
      <div class="list-page">
  	   <div class="list-page-body chat-widget-index" >
        <table class="table table-striped" >
          <% @widgets.each do |widget| %>
            <tr id="<%= dom_id(widget)%>">
              <td rel="<%=widget.id%>">
                <%= check_box_tag :toggle_widget, 0, widget.widget_id && widget.active, :class => 'toggle_widget', :rel => widget.id, "data-checked-label" => t('freshchat.texton'), "data-unchecked-label" => t('freshchat.textoff') %>
                <%= pjax_link_to(h(widget.product ? widget.product.name : widget.account.name), edit_admin_chat_widget_path(widget), :class => "item_info") %>
              </td>
              <td>
                <div class="item_actions" align="right">
                  <%= pjax_link_to(t('edit'), edit_admin_chat_widget_path(widget), :class => "btn btn-mini", :rel => widget.id ) %>
                </div>
              </td>
            </tr>
          <% end %> 
        </table>  
      </div>
      <div class="row-fluid fc-mxchat">
        <div class="span8"><p class="lead"><%=t('freshchat.maximum_chat_title')%></p></div>
        <div class="span4 text-right">
          <div class="fc-mxc-count">
            <span>1</span>
            <ul>
              <% (1..10).each do |i| %>
              <li value="<%= i%>"><%= i%></li>
              <% end %>
            </ul>
          </div>
          <span class="fc-mxc-edit"><%=t('freshchat.maximum_change_label')%></span>
          <ul class="fc-mxc-options">
            <li class="fc-mxc-save" title="Save"><i class="ficon icon-tick"></i></li>
            <li class="fc-mxc-cancel" title="Cancel"><i>+</i></li>
          </ul>
        </div>
        <p class="span12 muted lead-desc"> <%=t('freshchat.maximum_chat_desc')%></p>
      </div>
    </div>
  </div>
  <%= javascript_tag do %>
      (function($){
          $(document).one('ready pjax:success' ,function(){
            var widgetList = [];
            <% @widgets.each do |widget| %>
              widgetList.push(<%= freshchat_setting widget%>);
            <% end%>
            window.liveChat.adminSettings.initializeWidgetList(widgetList);
          });
      })(jQuery);
    <%end%>
  <%else%>
    <%= render :partial => "intro" if current_account.features?(:chat)%>
  <%end%>
</div>