  <%= render :partial => "helpnote" %>
  <% if @chat_active %>
  <div class="alert notice" id="chat_settings_notice" style="display:none"><a class="close" href="#"></a></div>
    <div id="chat_header" class="chat-header">
      <h3 class = "lead margin-bottom-5"> <%=t('chatwidget_title')%>
        <div class="pull-right">
             <span class ="chat_enable_label"><strong><%=t('livechat.chat_enabled_label')%></strong></span>
          <%= check_box_tag :chat_enable, 0, current_account.chat_setting.enabled, :class => 'filter_item', 
            "data-checked-label" => t('livechat.text_yes'), 
            "data-unchecked-label" => t('livechat.text_no'),
            :id => 'chat_enable' %>
        </div>
      </h3>
      <p class="small"><%=t('livechat.widgets_list_info')%></p>
    </div>
    <div id="chat_widgets_list" data-widget-list="<%= chat_widget_list @widgets %>" <% unless @chat_enabled %>class="disable-widgets"<%end%>>
      <div class="list-page">
  	   <div class="list-page-body chat-widget-index" >
        <table class="table table-striped" >
          <% @widgets.each do |widget| %>
            <tr id="<%= dom_id(widget)%>">
              <td rel="<%=widget.id%>">
                <%= check_box_tag :toggle_widget, 0, widget.widget_id && widget.active, :class => 'toggle_widget', :rel => widget.id, "data-checked-label" => t('livechat.texton'), "data-unchecked-label" => t('livechat.textoff') %>
                <%= pjax_link_to(h(widget.product ? widget.product.name : widget.account.name), edit_admin_chat_widget_path(widget), :class => "item_info") %>
              </td>
              <td>
                <div class="item_actions" align="right">
                  <%= pjax_link_to(t('edit'), edit_admin_chat_widget_path(widget), :class => "btn btn-mini", :rel => widget.id ) %>
                </div>
              </td>
            </tr>
          <% end %> 
        </table>  
      </div>
      <div class="row-fluid fc-mxchat">
        <div class="span9">
          <h5 class="lead small-lead"><%=t('livechat.maximum_chat_title')%></h5>
          <p class="muted lead-desc"> <%=t('livechat.maximum_chat_desc')%></p>

        </div>
        <div class="span3 text-right">
          <div class="fc-mxc-count">
            <span>1</span>
            <ul>
              <% (1..10).each do |i| %>
              <li value="<%= i%>"><%= i%></li>
              <% end %>
            </ul>
          </div>
          <span class="fc-mxc-edit"><%=t('livechat.maximum_change_label')%></span>
          <ul class="fc-mxc-options">
            <li class="fc-mxc-save" title="Save"><i class="ficon icon-tick"></i></li>
            <li class="fc-mxc-cancel" title="Cancel"><i>+</i></li>
          </ul>
        </div>

      </div>

      <%if feature?(:cobrowsing)%>
      <div class="row-fluid fc-cb">
        <div class="span9">
          <h5 class="lead small-lead"><%=t('livechat.cobrowsing')%></h5>
          <p class="muted lead-desc"><%=t('livechat.cobrowsing_info')%></p>

        </div>
        <div class="span3 align-right">
            <span class='chat_cobrowsing_checkbox'>
              <%= check_box_tag :chat_cobrowsing, 1, :class => 'filter_item',
              "data-checked-label" => t('livechat.text_yes'),
              "data-unchecked-label" => t('livechat.text_no'),

              :id => 'chat_cobrowsing' %>
            </span>
        </div>
      </div> 
      <%end%>


    </div>
  </div>
  <%else%>
    <%= render :partial => "intro" if current_account.features?(:chat)%>
  <%end%>
</div>