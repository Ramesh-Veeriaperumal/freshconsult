<div id="chat_intro" class="chat-intro">
	<div class="freshchat-content">
		<h2><%=t('livechat.intro_title')%></h2><br>
		<p><%=t('livechat.intro')%></p>
			<button class ="btn btn-primary" id = "chat_initial_enable"> <%=t('livechat.enable_chat')%></button>
			<a target="_blank" href="https://support.freshdesk.com/support/solutions/articles/181689-getting-started-with" >
				<%= t('livechat.learn_livechat') %>
			</a>
		</p>
	</div>
</div>

 <%= javascript_tag do %>
      (function($){
        $(document).one('ready pjax:success' ,function(){
          $('body').on('click',"#chat_initial_enable",function(){
            jQuery(this).attr("disabled", "disabled").text("<%=t('livechat.enabling')%>");
            $.ajax({
              type: "POST",
              url: "/livechat/enable",
              data: {},
              dataType: "json",
              success: function(resp){
                if(resp.status == "success"){
                  window.location = "/admin/chat_widgets";
                }
              }
            });
          });
        });
      })(jQuery);
    <%end%>
