<%= javascript_include_tag :'cdn/livechat_admin_settings' %>

<%= render :partial => "helpnote" %>
<div class="chat-settings">
  <div id="chat_header" class="chat-header">
    <h3 class = "lead"> 
      <%= pjax_link_to(h(t('chatwidget_title')), admin_chat_widgets_path, :class =>"") %>
      /&nbsp;<%= (@widget.product ? @widget.product.name : @widget.account.name) %>
    </h3>
  </div>
	<%= render :partial => "setting" %>
</div>

<%= javascript_tag do %>
  var asset_url = <%= ChatConfig['asset_url'].to_json.html_safe %>;
  var js_asset_url = asset_url.js;
  var zeroClipBoardSWFPath = "<%= asset_path('/swf/ZeroClipBoard.swf')%>";
  <% if Rails.env.development? %>
  zeroClipBoardSWFPath = js_asset_url + zeroClipBoardSWFPath;
  <% end %>

  (function($){
    $(document).one('ready pjax:success' ,function(){
      window.liveChat.adminSettings.editWidget(<%= freshchat_setting @widget%>);
    });
  })(jQuery);
<%end%>
