								ev.preventDefault();
								if(confirm("<%=t('email_notifications.reset_confirm')%>")){
									jQuery('#description_<%=lang%>').setCode(jQuery('#reset_template_<%=lang%>').data("html"));
									jQuery('#subject_<%=lang%>').val(jQuery('#reset_template_<%=lang%>').data("subject")); 
