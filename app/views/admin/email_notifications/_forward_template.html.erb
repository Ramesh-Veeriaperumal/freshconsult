<tr>
	<td class='email-tip'>
		<input rel="toggle" type="checkbox" id="em" name="timer" data-checked-label="ON" data-unchecked-label="OFF" <%= (forward_template.requester_notification) ? "checked" : "" %> <%=!current_account.verified? ? "disabled" : "" %> >
	</td>
	<td>
		<span class="vertical-alignment event-name">
			<strong>
			<a href="<%= admin_edit_notification_path(:id => forward_template.id, :type =>"forward_template")%>"><%= t("#{forward_template.token}") %></a>
			</strong>
		</span>
	</td>
		<td class="text-right">
			<% if (forward_template.outdated_requester_content == true ) %>
				<i class="common-icon-outdated"></i>
				<span class="muted"><%=t('email_notifications.index_outdated')%></span>
			<%end%>	
		</td>
		
	<td class="text-right">
		<%= link_to(t('edit'), admin_edit_notification_path(:id => forward_template.id, :type =>"forward_template"), :class => 'btn btn-mini') %>
	</td>
</tr>