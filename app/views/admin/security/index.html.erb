      <div class="extra_tabbed lead <%= 'disabled' if (current_account.freshid_integration_enabled? && current_account.freshdesk_sso_enabled?)%>" id="sso_enabled_content" style="display:<%= current_account.sso_enabled? ? "block": "none" %>;">
        <%= sso_enable_warning_if_freshid_enabled %>
