 <div class="sso_status">
  <span class="sso_status_text">
  <% if current_account.freshid_sso_enabled? %>
  <%=t("agent.status.active")%>
  <% else %>
  <%=t("header.new_ticket")%>
  <% end %>
  </span>
  </div>

