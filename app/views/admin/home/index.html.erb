<% @page_title = t(".title") %>
<%= check_fb_reauth_required  %>
<%= check_twitter_reauth_required %>
<%= fb_realtime_msg_disabled %>
<%= check_ecommerce_reauth_required %>
<% content_for :layoutType do -%>single<%- end %>
<%= content_tag(:div, 
		content_tag(:div, 
			text_field_tag(:admin_search, "", :class => "as-input", :placeholder => "Search admin settings") + 
			text_field_tag(:admin_search_hint, "", :class => "as-hint", :disabled => true) + 
			link_to("&times;".html_safe, "#", :class => "as-clear") +
			content_tag(:div, "", :id => "suggestions-container", :class => "as-suggestions-container"),
		:class => "pull-right" ) + 
		content_tag(:h3, @page_title, :class => "lead"),
	:rel => "sticky", :"data-scroll-top" =>  true, :class => "admin-header") %>
<%= build_admin_prefpane %>
<%#= link_to(t('more'), "#", :class => "as-more") %>

