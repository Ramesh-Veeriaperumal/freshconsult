<% 
	@page_title = t(".title") 
	header_content ='';
%>

<%= check_ecommerce_reauth_required %>
<% content_for :layoutType do -%>single<%- end %>
			
<% header_content = content_tag(:button,
					content_tag(:i, '', :class => 'ficon ficon-connect-chat') +
					I18n.t('livechat.chat_with_us'),
					:class => 'btn btn-default btn-support-chat chat-support-link', :id => 'chat-support-header') if in_app_support?


%>
<%= content_tag(:div, 
		content_tag(:div, 
			header_content.html_safe +
			text_field_tag(:admin_search, "", :class => "as-input", :placeholder => t('admin.home.index.search_admin')) + 
			text_field_tag(:admin_search_hint, "", :class => "as-hint", :disabled => true) + 
			link_to("&times;".html_safe, "#", :class => "as-clear") +
			content_tag(:div, "", :id => "suggestions-container", :class => "as-suggestions-container"),
		:class => "pull-right" ) + 
		content_tag(:h3, @page_title, :class => "lead"),
	:rel => "sticky", :"data-scroll-top" =>  true, :class => "admin-header") %>
<%= build_admin_prefpane %>
<%#= link_to(t('more'), "#", :class => "as-more") %>

<%= javascript_tag do %>
	var adminSearchKeywords = <%= generate_keywords_hash.to_json.html_safe %>;
<% end %>

<%= javascript_include_tag :'cdn/admin_search' %>
