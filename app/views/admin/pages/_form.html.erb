<%= form.error_messages %>
<%= form.hidden_field :page_type %>
<h3 class="title">
	<span class="light">Editing:</span> <%= t("portal_pages.pages.#{@portal_page.token}") %>
</h3>
<p>
	<%= form.code_editor :content, :height => "400px",
			"data-fullscreen-title" => "<span class='light'>Editing</span> #{t("portal_pages.pages.#{@portal_page.token}")}",
            "data-fullscreen-actions" => "#page_btns .portal-form-actions" %>
</p>

<% if [:ticket_view, :article_view, :article_list, :topic_view, :topic_list, :archive_ticket_list, :archive_ticket_view].include?(@portal_page.token) %>
	<p class="help-text"> <%=t("portalcss.layout_pages.page_preview_message.#{@portal_page.token}")%> </p>
<% end %>

<div id="page_btns" class="mt15">
    <%= render :partial => "/admin/shared/customization_buttons", 
      :locals => { :page_id => params[:id], :page_type => @portal_page.page_type, :type => :page } %>
</div>