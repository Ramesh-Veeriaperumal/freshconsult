<div id="portal-simple-template-options">
  <% form_for [:admin, @portal_template], :url => { :action => :update }, :html => { :method => :put, :rel => "validate" } do |f| -%>
    <h3 class="title">Background color</h3>
    <% pref_bgs = [:header_color, :bg_color, :footer_color, :help_center_color, :btn_primary_background, :btn_background] %>
    <div class='row-fluid'>
    <% pref_bgs.each_with_index do |p, i| %>
      <div class="span3 config_item <%= ((i+1) % 4 == 0) ? "omega" : "" %>">
        <label><%= t("admin.portal_settings.simple.#{p}") %></label>  
        <div class="color">
          <input type="color" maxlength="7" id="portal_template_prefereces_<%= p %>" class="color_field required" name="portal_template[preferences][<%= p %>]" value="<%= portal_simple.preferences[p] %>" data-hex="true" />
        </div> 
      </div>
    <% end %>
    </div>

    <h3 class="title">Tab colors</h3>
    <% pref_bgs = [:tab_color, :tab_hover_color] %>
    <div class='row-fluid'>
    <% pref_bgs.each_with_index do |p, i| %>
      <div class="span3 config_item <%= ((i+1) % 4 == 0) ? "omega" : "" %>">
        <label><%= t("admin.portal_settings.simple.#{p}") %></label>  
        <div class="color">
          <input type="color" maxlength="7" id="portal_template_prefereces_<%= p %>" class="color_field required" name="portal_template[preferences][<%= p %>]" value="<%= portal_simple.preferences[p] %>" data-hex="true" />
        </div> 
      </div>
    <% end %>
    </div>

    <h3 class="title">Portal fonts</h3>
    <% pref_bgs = [:baseFontFamily, :textColor, :headingsFontFamily, :headingsColor] %>
    <div class='row-fluid'>
    <% pref_bgs.each_with_index do |p, i| %>    
      <div class="span3 config_item <%= ((i+1) % 4 == 0) ? "omega" : "" %>">
        <label><%= t("admin.portal_settings.simple.#{p}") %></label>
        <% if((i+1) % 2 != 0) %>          
          <select class="customSelect" name="portal_template[preferences][<%= p %>]" id="portal_template_prefereces_<%= p %>">
            <%= options_for_select([ "Helvetica Neue", "Droid Sans", "Open Sans", "Open Sans Condensed" ], 
                portal_simple.preferences[p]) %>
          </select>
        <% else %>
          <div class="color">
            <input type="color" maxlength="7" id="portal_template_prefereces_<%= p %>" class="color_field required" name="portal_template[preferences][<%= p %>]" value="<%= portal_simple.preferences[p] %>" data-hex="true" />
          </div>
        <% end %>
      </div>
    <% end %>
    </div>

    <h3 class="title">Link color</h3>
    <% pref_bgs = [:linkColor, :linkColorHover] %>
    <div class='row-fluid'>
    <% pref_bgs.each_with_index do |p, i| %>
      <div class="span3 config_item <%= ((i+1) % 4 == 0) ? "omega" : "" %>">
        <label><%= t("admin.portal_settings.simple.#{p}") %></label>  
        <div class="color">
          <input type="color" maxlength="7" id="portal_template_prefereces_<%= p %>" class="color_field required" name="portal_template[preferences][<%= p %>]" value="<%= portal_simple.preferences[p] %>" data-hex="true" />
        </div> 
      </div>
    <% end %>
    </div>

    <h3 class="title">Form elements</h3>
    <% pref_bgs = [:inputFocusRingColor] %>
    <div class='row-fluid'>
    <% pref_bgs.each_with_index do |p, i| %>
      <div class="span3 config_item <%= ((i+1) % 4 == 0) ? "omega" : "" %>">
        <label><%= t("admin.portal_settings.simple.#{p}") %></label>  
        <div class="color">
          <input type="color" maxlength="7" id="portal_template_prefereces_<%= p %>" class="color_field required" name="portal_template[preferences][<%= p %>]" value="<%= portal_simple.preferences[p] %>" data-hex="true" />
        </div> 
      </div>
    <% end %>
    </div>

    <br />
    <div class="well">
      <%= submit_tag "Preview", :name => 'preview_button', :class => "btn primary floatr", :target => "_blank", :disable_with => "Please wait..." %>
      <%= submit_tag "Draft", :name => 'save_button',:class => "btn floatr", :disable_with => "Please wait..." %>
      <% 
        soft_reset_url = "javascript:void(0)"
        soft_reset_url =  admin_portal_template_soft_reset_path(:portal_template => "preferences") if @preferences_from_redis
      %>
      <%= link_to "Discard", soft_reset_url, 
          :class => "btn #{!@preferences_from_redis && 'disabled'}", 
          :disabled => !@preferences_from_redis%>
    </div>
  <% end %>
</div>