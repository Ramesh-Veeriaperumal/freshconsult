<%
type ||= ''
if((@role and @role.default_role?))
  label = t('admin.roles.save_label')
  loading_label = t('admin.roles.saving_label')
elsif(params[:action] == 'new' or params[:action] == 'edit')
  label = t('admin.roles.done_label')
  loading_label = t('admin.roles.done_label')
else
  label = t('admin.roles.save_label')
  loading_label = t('admin.roles.saving_label')
end
%>
<div id="manage-agents"></div>
<div id="popup-content" class="hide">
  <div class="manage-agent-wrapper">
    <div class="add-agent-wrapper">
        <div class="agent-list-wrapper <%= type == 'agentskills' ? 'skill-list-wrapper' : '' %>">

        </div>
                <div class="add-agent-box">
                <span class="rounded-add-icon add-agent-icon"></span>
                <% if type == 'roles' %>
                  <select data-action="add-agent" multiple="true"
                  class="add-agent-class agent-select-list" placeholder="<%= t('admin.roles.add_agent_label') %>">
                  </select>
                <% else %>
                  <input style="width:100%" type="hidden" class="addAgentHiddenInput">
                <% end %>
        </div>
    </div>
    <div class="button-container">
    <a class="close btn" href="javascript:void(0)" data-action="cancelmodal"><%= t('admin.roles.cancel_label') %></a>
    <button class="btn btn-primary <%= type == 'roles' ? 'disabled' : '' %>" data-label="<%= label %>" data-loading="<%= loading_label %>" data-action="submitmodal"><%= label %></button>

    </div>
    <input type="hidden" value="<%= current_user.privilege?(:manage_account) %>" id="is-accadmin">
</div>
</div>