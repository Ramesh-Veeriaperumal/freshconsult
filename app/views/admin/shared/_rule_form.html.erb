<% content_for :sidebar do -%><%- end %>
<%= render :partial => "admin/shared/filter_jsinit", :locals => { :filter_type => "va_rule", :placeholders => ticket_placeholders+event_placeholders } %>
<%= f.error_messages :object_name => 'rule' %>
<div class="form-horizontal">
	<input type="hidden" name="id"   value="" />
	<input type="hidden" name="type" value="virtual_agents" />
	<div class="control-group">
		<%= f.label :name, t('dispatch.rule_name'), :class => "control-label" %>
		<div class="controls">
			<label class="overlabel" for="va_rule_name"><%= t("example") %>: <em>"<%=t('dispatch.info1')%>"</em> </label>
			<%= f.text_field :name, :class => "required text input-xxlarge" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :description, t('dispatch.description'), :class => "control-label" %>
		<div class="controls">
			<label class="overlabel" for="va_rule_description">
				<%= t("example") %>: <em>"<%=t('dispatch.info2')%>"</em>
			</label>
			<%= f.text_area :description, :class => "smallpara input-xxlarge" %>
		</div>
	</div>
	<ul class="ui-form observer no-background">
		<li>
			<h3 class="lead">
				<%=t('dispatch.conditions')%>
				<label class="muted"><%=t('dispatch.info3')%></label>
			</h3>

			<div class="choicelist">
				<%= f.radio_button  :match_type, 'any', :class => "radio" %> <%= f.label :match_type_any, t('dispatch.match_any').html_safe, :class => "radiolabel" %>
				<%= f.radio_button  :match_type, 'all', :class => "radio" %> <%= f.label :match_type_all, t('dispatch.match_all').html_safe, :class => "radiolabel" %>
			</div>			
			<div class="conditionset" id="filterDOM">
			<div id="RuleList" class="rule_list"></div>
			<fieldset class="addchoice">
		         <p><%=t('dispatch.add_condition')%></p> <img alt="<%=t('dispatch.add_new_choice')%>" class="add" src="/images/add.png" />
		    </fieldset>			
			</div>
		</li>

		<li>
			<h3 class="lead">
				<%=t('dispatch.actions')%>
				<label class="muted"><%=t('dispatch.act_to_perform')%></label>
			</h3>

			<div class="conditionset" id="actionDOM">
				<div id="ActionList" class="rule_list"></div>
				<fieldset class="addchoice">
		        	<p><%=t('dispatch.add_new_action')%></p> <img alt="<%=t('dispatch.add_new_action')%>" class="add" src="/images/add.png" />
		    	</fieldset>		
			</div>
		</li>
	</ul>		


	<div id="webhook_usecase" class="hide">
		<%= render :partial=> 'admin/shared/advanced_webhook_usecase.html.erb' %>
	</div>

	<div class="button-container">
		<input type="hidden" name="save_json" id="savejson" value="" />
		<input type="submit" class="uiButton" id="dispatchr_submit" value="<%=t('save')%>" />
		<%= link_to t('cancel'), {:action => 'index'}, :class => "uiButton" %>
	</div>
</div>
<% content_for :pagefixed do %>
	<%= render :partial => "/shared/placeholder_help", :locals => { :placeholders => ticket_placeholders+survey_placeholders+event_placeholders }  %>
<% end %>

