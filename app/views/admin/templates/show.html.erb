<%= include_stylesheets :codemirror %>
<%= include_javascripts :codemirror %>
<%= include_javascripts :portaltemplate %>
<%= include_stylesheets :pattern %>
<%= include_javascripts :pattern %>
<% content_for :sidebar do %><% end %> 
<%= render :partial => "shared/colorpicker" %>
<div class="pull-right">
  <%= link_to t("portalcss.reset_all_changes"), restore_default_admin_portal_template_path, :confirm => t("portalcss.reset_all_confirm_message"), :class => "btn" %>
  <a href="<%=publish_admin_portal_template_path%>" class="btn btn-primary"><%=t("portalcss.publish_changes")%></a>
</div>
<h3 class="sub-title"><%=t("portalcss.header")%></h3>
<br />
<div class="clearfix">
  <ul data-tabs="tabs" class="tabs">    
    <li class="active">      
      <a href="#preferences" data-toggle="tab" id="preferences-tab"><%=t("portalcss.color_and_font_header")%></a>
    </li>
    <%if feature?(:css_customization)%>
    <li>
      <a id="custom_css-tab" href="#custom_css" data-code-refresh="#portal_template_custom_css"><%=t("portalcss.css_header")%></a>
    </li>
    <%end%>
    <%if feature?(:layout_customization)%>
    <li>
      <a id="layout-tab" href="#header" data-toggle="tab" data-code-refresh="#portal_template_header, #portal_template_footer, #portal_template_layout"><%=t("portalcss.layout_and_pages_header")%></a>
    </li>
    <%end%>
  </ul>        
  
    <div class="tab-content">
      <div class="tab-pane active" id="preferences">
        <%= render :partial => "/admin/shared/portal_simple", :object => @portal_template %>
      </div>
      <%if feature?(:css_customization)%>
      	<div class="tab-pane" id="custom_css">		
          <%= render :partial => "custom_css" %>
      	</div>
      <%end%>
      <%if feature?(:layout_customization)%>
        <div class="tab-pane" id="header">
          <ul data-tabs="tabs" class="pills">
            <li class="active">
              <a id="layout-tab" href="#layout" code-refresh-id="portal_template_layout">
                <%=t("portalcss.layout_pages.subheader_layout")%>
              </a>
            </li>
            <li>
              <a id="pages-tab" href="#pages"><%=t("portalcss.layout_pages.subheader_pages")%></a> 
            </li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="layout">
              <%= render :partial => "layout" %>
            </div>
            <div class="tab-pane" id="pages">
              <div>
                <h2 class="title light"><%=t("portalcss.layout_pages.subheader_pages")%></h2>
                <p class="help-text">
                  <%=t("portalcss.layout_pages.pages_help_message")%>
                </p>
              </div>
              <br />
              <div class="row-fluid">
                <div class="span2">
                  <%= render :partial => "portal_pages"%>
                </div>
                <div class="span10 omega">
                  <div id="Customizepage"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end%>
</div> 

<% content_for :onload_script do %>
  jQuery("#custom_css-tab, #layout-tab").bind("click", function(evnt){
    var target = evnt.target;
    setTimeout(function(){
      jQuery(jQuery(target).data("codeRefresh")).codemirror("refresh")
    }, 100)    
  });

  jQuery("form[rel=portal_form]").livequery(function(ev){
      jQuery(this).validate({
        submitHandler: function(form, btn) {
          // Setting the submit button to a loading state
          $btn = jQuery(btn)
          if(btn.name != "preview_button"){
            $btn.button("loading")
            jQuery($btn.data("codeRefresh")).codemirror('save');
            jQuery(form).ajaxSubmit({
              success: function(response, status){
                // Resetting the submit button to its default state
                $btn.button("reset")
                $btn.parent().find("#soft_reset_button").attr("disabled", false).removeClass("disabled")
                jQuery('#cm-fs-actions #soft_reset_button').attr("disabled", false).removeClass("disabled")
              },
              dataType: "script"
            })
          }else{
            form.submit()
          }
          return false;
        }
      })
    })

  jQuery("#pages-tab").live("click", function(ev){
    if(jQuery("#Customizepage").html() == "")
      jQuery("#PortalPageList a").first().trigger("click");
  });

  if(window.Mousetrap){
    Mousetrap.bind('command+shift+s',function(e){
      jQuery('input[name="save_button"]:visible')[0].click();
      return false;
    });

    Mousetrap.bind('command+shift+p',function(e){
      jQuery('input[name="preview_button"]:visible')[0].click();
      return false;
    });
  }
<% end %>
