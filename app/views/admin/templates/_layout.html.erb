<% form_for [:admin, @portal_template], :url => { :action => :update }, 
  :html => { :method => :put, :target => "freshdesk_preview", :rel => "portal_form" } do |f| -%>
  <%= f.error_messages %>
  <%= hidden_field_tag 'portal_tab', :layout %>
	
  <h3 class="title"><%=t("portalcss.layout_pages.head_layout_title")%></h3>
  <p class="help-text"><%=t("portalcss.layout_pages.head_layout_help_message")%></p> 
  <%= f.code_editor :head, :height => "150px",
        "data-fullscreen-title" => fullscreen_title(t("portalcss.layout_pages.head_layout_title")),
        "data-fullscreen-actions" => "#layout_btns .portal-form-actions" %>
	<br />
  <h3 class="title"><%=t("portalcss.layout_pages.header_layout_title")%></h3>
  <p class="help-text"><%=t("portalcss.layout_pages.header_layout_help_message")%></p>

  <%= f.code_editor :header, :height => "150px",
        "data-fullscreen-title" => fullscreen_title(t("portalcss.layout_pages.header_layout_title")),
        "data-fullscreen-actions" => "#layout_btns .portal-form-actions" %>          
  <br />
  <h3 class="title"><%=t("portalcss.layout_pages.footer_layout_title")%></h3>
  <p class="help-text"><%=t("portalcss.layout_pages.footer_layout_help_message")%></p>  
  <%= f.code_editor :footer, :height => "150px",
        "data-fullscreen-title" => fullscreen_title(t("portalcss.layout_pages.footer_layout_title")),
        "data-fullscreen-actions" => "#layout_btns .portal-form-actions" %>
  <br />
  <h3 class="title"><%=t("portalcss.layout_pages.pagelayout_title")%></h3>
  <p class="help-text"><%=t("portalcss.layout_pages.pagelayout_help_message")%></p> 
  <%= f.code_editor :layout,
        "data-fullscreen-title" => fullscreen_title(t("portalcss.layout_pages.pagelayout_title")),
        "data-fullscreen-actions" => "#layout_btns .portal-form-actions" %>  
				
  <hr />
  <div id="layout_btns">
    <%= render :partial => "/admin/shared/customization_buttons", 
      :locals => { :type => :template, :active_tab => :layout } %>
  </div>
<% end %>