<ul class="ui-form">
	
	<li>
		<div style="margin:5px 5px 0;font-weight:bold;font-size:14px;color:#555;" class="floatl"><%= t('.enable_label') %></div>		
		<div id="survey_link_con" class="floatr">				
		<%if @account.features?(:survey_links)%>
		   <%= link_to_function "<strong> #{t('application.enabled')} </strong><span></span>", "toggle_status()",  :id => "survey_status_link", :class => "uiButton special iphone-active" %>
		<%else%>
		   <%= link_to_function "<strong> #{t('application.disabled')} </strong><span></span>", "toggle_status()",  :id => "survey_status_link", :class => "uiButton special iphone-inactive" %>
		<%end%>
		</div>		
	</li>
	<li style="border-top:1px solid #ccc;" id="survey_elements" <%unless @account.features?(:survey_links)%>style="display:none"<%end%>>	
	
<% remote_form_for :survey, @survey, :url => { :action => "update" },  :html => { :method => :put } do |f| %>
<ul>
	<li><strong><%=t('.link_text_label')%></strong><br/> <span class="link_text_info"><%=t('.link_text_info')%></span></li>
	<li>
		<!-- <%= f.text_field :link_text, :value => @survey[:link_text], :class => "time"  %> -->
		<%= f.text_area(:link_text, :value => @survey[:link_text], :autocomplete => "off", :rel => "ghostwriter", :size => "16", :class=> "textfield required", :style=>"display:block;resize:none;width:78%;height:60px;") %>				
	</li>
	<li>
	   <ul class="survey-option-conf">
	      <li>	
	        
		<div class="happy-smily"></div>
	        
		<%= f.text_field :happy_text, :value => (@survey[:happy_text] || t('helpdesk.ticket_notifier.reply.happy')) %>
	        
	     </li>
	     <li>	
	     	<div class="neutral-smily"></div>
		<%= f.text_field :neutral_text, :value => (@survey[:neutral_text] || t('helpdesk.ticket_notifier.reply.neutral')) %>
	     </li>
	     <li>	
	     	<div class="unhappy-smily"></div>
		<%= f.text_field :unhappy_text, :value => (@survey[:unhappy_text] || t('helpdesk.ticket_notifier.reply.unhappy')) %>
	     </li>
	   </ul>  	
	</li>
	
	<li>
		<strong><%=t('.send_while_title')%></strong><br>
		<label class="radio" style="font-size:12px;"><%= f.radio_button :send_while, Survey::CLOSED_NOTIFICATION %> <%=t('.send_while_option3')%></label>
		<label class="radio" style="font-size:12px;"><%= f.radio_button :send_while, Survey::RESOLVED_NOTIFICATION %> <%=t('.send_while_option2')%></label>
		<label class="radio" style="font-size:12px;"><%= f.radio_button :send_while, Survey::ANY_EMAIL_RESPONSE %> <%=t('.send_while_option1')%></label>
		<label class="radio" style="font-size:12px;"><%= f.radio_button :send_while, Survey::SPECIFIC_EMAIL_RESPONSE %> <%=t('.send_while_option4')%></label>
	</li>
	<li class="button-container">
	<%= submit_tag t('account.save'), :class => 'uiButton' %>
	<a class="uiButton" href="/admin/home">Cancel</a>
	</li>
</ul>
<%end%>
</li>
</ul>

<% javascript_tag do %>
    function update_status(status_url){
    	jQuery.ajax({
    		url: status_url,
    		type: "post"	
    	})
    }
    
    function enable(){
    	update_status("/admin/surveys/enable");
    }
    
    function disable(){
    	update_status("/admin/surveys/disable");
    }
    
    function toggle_status(){
    	jQuery('#survey_status_link').hasClass("iphone-active")? disable() : enable();    	
    }
    
	function change_enable_status(status){
	   if(status){
		jQuery('#survey_elements').show();
		jQuery('#survey_status_link').removeClass("iphone-inactive").addClass("iphone-active");
		jQuery('#survey_status_link').html('<strong> <%=t('application.enabled')%> </strong><span></span>');		
	   }
	   else{
	   	jQuery('#survey_elements').hide();
	   	jQuery('#survey_status_link').removeClass("iphone-active").addClass("iphone-inactive");
	   	jQuery('#survey_status_link').html('<strong> <%=t('application.disabled')%> </strong><span></span>');	   	
	   }
	}
<%end%>
