<% content_for :sidebar do %>
	<div class="sidepanel">
		<h3 class="title"><%=t('dispatch.title')%></h3>
		<div class="help_text">
			<p><%=t('dispatch.info4')%>.</p>
			<p><%=t('dispatch.info5')%>.</p>
			<p>You can use the <b>Reorder</b> functionality to change the order of the rules.</p>
		</div>
	</div>
<% end %>

<% content_for :page_title do -%>
  <%= t('dispatch.dispatch_rules') %>
<%- end %>

<% content_for :page_toolbar do -%>
  <%= link_to (t('dispatch.reorder'), "#", :id => "Reorder", :class => "uiButton") if ( @va_rules.size > 1 ) %>
  <%= link_to t('dispatch.new_rule'), new_admin_va_rule_path, :class => "uiButton"  %>
<% end %>

<% content_for :page_active_list do -%>
  <% @va_rules.each do |va_rule| %>
    <% content_tag :li, :ruleid => va_rule.id, :class => cycle('odd', 'even') do %>
  		<div class="item_actions">
  			<%= link_to(t('delete'), admin_va_rule_path(va_rule), :method => 'delete', :confirm => 'Are you sure you want to delete this rule?', :class => "button" ) %>					
  			<%= link_to(t('deactivate'), deactivate_admin_va_rule_path(va_rule), :method => 'put', :class => "button") %>
  			<%= link_to(t('edit'), edit_admin_va_rule_path(va_rule), :class => "button") %> 					
  		</div>
  		<%= link_to(h(va_rule.name), edit_admin_va_rule_path(va_rule), :class => "item_info") %>
  		<%= content_tag :div, truncate(h(va_rule.description), :length => 80), :title => h(va_rule.description)  %>
  	<% end %>
  <% end %>
<%- end %>

<% content_for :page_reorder_list do -%>
  <% @va_rules.each do |va_rule| %>
  	<% content_tag :li, :ruleid => va_rule.id do %>
  		<span class="sort_handle"></span>
  		<%= h(va_rule.name) %> 
  	<% end %>
  <% end %>
<% end %>

<% unless @inactive_rules.empty? %>
  <% content_for :page_inactive_list do -%>
    <% @inactive_rules.each do |va_rule| %>
      <% content_tag :li, :ruleid => va_rule.id, :class => cycle('odd', 'even') do %>
        <div class="item_actions">
          <%= link_to(t('delete'), admin_va_rule_path(va_rule), :method => 'delete', :confirm => 'Are you sure you want to delete this rule', :class => "button" ) %>					
          <%= link_to(t('activate'), activate_admin_va_rule_path(va_rule), :method => 'put', :class => "button") %>
          <%= link_to(t('edit'), edit_admin_va_rule_path(va_rule), :class => "button") %> 					
        </div>
        <%= link_to(h(va_rule.name), edit_admin_va_rule_path(va_rule), :class => "item_info") %> 
			<% end %>
		<% end %>
  <% end %>
<% end %>

<%= render :partial => "/admin/shared/rule_page" %>