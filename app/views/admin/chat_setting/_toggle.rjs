page << "var freshchatLayout = jQuery('#freshchat_layout,#chat_available_icon');
		if(#{feature?(:chat_enable)}){
			if(jQuery('#freshchat_layout') && window.chatSocket){
				freshchatLayout.show();
				chatSocket.connect();
			}else{
				jQuery('body').append('#{escape_javascript(render :partial => 'layouts/chat') }');
			}
		}else{
			freshchatLayout.hide();
			if(window.chatSocket){
				chatSocket.disconnect();
			}
		}"

