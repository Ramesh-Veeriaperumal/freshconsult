<% content_for :sidebar do -%>
  <%= render :partial => "helpnote_without_tour" %>
<%-end %>
<% @page_title = t('.title') %>
<%= content_tag :h3, @page_title, :class => "title" %>
<% form_for :product, @product, :url => admin_product_path, :html => { :multipart => true, :rel => "validate", :method => :put, :id => "ProductForm", "data-rebrand-form" => true  } do |f| %>
  <%= render :partial => "form", :object => f %>
  <div class="button-container">
    <%= link_to(t('cancel'), admin_products_path, :class => "btn pull-left", :id => "email-form-cancel" )  %>
  	<%= f.submit t('update'), :class => "btn btn-primary "  %>  	
  </div>
<% end %>

<% content_for :onload_script do %>
	if(<%=params[:enable_portal]||false%>){
		jQuery("#EnablePortal").prop("checked", true).trigger("change");
		jQuery("#PortalUrl").trigger("focus");
	}
  jQuery('.fileAdminUpload').live("change", function(){
    setPostParam(this.form, "redirect_url", window.location)
    jQuery(this.form).submit()
  })
<% end %>