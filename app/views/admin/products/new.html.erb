<% content_for :sidebar do -%>
  <%= render :partial => "helpnote_without_tour" %>
<%-end %>
<%= include_stylesheets :pattern %>
<%= include_javascripts :pattern %>
<% @page_title = t('.title') %>
<%= content_tag :h3, @page_title, :class => "title" %>
<% form_for :product, @product, :url => admin_products_path, :html => { :multipart => true, :rel => "validate", :method => :post, :id => "ProductForm", "data-rebrand-form" => true } do |f| %>
  <%= render :partial => "form", :object => f %>
  <div class="button-container">
  	<%= link_to(t('cancel'), admin_products_path, :class => "btn pull-left", :id => "email-form-cancel" )  %>
  	<%= f.submit t('save'), :class => "btn btn-primary"  %>
  </div>
<% end %>
