<% content_for :sidebar do %>
  <%= render :partial => "helpnote"%>
<% end %>

<% content_for :page_title do -%>
  <%= t('.title') %>
<%- end %>

<% content_for :page_toolbar do -%>
  <%= link_to (t('dispatch.reorder'), "#", :id => "Reorder", :class => "uiButton") if ( @va_rules.size > 1 ) %>
  <%= link_to t('dispatch.new_rule'), new_admin_observer_rule_path, :class => "uiButton", :id => "supervisor_new"  %>
<% end %>

<% content_for :page_active_list do -%>
  <% @va_rules.each do |observer_rule| %>
    <% content_tag :li, :ruleid => observer_rule.id, :class => cycle('odd', 'even') do %>
      <div class="item_actions">
        <%= link_to(t('delete'), admin_observer_rule_path(observer_rule), :method => 'delete', :confirm => t("dispatch.delete"), :class => "button" ) %>					
        <%= link_to(t('deactivate'), deactivate_admin_observer_rule_path(observer_rule), :method => 'put', :class => "button") %>
        <%= link_to(t('edit'), edit_admin_observer_rule_path(observer_rule), :class => "button") %>
      </div>
      <%= link_to(h(observer_rule.name), edit_admin_observer_rule_path(observer_rule), :class => "item_info") %>
      <%= content_tag :div, truncate(h(observer_rule.description), :length => 80), :title => h(observer_rule.description)  %>
    <% end %>
  <% end %>
<%- end %>

<% content_for :page_reorder_list do -%>
  <% @va_rules.each do |observer_rule| %>
    <% content_tag :li, :ruleid => observer_rule.id do %>
      <span class="sort_handle"></span>
      <%= h(observer_rule.name) %> 
    <% end %>
  <% end %>     
<% end %>

<% unless @inactive_rules.empty? %>
  <% content_for :page_inactive_list do -%>
    <% @inactive_rules.each do |observer_rule| %>
      <% content_tag :li, :ruleid => observer_rule.id, :class => cycle('odd', 'even') do %>
        <div class="item_actions">
          <%= link_to(t('delete'), admin_observer_rule_path(observer_rule), :method => 'delete', :confirm => t("dispatch.delete"), :class => "button" ) %>					
          <%= link_to(t('activate'), activate_admin_observer_rule_path(observer_rule), :method => 'put', :class => "button") %>
          <%= link_to(t('edit'), edit_admin_observer_rule_path(observer_rule), :class => "button") %>
        </div>
        <%= link_to(h(observer_rule.name), edit_admin_observer_rule_path(observer_rule), :class => "item_info") %> 
      <% end %>
    <% end %> 
  <% end %>
<% end %>

<%= render :partial => "/admin/shared/rule_page" %>