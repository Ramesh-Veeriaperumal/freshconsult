<script id="freshplug_listing_template" type="text/x-jquery-tmpl">  
  <div class="fa-sidehead">

    <div class="apptype-head span6">
      <h2 class="pull-left">
        <%= t('marketplace.app_gallery') %>
      </h2>
      <% category = "{{if category_id}}&category_id=${category_id}{{/if}}"%>
      <div class="fa-dd dropdown fa-headd">
        <span class="pull-left fa-cat"></span>
        <a id="dd-categories" class="dropdown-toggle" data-toggle="dropdown"><span id="categoryname" class="selected"> / <%= t('marketplace.all') %> </span> <span class="results">(${extensions.length})&#x200E;</span> <span class="caret"></span></a>
        <ul class="dropdown-menu dd-left dd-categories" role="menu" aria-labelledby="dd-categories" style="z-index:9999;">
            <li role="presentation"><a role="menuitem" class="category" href="#" data-url="<%= admin_extensions_path %>?type=${type}">All</a></li>
            {{each categories}}
              <li role="presentation"><a role="menuitem" class="category" href="#"  data-url="<%= admin_extensions_path %>?type=${type}&category_id=${id}" style="{{if $data.category_id == id}} font-weight: bold {{/if}}">${name}</a></li>
            {{/each}}
        </ul>
      </div>

      <form action="/admin/extensions/search?type=${type}<%=category%>" id="search-extension-form" class="span4">
          <div class="appsearch-box hide">
            <input id="query" name="query" class="search-query" required type="text" placeholder="Search">
            <button class="remove-query" type="reset"><span class="<%= font_class('cross', 16) %>"></span></button>
            <input style="display:none" type="submit" id="search-btn">
          </div>
      </form>
    </div>
  </div>

  <div class="dtl-box head-spacer">
    <div class="fa-content content-box">
      {{if extensions!=""}}
        <div id="freshappslist" class="applist clear">
          {{each extensions}}
            <a href="#" class="fplugs-box" data-url="/admin/extensions/${version_id}?type=${type}<%=category%>">
              <div class="app-ttl">
                <h3 title="${display_name}">${display_name}</h3>
              </div>
              <figure class="figure-box">
                {{if cover_art}}
                  <img src="${cover_art['thumb']}" srcset="${cover_art['thumb']} 1366w, ${cover_art['thumb2x']}" alt="${display_name}" height="100">
                {{else}}
                  <span class="<%= font_class('puzzle', 48, 'assets-missing') %>"></span>
                {{/if}}
                <figcaption class="caption slide-caption">
                  ${description.substr(0, 120)}{{if description.length > 120}}...{{/if}}
                </figcaption>
              </figure>
            </a>
          {{/each}}
        </div>
      {{else}}
        <div class="zero-apps">
          <h5 class="msg"> <%= t('marketplace.no_apps') %> </h5>
        </div>
      {{/if}}

      {{if similar_extensions}}
        <div id="freshappslist" class="clear">
          <h2 class="section-head"> <%= t('marketplace.similar_apps') %> </h2>
          {{each similar_extensions}}
            <a href="#" class="fplugs-box" data-url="/admin/extensions/${version_id}?type=${type}<%=category%>">
              <div class="app-ttl">
                <h3 title="${display_name}">${display_name}</h3>
              </div>
              <figure class="figure-box">
                {{if cover_art}}
                  <img src="${cover_art['thumb']}" srcset="${cover_art['thumb']} 1366w, ${cover_art['thumb2x']}" alt="${display_name}" height="100">
                {{else}}
                  <span class="<%= font_class('puzzle', 48, 'assets-missing plug-logo') %>"></span>
                {{/if}}
                <figcaption class="caption slide-caption">
                  ${description.substr(0, 120)}{{if description.length > 120}}...{{/if}}
                </figcaption>
              </figure>
            </a>
          {{/each}}
        </div>
      {{/if}}

      {{if related_category_extensions}}
        <div id="freshappslist" class="clear">
          <h2 class="section-head"> <%= t('marketplace.related_categories') %> </h2>
          {{each related_category_extensions}}
            <a href="#" class="fplugs-box" data-url="/admin/extensions/${version_id}?type=${type}<%=category%>">
              <div class="app-ttl">
                <h3 title="${display_name}">${display_name}</h3>
              </div>
              <figure class="figure-box">
                {{if cover_art}}
                  <img src="${cover_art['thumb']}" srcset="${cover_art['thumb']} 1366w, ${cover_art['thumb2x']}" alt="${display_name}" height="100">
                {{else}}
                  <span class="<%= font_class('puzzle', 48, 'assets-missing plug-logo') %>"></span>
                {{/if}}
                <figcaption class="caption slide-caption">
                  ${description.substr(0, 120)}{{if description.length > 120}}...{{/if}}
                </figcaption>
              </figure>
            </a>
          {{/each}}
        </div>
      {{/if}}
      
    </div>
  </div>
</script>