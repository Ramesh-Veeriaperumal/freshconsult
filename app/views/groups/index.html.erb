<div class="floatr">
	<%= link_to "<img src='/images/add.png' /> New Group", new_group_path, :class => "fdbutton"  %>
</div>	
<h3 class="title">Groups</h3>
<ul class="admin_list">
	<% @groups.each do |group| %>
	  	<li>
	  		<div class="item_actions">
	  	    	<%= link_to 'edit', edit_group_path(group), :class => "button" %>		
	    		<%= link_to 'delete', group, :confirm => 'Are you sure?', :method => :delete, :class => "button" %>
			</div>
			<%= link_to(h(group.name), edit_group_path(group), :class => "item_info") %>
			<div><%=h(group.description)%></div>
	 	</li>
	<% end %>
</ul>

