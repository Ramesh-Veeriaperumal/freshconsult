<div class="floatr">
	<%= link_to t('group.new'), new_group_path, :class => "uiButton"  %>
</div>	
<h3 class="title"><%=t('group.title')%></h3>
<ul class="admin_list">
	<% @groups.each do |group| %>
	  	<li>
	  		<div class="item_actions">
	  	    	<%= link_to t('edit'), edit_group_path(group), :class => "button" %>		
	    		<%= link_to t('delete'), group, :confirm => "#{t('group.info5')}?", :method => :delete, :class => "button" %>
			</div>
			<%= link_to(h(group.name), edit_group_path(group), :class => "item_info") %>
			<div><%=h(group.description)%></div>
	 	</li>
	<% end %>
</ul>

