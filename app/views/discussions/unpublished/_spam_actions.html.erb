<% popup = params[:action].eql?('topic_spam_posts') %>
<div class="post-action-bar">
		<div class="action-icon" id="approve_<%= post.timestamp.to_i %>">
			<%= link_to '', approve_discussions_unpublished_path(post.timestamp.to_i, :timestamp => post.timestamp, :scope => @moderation_scope.to_s, :popup => popup ),
				:method => :put,
				:class => font_class("checkmark-round", popup ? 24 : 28, "tooltip post-approve"),
				:id => "approve-post_#{ post.timestamp.to_i }",
				:title => t('.approve_tooltip'),
				:"data-track" => 'Action on Unpublished post',
				:"data-event-data" => {:action => 'Publish', :spam => post.spam? }.to_json,
				:"data-hide-before" => 'this',
				:"data-loading" => "approve_#{ post.timestamp.to_i }",
				:"data-loading-classes" => 'sloading loading-small',
				:remote => true
		    %>
		</div>
		<div class="action-icon" id="delete_<%= post.timestamp.to_i %>">
			<%= link_to '', delete_unpublished_discussions_unpublished_path(post.timestamp.to_i, :timestamp => post.timestamp, :scope => @moderation_scope.to_s, :popup => popup, :topic_id => post.topic_id ),
				:method => :delete,
				:class => font_class("trash", popup ? 24 : 28, "tooltip post-delete delete_action"),
				:id => "delete-post_#{ post.timestamp.to_i }",
				:title => t('delete'),
				:"data-track" => 'Action on Unpublished post',
				:"data-event-data" => {:action => 'Delete', :spam => false }.to_json,
				:"data-hide-before" => 'this',
				:"data-loading" => "delete_#{ post.timestamp.to_i }",
				:"data-loading-classes" => 'sloading loading-small',
				:remote => true
			%>
		</div>
	<% unless post.spam? %>
		<div class="action-icon" id="ban_<%= post.timestamp.to_i %>">
			<%= link_to_if privilege?(:delete_contact), "", ban_discussions_unpublished_path(post.timestamp.to_i, :timestamp => post.timestamp, :scope => @moderation_scope.to_s, :popup => popup),
				:method => :put,
				:class => font_class("notice", popup ? 24 : 28, "tooltip post-ban-user"),
				:id => "delete-contact_#{ post.timestamp.to_i }",
				:title => t('.ban_tooltip'),
				:confirm => t('.ban_confirm'),
				:"data-placement" => "left",
				:"data-track" => 'Action on Unpublished post',
				:"data-event-data" => {:action => 'Spam and Ban User', :spam => false }.to_json,
				:"data-hide-before" => 'this',
				:"data-loading" => "ban_#{ post.timestamp.to_i }",
				:"data-loading-classes" => 'sloading loading-small',
				:remote => true
			%>
		</div>
	<% end %>
</div>