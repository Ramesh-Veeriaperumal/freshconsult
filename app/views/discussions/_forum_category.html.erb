<div class="categories-list-page comm-items" id="<%= container_id %>" data-menu-hover-in='li.comm-item' >
	<%= form_for items, :url => action_url, :html => { :method => :put, :class => "form-reorder" } do |f| %>
	  <input name="reorderlist" type="hidden" value="" />
	  <ul class="row-fluid" rel="sortlist">
			<%
				current_cats = (items.select do |cat|
					cat.portal_ids.include?(current_portal.id)
				end).sort do |x,y|
					x.position_in_portal(current_portal) <=> y.position_in_portal(current_portal)
				end
				
				other_cats = items.reject do |cat|
					current_cats.map(&:id).include?(cat.id)
				end
			%>
		  <% (current_cats + other_cats).each do |forum_category| %>
				<% pfc_id = (forum_category.association_with(current_portal) || {})[:id] %>
		  	<% disabled ||= nil %>
		  	<%= content_tag :li, :item_id => pfc_id, :class => "comm-item #{'no_order' if pfc_id.blank?}" do %>
		  		<% if privilege?(:manage_forums) %>
			  		<div class="reorder-icon vertical-alignment handle-reorder">
							<%= font_icon "rearrange", :size => 18, :id => "sortable-icon" %>
						</div>
					<% end %>
				<div class="vertical-alignment reorder-content row-fluid">
			  		<div class="comm-item-main span9 ">
						<div class="comm-item-title">
							<%= pjax_link_to(forum_category.name, discussion_path(forum_category))%>
						</div>
						<div class="comm-item-details muted">
							<%= truncate(forum_category.description, :length => 100)%>
						</div>
					</div>
					<% portal_names = forum_category.portals.reject(&:main_portal).map(&:portal_name) %>
					<% if portal_names.present? %>
						<div class="span1 pt2 muted">
							<%= t('topic.visible_in')%>:
						</div>
						<div class="span2 pt2 portal-list clear-left-margin">

							<%= portal_names.first(2).join('<br />').html_safe %>

							<% if portal_names.size > 2 %>
							<div>
								<span class='show-portals'><span>...</span></span>
								<span class='portals'>
									<%= portal_names[2..-1].join('<br />').html_safe %>
								</span>
							</div>
							<% end %>

					<% end %>
				</div>
		  	<% end %>
		  <% end %>
	  </ul>
	<% end %>
</div>
