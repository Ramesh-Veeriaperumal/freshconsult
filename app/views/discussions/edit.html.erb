<% content_for :layoutType do %>community<% end %>
<% content_for :helpcard do -%>
	<%= render :partial => 'helpnote' %>
<%-end %>
<div class="row-fluid hamburger">
	<%= sidebar_toggle("mt4") %>
	<h3 class="lead"><%= t('edit_forum_category')%></h3>
</div>
<% form_for :forum_category,@forum_category, :url => discussion_url , :html=>{:method=>:put}  do |f| -%>
  <%= f.error_messages %>
  <%= render :partial => "/shared/name_desc", :locals => { :form => f, :type => "edit" } %>
	<div class="button-container">
		<div class="floatl">
			<%= link_to(t('delete'), discussion_path(@forum_category), :method => 'delete', :class => "hide", :id => "delete_forum_category") %>
			<button id="del"
					class="btn"
					data-target="#forum-category-delete-confirmation" 
			 		rel="freshdialog" 
			 		title="<%= t('delete')%>"
			 		data-submit-label="<%= t('delete') %>"
			 		data-width="500px"
			 		data-close-label="<%= t('cancel') %>">
			 		<%= t('delete')%></i>
			 </button>
		</div>
		<%= pjax_link_to(t('cancel'), discussion_path(@forum_category), :class => "btn" ) -%>
	    <%= submit_tag t('save'), { :class => "btn btn-primary",  :action => :update } -%>
	 </div>
	 <div class="hide" id="forum-category-delete-confirmation">
	 	<p class="margin-bottom">
		<% unless (@forum_category.forums.size == 0) && (@forum_category.topics.size == 0) %>
			<%= t('forum_category.delete') %>
			<br />
			<%= t("forum_category.size",
					:no_of_forums => @forum_category.forums.size,
					:no_of_topics => @forum_category.topics.size) %>
		<% else %>
			<%= t('forum_confirm_msg1') %>
		<% end %>
		</p>
	</div>
<% end %>

<% javascript_tag do -%>
	jQuery('#forum-category-delete-confirmation-submit').live('click',function(){
		jQuery('#category-delete-confirmation').hide();
		jQuery('#delete_forum_category').trigger('click');
});
<% end %>