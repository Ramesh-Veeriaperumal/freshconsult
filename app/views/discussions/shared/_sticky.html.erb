<% page ||= :home %>
<% sticky_class ||= "" %>
<div id="sticky_header" class="<%= sticky_class %> btn-collapse" 
      rel="sticky"
      data-scroll-top="true" 
      data-sticky-bottom="true"
      data-class-for-btn-wrapper="inline-block discussion-collapse-btn"
      data-calc-parent-width-on=".sticky_panel"
      data-show-by-default="false"
      data-button-text="<%= t("more") %>">
  <div class="sticky_panel">
	<%= sidebar_toggle %>
    <div class="sticky_left">
	  <% if content_for?(:sticky_left)%>
		<%= yield :sticky_left %>
	  <% else %>
    	<%= discussions_breadcrumb page %>
	  <% end %>
    </div>
	<div class="sticky_right collapse-content">
      <% if content_for?(:sticky_right)%>
      	<%= yield :sticky_right %>
      <% else %>
        &nbsp;
      <% end %>
  	</div>
  </div>
  <div class="sticky_title"><%= yield :sticky_title %></div>
</div>
<div class="clearfix"></div>
