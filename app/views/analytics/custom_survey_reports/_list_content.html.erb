<div class="agentreport">

			<div class="nospace sat-list-title" style="display:inline-block;">
				<%if(params[:category].blank? || params[:category]=="agent") %>
					<% user = User.find_by_id(content[:entity_id])%>
					<%=user_avatar(user)%>
				<%end%>
				<% name = (!params[:category].blank? && params[:category]=="company")? current_account.main_portal[:name] : content[:name]%>
					<div class="floatleft agentname"><%=name%><div><%=content[:title]%></div></div>
			</div>

			<% @rating = content[:rating].sort_by{ |key,val| val } %>
			<div class="floatr overall-rating">
			<div class="sat-priority-rating float:left;">
				<div class="<%=@rating[2][0]%>mediumsmiley mediumsmiley floatleft"></div>
				<%
					rating_per = ((@rating[2][1]*100)/content[:total]).to_f.round
					survey_title = (current_account.survey.title @rating[2][0])
				%>
				<% count_title = (@rating[2][1]==1) ? t('.rating_primary_msg_single', :rating => survey_title) : t('.rating_primary_msg_multiple', :count => @rating[2][1], :rating => survey_title)%>
				<div class="floatleft">
					<span class="bignum"><%=rating_per%>%</span>
					<div class="bottomtext"><%=count_title%></div>
				</div>
			</div>

			<div class="sub_rating floatr">
				<div style="overflow: hidden;">
					<div class="<%=@rating[1][0]%>smallsmiley smallsmiley floatleft"></div>
					<%
						rating_per = ((@rating[1][1]*100)/content[:total]).to_f.round
						survey_title = (current_account.survey.title @rating[1][0])
					%>
					<% count_title = (@rating[1][1]==0) ? t('.rating_msg_none', :rating => survey_title) : (@rating[1][1]==1) ? t('.rating_msg_single', :rating => survey_title) : t('.rating_msg_multiple', :count => @rating[1][1], :rating => survey_title)%>
					<div class="floatleft smileytext"><b><%=rating_per%>%</b>, <%=count_title%></div>
				</div>
				<div style="overflow: hidden;">
					<div class="<%=@rating[0][0]%>smallsmiley smallsmiley floatleft"></div>
					<%
						rating_per = ((@rating[0][1]*100)/content[:total]).to_f.round
						survey_title = (current_account.survey.title @rating[0][0])
					%>
					<% count_title = (@rating[0][1]==0) ? t('.rating_msg_none', :rating => survey_title) : (@rating[0][1]==1) ? t('.rating_msg_single', :rating => survey_title) : t('.rating_msg_multiple', :count => @rating[0][1], :rating => survey_title)%>
					<div class="floatleft smileytext"><b><%=rating_per%>%</b>, <%=count_title%></div>
				</div>
			</div>
		</div>

	</div>

	<%= javascript_tag do %>
		jQuery("#back_to_con").hide();
	<%end%>
