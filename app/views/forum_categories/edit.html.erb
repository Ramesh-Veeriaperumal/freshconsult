<h3 class="title">Edit Forum Category  <span class="sub_title">"<%=@forum_category.name%>"</span>  </h3>
<% form_for :forum_category,@forum_category, :url => category_url , :html=>{:method=>:put}  do |f| -%>
  <%= f.error_messages %>
  <%= render :partial => "/shared/name_desc", :locals => { :form => f, :type => "edit" } %>
	<div class="button-container">
		<div class="floatl">
			<%= link_to( t('delete'), category_path(@forum_category), :method => 'delete', :class => "uiButton red", :confirm => 'Are you sure you want to delete this category'  ) %>
		</div>
	    <%= submit_tag 'Save'[:update], { :class => "uiButton",  :action => :update } -%> 
		<%= link_to('Cancel'[:cancel], categories_path, :class => "uiButton grey" ) -%>
	 </div>
<% end %>

