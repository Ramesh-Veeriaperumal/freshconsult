<% @monitoring = logged_in? && !Monitorship.count(:id, :conditions => ['user_id = ? and active = ?', current_user.id, true]).zero? %>
<div class="clearfix">
	<div class="floatr">
    <% if privilege?(:create_edit_forum_category) -%>  
			<%= link_to(t('reorder'),'#', :id => "forum_categories_reorder_button", :class => "uiButton") unless(@forum_categories.size <= 1)%>
	  		<%= link_to t('category.new'), new_category_path, :class => "uiButton special" %>
		<% end %> 
	</div>
	<h3 class="title"><%= t('forum.title') %></h3>
</div>
<div class="forum_list">
	<div class="forum-group" id="forum_categories_list">
		<div class="search-grey-box">
			<%= render :partial => "/search/pagesearch", :locals => { :placeholder => t('forums.search_all.placeholder'), :url => "/search/topics?search_key=" } %>
		</div>
		<% @forum_categories.each do |forum_category| %>
			<div class="category-title">
				<% if privilege?(:create_edit_forum_category) -%>
					<div class="action_buttons">
				  		<%= link_to  t('forum.new'), new_category_forum_path(forum_category), :class => "last add_new icon" %>
					</div>
				<% end -%>
				<%= link_to h(forum_category.name), category_path(forum_category), :class => "title" %>
			</div>
			<%= render :partial => "forum_shared/category", :object => forum_category %>
		<% end %>
	</div>
</div>
<% if privilege?(:create_edit_forum_category) -%>	
	<%= render :partial => "/shared/reorder_list", :locals => { :items => @forum_categories,  :action_url => reorder_categories_path, :title => :name, :container_id => "forum_categories_sort", :reorder_id => "forum_categories_reorder_button", :list_id => "forum_categories_list"} %>
<% end %>

