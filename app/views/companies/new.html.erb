<% content_for :sidebar do -%><%- end %>
<% form_for @company, :url => { :controller => "companies", :action => "create_company" },
					:html => { :multipart => true, :rel => "validate", :class => 'form-unsaved-changes-trigger'}  do |f| %>
	<div class='page-header-sticky' rel='sticky'>
		<div class='sticky-header-wrapper'>
			<h3 class='lead pull-left'> 
				<%= t('company.new') %> 
			</h3>
		<div class="pull-right company-btns">
				<%= link_to t('cancel'), companies_path(), :class => "btn" %>
				<%= f.submit t('save'), :class => "btn btn-primary" %> 
			</div>
		</div>
	</div>
	<br/>
	<%= render :partial => "form", :locals => { :f => f } %>
	<div class="pull-right mt20">
	  <%= link_to t('cancel'), companies_path(), :class => "btn" %>
	  <%= f.submit t('save'), {:class => "btn btn-primary"} %> 
	</div>
<% end %>