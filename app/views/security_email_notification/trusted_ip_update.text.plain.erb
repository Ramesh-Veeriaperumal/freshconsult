<%= t("mailer_notifier.hi") %>

<% if @changes and @changes[1] %>

	<%= t("mailer_notifier.security_notification.trusted_ip_enabled", count: @model.ip_ranges.size) %>
	<% @model.ip_ranges.each do |ip_range| %>
	<%= ip_range["start_ip"] %>  -  <%= ip_range["end_ip"] %>
	<% end %>

	<%= t("mailer_notifier.security_notification.trusted_ip_actor_change", user_name: @doer, time: @time) %>
<% elsif @changes %>
	<%= t("mailer_notifier.security_notification.trusted_ip_disabled") %>

	<%= t("mailer_notifier.security_notification.trusted_ip_actor_change", user_name: @doer, time: @time) %>
<% else %>

	<%= t("mailer_notifier.security_notification.trusted_ip_modified", count: @model.ip_ranges.size) %>
	<% @model.ip_ranges.each do |ip_range| %>
	<%= ip_range["start_ip"] %>  -  <%= ip_range["end_ip"] %>
	<% end %>

	<%= t("mailer_notifier.security_notification.trusted_ip_actor", user_name: @doer, time: @time) %>
<% end %>

<%= render :partial => "footer_plain", :formats => [:html] %>
