<%= t("mailer_notifier.hi") %><br><br>

<% if @changes and @changes[1] %>

	<%= t("mailer_notifier.security_notification.trusted_ip_enabled", count: @model.ip_ranges.size) %>
	<ul>
		<% @model.ip_ranges.each do |ip_range| %>
		<li> <%= ip_range["start_ip"] %>  -  <%= ip_range["end_ip"] %> </li>
		<% end %>
	</ul>

	<%= t("mailer_notifier.security_notification.trusted_ip_actor_change", user_name: @doer, time: @time) %><br><br>

<% elsif @changes %>
	<%= t("mailer_notifier.security_notification.trusted_ip_disabled") %>

	<%= t("mailer_notifier.security_notification.trusted_ip_actor_change", user_name: @doer, time: @time) %><br><br>
<% else %>

	<%= t("mailer_notifier.security_notification.trusted_ip_modified", count: @model.ip_ranges.size) %>
	<ul>
		<% @model.ip_ranges.each do |ip_range| %>
		<li> <%= ip_range["start_ip"] %>  -  <%= ip_range["end_ip"] %> </li>
		<% end %>
	</ul>

	<%= t("mailer_notifier.security_notification.trusted_ip_actor", user_name: @doer, time: @time) %><br><br>

<% end %>
<br>

<%= render :partial => "footer" %>
