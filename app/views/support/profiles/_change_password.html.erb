<%= form_for :profile, :url => change_password_profile_path(@profile.id), 
			:html => { :rel => "validate" } do |f| %>
	<%= hidden_field_tag 'user_id', params[:id] %>
	<fieldset>
		<input class="required" id="current_password" name="user[current_password]" 
			size="30" type="password" autocomplete="off" placeholder="<%= t("profile.current_password") %> *" />
		<input class="required password" id="password" name="user[password]"
			size="30" type="password" autocomplete="off" placeholder="<%= t("profile.new_password") %> *" />
		<input class="required password_confirmation" id="password_confirmation" name="user[password_confirmation]" 
			size="30" type="password" autocomplete="off" placeholder="<%= t("profile.confirm_password") %> *" /> 
	</fieldset>
	<%= submit_tag t("profile.change_password"), :class => "btn btn-small" %>
<% end %>