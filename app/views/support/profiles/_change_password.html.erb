<% form_for @profile, change_password_profile_path(@profile), 
			:html => { :class => "form-portal", :rel => "validate"  } do |f| %>
	<%= hidden_field_tag 'user_id', params[:id] %>
	<fieldset>
		<div class="control-group">
			<label class="control-label required" for="current_password"><%= t("profile.current_password") %></label> 
			<div class="controls">
				<input class="required" id="current_password" name="user[current_password]" size="30" type="password" /> 
			</div>
		</div>
		<div class="control-group">
			<label class="control-label required" for="password"><%= t("profile.new_password") %></label> 
			<div class="controls">
				<input class="text required" id="password" name="user[password]" size="30" type="password" /> 
			</div>
		</div>
		<div class="control-group">
			<label class="control-label required" for="password_confirmation"><%= t("profile.confirm_password") %></label> 
			<div class="controls">
				<input class="text required" id="password_confirmation" name="user[password_confirmation]" size="30" type="password" /> 
			</div>
		</div>
	</fieldset>
	<%= submit_tag t("profile.change_password"), :class => "btn" %>
<% end %>