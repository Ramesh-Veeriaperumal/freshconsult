<% form_for :user, :url => {:controller => 'support/registrations', :action => 'create' }, :html => { :class => "form-horizontal" } do |f| -%>
	<%= error_messages_for :user %>
	<%= hidden_field_tag "user[user_role]", User::USER_ROLES_KEYS_BY_TOKEN[:customer], :id => "user[user_role]" %>
	<fieldset>
		<div class="control-group"> 
			<label class="control-label" for="user_name"><%=t('user.full_name')%></label> 
			<div class="controls">
				<input class="text" id="user_name" name="user[name]" size="30" type="text" value="" /> 
			</div>
		</div>
		<div class="control-group"> 
			<label class="control-label" for="email_primary"><%=t('user.email')%></label> 
			<div class="controls">
				<input class="text required email" id="email_primary" name="user[email]" size="30" type="text" />
			</div>
		</div>
		<div class="control-group"> 
        	<%= content_tag ( :label, t('ticket.verify_human'), :class => "control-label" ) %>
        	<div class="controls">
        		<%= recaptcha_tags :display => { :theme => "white" }, :ssl => current_account.ssl_enabled? %>
        	</div>
      	</div>
	</fieldset>
	<div class="form-actions">	
		<%= submit_tag "Register", { :class => "btn btn-primary" } -%> 
		<%= link_to(t('cancel'), '/home', :class => "btn" ) -%>
	</div>
<% end -%>
