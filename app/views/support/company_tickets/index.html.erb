<% content_for :sidebar do -%>
	<div class="sidepanel">
		<h4 class="title"><%= current_user.customer.name %></h4>
		<ul class="ui-list_with_icon">
			<li><%= link_to(t('helpdesk.tickets.views.all_tickets'), "/support/company_tickets" ) %></li>
			<li><%= link_to(t('helpdesk.tickets.views.open_or_pending'),"/support/company_tickets/filter/open_or_pending" ) %></li>
			<li><%= link_to(t('helpdesk.tickets.views.resolved_or_closed') ,"/support/company_tickets/filter/resolved_or_closed" ) %></li>
		</ul>
		<% unless current_user.customer.users.empty? %>
			<span class="seperator"></span>
			<h4 class="title">Tickets by</h4>
			<ul class="ui-list_with_icon">
				<% current_user.customer.users.each do |contact|%>
					<li>
						<%= link_to(contact.name ,"/support/company_tickets/requester/#{contact.id}" ) %>
					</li>	
				<% end %>
			</ul>
		<% end %>
		</br>
	</div> 
<%- end %>
<h3 class="title"><%= @page_title %></h3>
  <%= link_to("Export", { :action => "configure_export", :a=>params[:action], :i=>params[:id] }, :class => "ssp_export dialog2", :title => "Export to CSV", "data-width" => "650" ) unless @tickets.empty? %>
<div id="ticket-sub-toolbar">
  <%@items = @tickets%>
  <%= render :partial => "/support/shared/ticket_sort", :locals=>{:is_portal=>true} unless @tickets.empty? %>
</div>

<div id="ticket-list">
	<%= render :partial => "/support/shared/ticket_list_view"  %>
</div>

<% javascript_tag do %>
  jQuery('.wf_order_type, .wf_order').live("click", function(ev){
      ev.preventDefault();
      document.cookie = this.className+"="+this.getAttribute(this.className)
      jQuery("#ticket-list").html("<div class='loading-box'></div>"); 
      jQuery.ajax({
        url: "/support/tickets/filter/<%=current_filter%>?partial=true",
        type: "POST",
        dataType: "script",
        success: function(msg){ 
        }
      }); 
    jQuery(this).hide();  
  }); 
<%end%>
