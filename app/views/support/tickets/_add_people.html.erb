<% if helpdesk_ticket?(@ticket) %>
<div id="add-people" class="hide">
	<div class="alert"><%= t('portal.tickets.add_or_remove_emails') %></div>
	<%= form_for @ticket, :url => add_people_support_ticket_path(@ticket.display_id), :method => :put, 
			:html => { :rel => "validate" } do |f| %>	

		<%= f.fields_for :cc_email do |cc| %>
			<%= cc.text_field :reply_cc,
					:value => (@ticket.cc_email[:reply_cc].join(',') if 
						(@ticket.cc_email.present? && @ticket.cc_email[:reply_cc].present? )),
					:class => "span12", :id => "cc_emails" %>
		<%end%>
	<% end %>
</div>
<% end %>