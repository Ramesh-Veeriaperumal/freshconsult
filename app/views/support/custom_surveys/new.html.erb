<%= stylesheet_link_tag_with_rtl :'cdn/survey' %>

<link href="<%= helpdesk_theme_url %>" media="screen" rel="stylesheet" type="text/css">

<%= javascript_include_tag :'cdn/survey'  %>

<% if @survey_preview %>
  <div class = "satisfaction_survey_wrapper">
  	<%= render partial: 'layouts/shared/preview_from_and_email' %>
	<%= render partial: 'layouts/shared/survey', locals: { survey_handle: nil, rating: nil, language: @survey_language, translation_record: @translated_survey, preview: @survey_preview, survey: @survey }  %>
  <div>
<% elsif @survey_questions_preview %>
	<%= render partial: 'layouts/shared/survey_questions', locals: { preview: @survey_questions_preview, survey: @survey, language: @survey_language, translation_record: @translated_survey, rating: nil, survey_handle: nil, rating_via_handle: nil, survey_code: nil, source: nil }  %>
<% else %>
	<%= render partial: 'layouts/shared/survey_questions', locals: { preview: false, survey: nil, language: @survey_language, translation_record: @translated_survey, rating: @rating, survey_handle: @survey_handle, rating_via_handle: @rating_via_handle, survey_code: @survey_code, source: @source }  %>
<% end %>
