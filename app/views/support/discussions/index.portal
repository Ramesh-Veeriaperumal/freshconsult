<section class="main">
	<div class="content rounded-6 min-height-on-desktop">
		<a href="{{portal.new_topic_path}}" class="post-question"><b>Start a new topic</b></a>
		<h2>Community forums</h2>
		{% for category in portal.forum_categories %}	
			<div class="cs-s">
				<h3>{{category.name}}</h3>
				<div class="cs-g-c">
				{% for forum in category.forums %}
					<section class="cs-g topic-list">
						<div class="list-lead">
							<i class="badge-{{forum.type_name}}"></i>
							<a href="{{forum.url}}">{{forum.name}} ({{ forum.topics | size }})</a>
						</div>
						<ul>
							{% for topic in forum.topics limit:5 %}
							<li>
								<div class="ellipsis">
									<a href="{{topic.url}}">{{topic.title}}</a>
								</div>
								<p class="help-text">
									posted by {{ topic.user.name }}, {{ topic.created_on | time_ago }} <br />
									{% if topic.has_comments %}
										<a href="{{topic.last_post.url}}">Last reply</a>
										by {{ topic.last_post.created_on | time_ago }}
									{% endif %}
								</p>
							</li>
							{% endfor %}
						</ul>
						{% if forum.topics.size > 5 %}
							<a href="{{forum.url}}" class="see-more">See all {{ forum.topics | size }} topics</a>
						{% endif %}
					</section>
				{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
</section>
