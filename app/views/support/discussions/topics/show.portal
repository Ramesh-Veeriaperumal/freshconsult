<h3 class="page-title">{{ topic.title }}</h3>
<hr />
<section class="forum-topic forum-details">	
	<div class="user-pic-normal"><img src="{{ topic.first_post.user.profile_url }}" /></div>
	<p class="help-text">
		Posted by <strong>{{ topic.first_post.user.name }}</strong>
		on {{ topic.first_post.created_on | long_day }}
	</p>
	<div>{{ topic.first_post.body_html }}</div>
</section>
<hr />
<div class="align-right">
	<a href="#" class="btn">I like this idea</a>
	<a href="#" class="btn btn-primary">Reply to this topic</a>
</div>
<h4>Comments</h4>
<hr />
{% for post in topic.posts offset:1 %}
<section class="forum-details">	
	<div class="user-pic-normal"><img src="{{ post.user.profile_url }}" /></div>
	<p class="help-text"><strong>{{ post.user.name }}</strong> on {{ post.created_on | long_day }}</p>
	<div>{{ post.body_html }}</div>
</section>
<hr />
{% endfor %}