{% for category in portal.forum_categories %}	
	<h1 class="page-title">{{category.name}}</h1>	
	<p class="help-text">{{category.description}}</p>
	<div class="forum-category">
	{% for forum in category.forums %}
		<div class="forum-group {% cycle 'odd', 'even' %}">
			<a href="{{ forum.url }}">
				<span class="font-icon icon-forum-{{forum.type_name}}"></span>
				<h4>{{ forum.name }}</h4>
				<div class="help-text">
					{{ forum.description }}
				</div>
				<div class="more-items">{{ forum.topics.size }} topics</div>
			</a>
		</div>
	{% endfor %}
	</div>
	<hr />
{% endfor %}