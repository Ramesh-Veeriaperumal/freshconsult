<!DOCTYPE html>
<html>
<head>
	<%= include_cloudfront_css :rating %>
	<%= include_cloudfront_js :survey  %>
</head>
<body>	
	<div class="top-strip" style="background-color:<%=@account.main_portal.preferences[:header_color]%>">
		<div class="wrapper">
			<div class="brand">
		    	<% link_to (portal_pref(@account.main_portal, :logo_link).empty?) ? "/home" : portal_pref(@account.main_portal, :logo_link), :class => "logo" do %>
		        <%= image_tag (@account.main_portal.logo.nil? ? "/images/logo.png?722013" : @account.main_portal.logo.content.url(:logo)) %>

		        <% end %>
		        <%= link_to(@account.main_portal.name, "/home", :class => "logo_text") %>
	    	</div>
    	</div>
	</div>
	
	<div class="wrapper">		
		<div class="position">
			<div class="pointer"></div>
			<div class="highlighter">
				<div class="smily">
					<% rating_img = (@rating==Survey::HAPPY) ? "happy" : (@rating==Survey::UNHAPPY) ? "unhappy" : "neutral" %>
					<i class="smiley-<%=rating_img%>"></i>
				</div>
				<div>
				<%if @rating==Survey::HAPPY%>	
					<h1><%= t('.thanks') %></h1>
					<h2><%= t('.happy_info') %></h2>
				<%elsif @rating==Survey::UNHAPPY%>
					<h1><%= t('.thanks') %> <%= t('.sorry') %></h1>
					<h2><%= t('.unhappy_info') %></h2>					
				<%else%>
					<h1><%= t('.thanks') %></h1>
					<h2><%= t('.neutral_info') %></h2>	
				<%end%>
				</div>
			</div>
		</div>
	 	
		<div class="clear"></div>
		<div>
			<div class="search-bar">
				<p class="search-top"><%= t('.additional_info') %></p>
				<% form_for :survey_handle, :url  => support_survey_feedback_path(@survey_handle.id_token, @rating), :html => { :method => :post, :id => "survey_form" } do |f| -%>
					<div class="text_con">
						<%= text_area(:survey, :feedback, :autocomplete => "off", 
							:rel => "ghostwriter", :size => "24", :width => "100%", 
							:class=> "textfield required") %>
					</div>	
					
					<div>						
						<%= f.submit t('.send'), :class => "button button-text" %>
					</div>
				<%end%>		
			</div>
		</div>

	</div>	
	<script> $("#survey_form").validate(); </script>
</body>
</html>