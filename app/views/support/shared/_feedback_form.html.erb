
<h4 class="title"><%= t('support.shared.info1') %></h4>
<% form_for :ticket, :url => create_ticket_support_article_path, :html => { :method =>:post, :id => "feedback_form" }  do |f|    %>
  <%= hidden_field_tag "meta[user_agent]", request.env["HTTP_USER_AGENT"] %>
  <%= hidden_field_tag "helpdesk_ticket[subject]", "Feedback for #{article.title}" %>
  <ul class="ui-form">
  <li>
  <label id="requester-label"><%= t('support.shared.email') %></label>
  <input type="text" id="helpdesk_ticket[email]" class="text required email" name="helpdesk_ticket[email]"></input>
  </li> 
  <li>
  <label id="description-label"><%= t('support.shared.comments') %></label>
  <%= text_area_tag "helpdesk_ticket[description]" %>
  </li>
 </ul>
  <span class="seperator"></span>
  <%= submit_tag t('support.shared.send_feedback'), :class => "uiButton" -%> 
<% end %>
 <% javascript_tag do %>
  	jQuery("#feedback_form").validate({
		submitHandler: function(form) {
		   	jQuery(form).ajaxSubmit({success: showResponse});
		}
	});
	function showResponse(response, status){
		jQuery("#article_voting").html(response);
	}
  <% end %>
