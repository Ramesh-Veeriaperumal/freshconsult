
<script id="multiple-file-list-template" type="text/x-jquery-tmpl">
    {{if (file_valid)}}
      {{if (!provider)}}
        <div id="${attachment_id}" class="clearfix" style="margin: 0px;padding: 5px;width:500px;">
        <div id="${attachment_id}" class="clearfix multiple-file-names-wrap">
                <a class="attachment-close"  href="javascript:void(0)" 
                onclick="Helpdesk.MultifileUpload.removeAttachments(this); return false;" 
                data-input="${inputId}" data-size="${size_in_bytes}" data-attachment="${attachment_id}" style="float: left;">
                </a>
                <div id="files" class="multiple-file-names">
                {{each files}}
                        <div   title="${name}" class="pl10">  ${short_name} {{if (size != '0' && size != '0.00 KB ') }}( ${size} ){{/if}}</div>
                {{/each}}
                </div>
        </div>
    {{/if}}
   {{/if}}
    {{if (provider)}}
        <div id="${attachment_id}" class="clearfix" style="margin: 0px;padding: 5px;">

                <a class="attachment-close"  href="javascript:void(0)" 
                onclick="Helpdesk.MultifileUpload.removeCloudFiles(this); return false;" 

                data-input="${inputId}" data-size="${size_in_bytes}" inputId="${attachment_id}" 
                data-name="${name}" style="float: left;">
                </a>
                <div id="files" style="border-left: 1px solid rgba(204, 204, 204, 0.51);float:left;">
                    <p>
                        &nbsp;&nbsp;&nbsp; <span  class="" title="${name}">  ${name} {{if (size != '0' && size != '0.00 KB ') }}( ${size} ){{/if}}</span>
                    </p>
                </div>
        </div>
        {{/if}}
    {{if (!file_valid)}}
        <div class="item invalid_files">
            <div class="file-types-def">
                <%= content_tag(:b, t('helpdesk.tickets.note.attachment_size.exceeded', :attachment_limit => current_account.attachment_limit), 
                                :class => "alert-text", 
                                :title => t('helpdesk.tickets.note.attachment_size.exceed_limit')) %>
            </div>
        </div>
    {{/if}}
</script>

