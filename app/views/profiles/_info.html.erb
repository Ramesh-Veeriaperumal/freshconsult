<div>
	<%= user_avatar(@user_info) %>
	<div class="hovercard" >
		<div><strong><%= @user_info.display_name %></strong></div>
		<% unless @user_info.job_title.blank? %><div class="smalltext"><%= h @user_info.job_title %><% end %>
		<% if @user_info.job_title.blank? && !@user_info.customer.blank? %>
			<%= t("working") %>
		<% end %>
		<% unless @user_info.customer.blank? %>
			<%= t("at") %> <%= link_to(h(@user_info.customer.name), @user_info.customer)  %></div>
		<% end %>
		<% unless @user_info.email.blank? %><div><%= @user_info.email %></div><% end %>
		<% unless @user_info.phone.blank? %><div><%= @user_info.phone %></div><% end %>
	</div>
</div>