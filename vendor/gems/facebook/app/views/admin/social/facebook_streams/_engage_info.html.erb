<% content_for :sidebar do -%>&nbsp;<%-end %>
<h3 class="lead"><%=t('social.facebook_pages.engage_info.title')%></h3>
<ul class="ui-form">
  <li class="inline-field">
	  <div class="row-fluid admin_help_image">
      <div class="span4"><%= get_img("facebook-admin-page.png", :help) %></div>
      <div class="span8">
        <h2 class="title"><%=t('social.facebook_pages.engage_info.engage_customers')%></h2>
       	<p class="info-data">
       		<%=t('social.facebook_pages.engage_info.associate_account', :account_name => current_account.name).html_safe%>
        </p>
        <% if @associated_fb_pages %>
          <%= link_to t('.add_page').html_safe, "#pages_dialog", :id => "new_page_dialog", :class => "btn btn-primary btn-large", :rel => "freshdialog", "data-width" => "600px", "data-submit-label" => "Associate", :title => "Associate" %>
        <% else %>
          <a href="<%= @auth_redirect_url %>" class="btn btn-primary btn-large"><%=t('.add_facebook')%></a>
        <% end %>
      </div>
    </div>
  </li>
</ul>
