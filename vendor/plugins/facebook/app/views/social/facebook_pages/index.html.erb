<% content_for :onload_script do %>
if(jQuery('#got_pages').length){
  jQuery('#new_page_dialog').trigger('click');
}
<% end %>
<% content_for :sidebar do -%><%-end %>
<% unless @fb_pages.empty? %>
  <div class="list-page facebook-list">
    <div class="list-page-header row-fluid"> 
      <h3 class="lead span6"><%= t('.title') %></h3>
      <span class="span6">
        <% if @new_fb_pages %>
        <%= link_to t('facebook.add_page').html_safe, "#pages_dialog", :id => "new_page_dialog", :class => "btn btn-primary pull-right special medium", :rel => "freshdialog", "data-width" => "600px", "data-submit-label" => "Associate", :title => "Associate Facebook Page" %>
        <% else %>
        <%= link_to t('facebook.add_page').html_safe, @fb_client.authorize_url(session[:state]), :class => "btn btn-primary pull-right special medium" %>
        <% end %>
      </span>
    </div>
      <% @fb_pages.each do |profile_id, pages| %>
          <div>
           fb: <%= @fb_client.profile_name(profile_id, pages["facebook_pages"].first)%>
          </div>
          <!-- <div>
            <%=t('facebook.realtime',:realtime_url => @fb_client.authorize_url(session[:state])).html_safe%>
          </div> -->
          <% if pages["tab"] && pages["feature"] %>
            <div class="alert">
              <%= t('facebook_tab.page_tab_auth',:page_tab_url => @fb_client_page_tab.authorize_url(session[:state])).html_safe %>
            </div>
          <%end%>
        <br/>
        <div class="list-page-body"> 
          <table class="table table-striped">
            <%pages["facebook_pages"].each do |page| %>
            
            <tr>
              <td>
                <div class="preview_pic">
                  <%= image_tag page.page_img_url, :alt => page.page_name if page.page_img_url %>
                </div>
              </td>
              <td>
                <%= link_to "#{page.page_name}", edit_social_facebook_url(page), :class => "item_info" %> 
                <%if page.reauth_required %>
                  <span class="label label-important align-fix"> <%=t(".reauth_required").html_safe%></span>
                <%end%>
                <div class="muted">
                  <%= link_to "View on facebook", page.page_link, { :target => "_blank", :class =>"muted" } %>        
                </div> 
              </td>
              <td class="text-right">
                <%=content_tag("span","", :class => 'symbols-issue tooltip', :title=> t('facebook_tab.page_tab_info')) if page.page_token_tab && page.page_token_tab.empty? %>
                <%= link_to(t(".reauthorize").html_safe,  @fb_client.authorize_url(session[:state]), :class => "btn btn-mini") if page.reauth_required %>
                <%= link_to t("edit"),  edit_social_facebook_url(page), :class => "btn btn-mini" %>
                <%= link_to("<i class='icon-trash'></i>".html_safe, social_facebook_path(page), :method => 'delete', :confirm => "Are you sure you want to remove this facebook page?", :class => "btn btn-mini" ) %> 
              </td>
            </tr>
           
            <% end %>
          </table>
        </div>
        <br/>

      <% end %>
        
  </div>
<% else %>
  <%= render :partial => "engage_info" %>
<% end %>
<div id="pages_dialog" class="hide">
  <% if @new_fb_pages %>
    <%= render :partial => 'enable_facebook_page'%>
  <% end %>
</div>
