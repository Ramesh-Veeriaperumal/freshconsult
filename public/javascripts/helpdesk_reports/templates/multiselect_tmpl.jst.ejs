<div id="div_ff_<%=condition%>" class="ff_item filter-field" data-type="filter-field" condition="<%=condition%>" operator="<%=operator%>" container="<%=container%>" type="<%=field_type%>" data-label="<%=name%>">
  <% filter_type = I18n.t(name.toLowerCase(),{scope: 'helpdesk_reports', defaultValue: name}) %>
	<label class="control-label"><%=filter_type%></label>
	<% if(HelpdeskReports.CoreUtil.filter_remote.indexOf(condition) < 0){ %>
		<select multiple="multiple" class="filter_item" id="<%=condition%>" name="<%=condition%>[]">
			<% for (i=0; i<	options.length; i++) {  %>
		    	<option value="<%=options[i][0]%>"><%=options[i][1]%></option>
		 	<% } %>
		</select>
	<% } else { %>
		<input type="hidden" id="<%=condition%>" style="width:100%" class="input-xlarge filter_item" />
	<% } %>
	<% if(condition == "tag_id") {%>
		<span class="tag-selection-block hide" data-action="pop-tag-menu" >
			<span class="select-title">
				contains any
			</span>
		</span>
		<span class="tag-dropdown-arrow hide"></span>
		<div class="tags-menu hide">
				<ul>
					<li class="active" data-operator="any">contains <span class="bold">any</span></li>
					<li data-operator="and">contains <span class="bold">all</span></li>
					<li data-operator="is_not_in">contains <span class="bold">none</span></li>
				</ul>
		</div>
	<% } %>
	<% if(HelpdeskReports.CoreUtil.default_available_filter.indexOf(condition) < 0){ %>
		<i class="ficon-cross fsize-14 " size="14" data-action="remove-field"></i>
	<% } %>
</div>