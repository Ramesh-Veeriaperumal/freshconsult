<%

    var populateAverageData = function(data,i,j,metrics){
        var tmpl = "";

        var metric_data, td_class;
        var current_data = data[metrics[j]];
        if (consts.percentage_metrics.indexOf(metrics[j]) > -1) {
            metric_data = HelpdeskReports.CoreUtil.addsuffix(current_data);
        } else if (consts.time_metrics.indexOf(metrics[j]) > -1) { 
            metric_data = HelpdeskReports.CoreUtil.timeMetricConversion(current_data);
        } else { 
            metric_data = HelpdeskReports.CoreUtil.shortenLargeNumber(current_data, 1);
        }

        var tmpl =  "<td class='disable'>" + 
            metric_data + "</td>";

        return tmpl;
    } 

