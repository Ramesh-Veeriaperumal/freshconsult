<div id="div_ff_<%=condition%>" class="search-fields-widget ff_item filter-field" data-prop="<%= condition %>" data-type="filter-field" condition="<%=condition%>" container="<%=container%>" type="<%=field_type%>" data-label="<%=name%>">
	<label class="control-label"><%=name%></label>
	<select class="select2 dropdown nested_field" id="<%=field_id%>_category" name="<%=condition%>">
		<option value="">...</option>
		<% for (i=0; i<	options.length; i++) { %>
	    	<option value="<%=options[i][0]%>"><%=options[i][1]%></option>
	 	<% } %>
	</select>
	<i class="ficon-cross fsize-14 " size="14" data-action="remove-field"></i>

	<%if (nested_fields.length > 0) { %>
		<div id="div_ff_<%=nested_fields[0]['condition']%>" class="level_2 nested-input ff_item" condition="<%=nested_fields[0]['condition']%>" operator="<%=nested_fields[0]['operator']%>" container="nested_field" data-label="<%=nested_fields[0]['name']%>">
			<label class="control-label"><%=nested_fields[0]['name']%></label>
			<select class="select2 dropdown nested_field" name="<%=nested_fields[0]['name']%>" id="<%=field_id%>_sub_category">
				<option value="">...</option>
			</select>
		</div>
	<% } %>

	<%if (nested_fields.length > 1) { %>
		<div id="div_ff_<%=nested_fields[1]['condition']%>" class="level_3 nested-input ff_item" condition="<%=nested_fields[1]['condition']%>" operator="<%=nested_fields[1]['operator']%>" container="nested_field" data-label="<%=nested_fields[1]['name']%>">
			<label class="control-label"><%=nested_fields[1]['name']%></label>
			<select class="select2 dropdown nested_field" name="<%=nested_fields[1]['name']%>" id="<%=field_id%>_item_sub_category">
				<option value="">...</option>
			</select>
		</div>
	<% } %>
</div>